@model FormModel

@{
    ViewBag.Title = Model.Translate("Global") + " - " + Model.Translate("Service Request Details");
}

@section Validation {

    @Html.Partial("_Validate", Model)

}

@section Script {

    <script>

        validate.run($('#actionState').val());

        $(document).on('change', '#actionState', function (e) {
            var val = $(this).val();
            validate.run(val);
        });

    </script>

}

@Html.Partial("_Edit", Model)
