@using System.Globalization

@model DH.Helpdesk.Web.Models.Questionnaire.Input.EditQuestionnaireModel

<div class="tab-content">
    <div class="tab-pane tab-pane-border active" id="fragment-1">
        <div class="container">
            <h4>@Translation.Get("Frågor", Enums.TranslationSource.TextTranslation)</h4>
            <div class="row">
                <div class="span100">
                    <table id="tblQuestions" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <td style="cursor: pointer; cursor: hand;width: 2%" >
                                     
                                </td>
                                <th style="cursor: pointer; cursor: hand;width: 10%" >
                                    @Translation.Get("Tal", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th style="cursor: pointer; cursor: hand;width: 88%">
                                    @Translation.Get("Fråga", Enums.TranslationSource.TextTranslation)
                                </th>                               
                            </tr>
                        </thead>
                        <tbody>                            
                            @foreach (var item in Model.Questions)
                            {                               
                                <tr>
                                    <td> <img src="@Url.Content("~/Content/img/" + @item.LanguageId.GetLanguageIconFileName() )"  />  </td>
                                    <td>
                                        <a href="@Url.Action("EditQuestionnaireQuestion", "Questionnaire", new {questionnaireId = Model.Id, questionnaireQuestionId = item.Id, languageId = item.LanguageId})">
                                            @Html.DisplayFor(itemmodel => item.QuestionNumber)
                                        </a>                                                                                                                                                                                       
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditQuestionnaireQuestion", "Questionnaire", new {questionnaireId = Model.Id, questionnaireQuestionId = item.Id, languageId = item.LanguageId})">
                                            @Html.DisplayFor(itemmodel => item.Question)
                                        </a>
                                    </td>                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(function() {
        $("#languageList").change(function() {
            var selectedItem = $(this).val();
            window.location.href = '@Url.Action("EditQuestionnaire","Questionnaire")?questionnaireId=' + @Model.Id.ToString(CultureInfo.InvariantCulture) +
                "&languageId=" + selectedItem; 
        });
    });
</script>


 