@model DH.Helpdesk.Web.Models.Inventory.EditModel.Inventory.InventoryEditViewModel
@using (Html.BeginForm("EditInventory", "Inventory", FormMethod.Post, new { id = "inventory_edit_form" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li id="menu1">
                    <input type="submit" value="@Translation.Get("Spara")" class="btn" onclick=" $('#inventory_edit_form').submit(); "/>
                </li>
                <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt"), "Index", null, new { @class = "btn" })</li>
                <li id="menu3">@Html.ActionLink(Translation.Get("Ta bort"), "DeleteInventory", new { id = Model.InventoryViewModel.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="inventory_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get(Model.InventoryViewModel.Name)</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.EditorFor(m => m, "Inventory/Inventory")
                    <table class="tableform">
                        @if (Model.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Show)
                        {
                            <tr>
                                <th colspan="2" class="header">@Translation.Get("Tillbehör till")</th>
                            </tr>
                            <tr>
                                <td class="span3">
                                    <label>@Translation.Get(Model.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Caption)</label>
                                </td>
                                <td class="span9">
                                    @Html.DisplayFor(m => m.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Value)
                                </td>
                            </tr>
                        }
                        <tr>
                            <th colspan="2" class="header">@Translation.Get("Status")</th>
                        </tr>
                        <tr>
                            <td class="span3">
                                <label>@Translation.Get("Skapad datum")</label>
                            </td>
                            <td class="span9">
                                @Html.DisplayFor(m => m.InventoryViewModel.ChangeDate, "Date")
                            </td>
                        </tr>
                        <tr>
                            <td class="span3">
                                <label>@Translation.Get("Senast ändrad datum")</label>
                            </td>
                            <td class="span9">
                                @Html.DisplayFor(m => m.InventoryViewModel.CreatedDate, "Date")
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.InventoryViewModel.Id)
    @Html.HiddenFor(m => m.InventoryViewModel.InventoryTypeId)
}

