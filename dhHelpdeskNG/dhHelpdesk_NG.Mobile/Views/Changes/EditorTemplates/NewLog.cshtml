
@model DH.Helpdesk.Web.Models.Changes.ChangeEdit.LogModel
 
@if (Model.Logs.Value == null)
{
    return;
}

<table class="tableform">
    <tr>
        <td class="span3">
            <label>@Translation.Get("Log Note")</label>
        </td>
        <td class="span9">
            @Html.TextAreaFor(m => m.Logs.Value.Text)
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            @Html.Partial("_SendToDialog", Model.Logs.Value.SendToDialog, new ViewDataDictionary(new ViewDataDictionary { { "Id", "log_send_to_dialog" }, { "Callback", "fillLogSendLogNoteToEmailsTextArea" } }))
            @Html.TextAreaFor(m => m.Logs.Value.Emails, new { id = "log_send_to_emails_textarea", @readonly = "readonly" })
            <a id="log_send_to_button" class="btn">
                @Translation.Get("Send to...")
            </a>
        </td>
    </tr>
</table>