@model DH.Helpdesk.Mobile.Areas.Admin.Models.CausingPart.CausingPartsViewModel
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.Get("Lägg till") + " " + Translation.Get("Causing Part"), "New", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Causing Part") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover" id="tblproductarea">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Causing Part")
                            </th>
                            <th>
                                @Translation.Get("Aktiv")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.CausingPartsTree(Model.CausingParts)                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
