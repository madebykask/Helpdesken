@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.InfoTextIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="secnavs fixed">
    
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Informationstext", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover" id="tblinfotext">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Informationstext", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 1, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Självservice", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 2, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Ny anmälare", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 4, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Enkät", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 5, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Bekräftelse självservice", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 6, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Information självservice", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 7, customerId = Model.Customer.Id, languageId = Model.Customer.Language_Id })">
                                    @Translation.Get("Beställning", Enums.TranslationSource.TextTranslation)</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
