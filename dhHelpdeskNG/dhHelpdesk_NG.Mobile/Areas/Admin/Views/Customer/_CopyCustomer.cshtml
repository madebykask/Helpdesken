@model DH.Helpdesk.Web.Areas.Admin.Models.CustomerInputViewModel
@using DH.Helpdesk.Web.Infrastructure
<div class="modal-header">
<strong>@Translation.Get("Ny kund", Enums.TranslationSource.TextTranslation)</strong>
</div>
<div class="modal-body">
    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <td style="width:50px;">
                    @Translation.Get("Kundnummer", Enums.TranslationSource.TextTranslation)
                </td>
                <td>
                    <input type="text" id="customernumber" maxlength="20" />
                </td>
                
            </tr>
            <tr>
                <td style="width:150px;">
                    @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)
                </td>
                <td>
                    <input type="text" id="customername" maxlength="50" />
                </td>
            </tr>
            <tr>
                <td style="width:150px;">
                    @Translation.Get("Helpdesk e-post", Enums.TranslationSource.TextTranslation)
                </td>
                <td>
                    <input type="text" id="customeremail" maxlength="50" />
                </td>
            </tr>
        </tbody> 
    </table>
    <input type="hidden" id="customerId" value="@Model.Customer.Id" />
</div>
<div class="modal-footer">
    <button id="btnCopyCustomer" onclick="copyCustomer(@Model.Customer.Id)" class="btn" data-dismiss="modal" aria-hidden="true">@Translation.Get("Spara", Enums.TranslationSource.TextTranslation)</button>
    <button class="btn" data-dismiss="modal" aria-hidden="true">@Translation.Get("Stäng", Enums.TranslationSource.TextTranslation)</button>
</div>

