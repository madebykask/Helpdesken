@using DH.Helpdesk.Mobile.Infrastructure
@model DH.Helpdesk.Mobile.Areas.Admin.Models.OperationObjectInputViewModel
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("Driftsobjekt", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Driftsobjekt", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <h4>@Translation.Get("Allmänt", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Driftsobjekt", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.OperationObject.Name, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Beskrivning", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(model => model.OperationObject.Description, new { style = "width:600px; height:125px;", maxlength = "200" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Driftgrupp", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.OperationObject.WorkingGroup_Id, Model.WorkingGroups, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="operationobject.ShowPI" @(Model.OperationObject.ShowPI == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="operationobject.ShowPI" value="0" />
                                        @Translation.Get("Visa i inventarieregister", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="ShowYesNo" @(Model.ShowYesNo == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="ShowYesNo" value="0" />
                                        @Translation.Get("Visa på startsidan", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><label class="checkbox">
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)
                                        @Html.DropDownListFor(m => m.StartPageShow, Model.NumberToShowOnStartPage, new { style = "width: 60px;" })
                                        @Translation.Get("senaste posterna på startsidan", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Status", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="operationobject.IsActive" @(Model.OperationObject.IsActive == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="operationobject.IsActive" value="0" />
                                        @Translation.Get("Aktiv", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.OperationObject.Customer_Id)
                            @Html.HiddenFor(model => model.OperationObject.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

