@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.GlobalSettingHolidayViewModel
@{
    ViewBag.Title = "New Holiday";
    string newholiday = Request.QueryString["newholiday"];
}
@using (Html.BeginForm("newholiday", "globalsetting", new { id = Model.HolidayHeader.Id }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                @if (newholiday == "1")
                {
                    <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "newholiday", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                }
                else {
                    <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "newholiday", new { id = Model.HolidayHeader.Id }, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                }
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", null, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Holiday", Model)
   
}