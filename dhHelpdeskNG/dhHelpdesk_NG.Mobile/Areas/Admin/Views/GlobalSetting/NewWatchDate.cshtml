@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.GlobalSettingWatchDateViewModel
@{
    ViewBag.Title = "New WatchDate";
    string newwdc = Request.QueryString["newwdc"];         
}
@using (Html.BeginForm("newwatchdate", "globalsetting", new { id = Model.WatchDateCalendar.Id }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                @if (newwdc == "1")
                {
                    <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "newwatchdate", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                }
                else
                {
                    <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "newwatchdate", new { id = Model.WatchDateCalendar.Id }, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                }
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", null, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_WatchDateCalendar", Model)

}
