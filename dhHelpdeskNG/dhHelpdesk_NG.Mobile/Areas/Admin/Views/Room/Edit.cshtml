@using DH.Helpdesk.Mobile.Infrastructure
@model DH.Helpdesk.Mobile.Areas.Admin.Models.RoomInputViewModel
@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm("edit", "room", new { id = Model.Room.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "edit", new { id = Model.Room.Id }, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation), "delete",
         new { id = Model.Room.Id }, new { @class = "btn deleteDialog", deleteDialogText = Translation.Get("Är du säker på att du vill ta bort aktuell post?", Enums.TranslationSource.TextTranslation) })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", null, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/javascript">

        var floors = jQuery.parseJSON($("#sfloors").val());

        var changeBuilding = function () {
            var buildingId = $("#Room_Floor_Building_Id").val();
            var selFloors = $("#Room_Floor_Id");
            var selFloorId = selFloors.val();
            var selected;

            selFloors.empty()
                .append($("<option />").val("").text(""));

            jQuery.each(floors, function (i, v) {
                selected = "";
                if (selFloorId == v.Id)
                    selected = "selected='selected'";

                if (buildingId == undefined || buildingId == "")
                    selFloors.append($("<option />").val(v.Id).text(v.Name));
                else if (buildingId == v.Building_Id)
                    selFloors.append($("<option " + selected + " />").val(v.Id).text(v.Name));
            });
        };

        changeBuilding();

        $(function () {
            var validator = $("#target").validate({
                rules: {
                    "Room.Name": {
                        required: true
                    },
                    "Room.Floor_Id": {
                        required: true
                    }
                },
                messages: {
                    "Room.Name": {
                        required: "@Translation.Get("Du måste ange ett rum", Enums.TranslationSource.TextTranslation)"
                },
                "Room.Floor_Id": {
                    required: "@Translation.Get("Du måste ange en våning", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });

        $("#Room_Floor_Building_Id").change(function () {
            changeBuilding();
        });
    });

</script>

}