@model ECT.FormLib.Models.FormModel
@using ECT.FormLib;
@using ECT.FormLib.Models;

@{
    ViewBag.Title = Model.Translate("Global") + " - " + Model.Translate("Termination basic");
}

@section Validation {

    @Html.Partial("_Validate", Model)

}

@section Script {

    <script>

        $(document).on('change', '#Extent', function (e) {
            e.preventDefault();
            if ($(this).val() === 'Full time')
                $('#Workload').val('100');
        });

        validate.run($('#actionState').val());

        $(document).on('change', '#actionState', function (e) {
            var val = $(this).val();
            validate.run(val);
        });

        $(document).on('change', '#Company', function (e) {
            e.preventDefault
            if ($(this).val() === 'OR')
                $('#WorkingTimeSchedule').val('equivalent');
            else
                $('#WorkingTimeSchedule').val('basic');
        });

    </script>

}

@Html.Partial("_Edit", Model)
