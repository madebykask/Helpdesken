@model ECT.FormLib.Models.FormModel
@using ECT.FormLib;
@using ECT.FormLib.Models;

@{
    ViewBag.Title = Model.Translate("Global") + " - " + Model.Translate("Hiring");
}

@section Script {
    <script>

        $(function () {
            validate.run(20);
        });

    </script>

    @Html.Partial("_Validate", Model)
}

@using (Html.BeginForm("new", "hiring", FormMethod.Post, new { area = "global", novalidate = "novalidate" }))
{
    @Html.Partial("_GlobalNavigation", Model)
    <div class="container containeralignright">
        @Html.Partial("_CurrentUser")
        @Html.Partial("_ErrorMessage", Model)
        <ul class="nav nav-tabs">
            <li class="active"><a href="#contract">@Model.Translate("Service Request Details")</a></li>
        </ul>
        <div class="content">
            <div class="row-fluid">
                <div class="tab-content">
                    <div class="tab-pane active" id="contract">
                        @Html.Partial("_TabContract", Model)
                    </div>
                </div>
            </div>
        </div>
    </div>
}