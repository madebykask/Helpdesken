<script>
    function selectIndexChangeServiceRequestPriority() {
        var d = new Date();
        var day = d.getDate() + 2;
        if (this.options[this.selectedIndex].value == 'Urgent') {
            $('#date_ProcessBeforeDate').datepicker(
            {
                onRender: function (ev) {
                    if (ev.getDate() > day)
                        return '';
                    return 'disabled';
                }
            });
        }
        else {
            if (this.options[this.selectedIndex].value == 'Not Urgent') {
                //Do something.
            }

        }
    }

    document.getElementById('ServiceRequestPriority').onchange = selectIndexChangeServiceRequestPriority;



</script>