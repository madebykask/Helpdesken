@model ECT.FormLib.Models.FormModel
@using ECT.FormLib;
@using ECT.FormLib.Models;

@{
    ViewBag.Title = Model.Translate("Netherlands") + " - " + Model.Translate("Service Request Details");
    var url = Url.CurrentController() + "typeahead";
}

@section Script {
    <script type="text/javascript">

        $(function () {
            validate.run(20);
        });

    </script>

     @Html.Partial("_Validate", Model)
}

@using (Html.BeginForm("new", "Hiring", FormMethod.Post, new { area = "Netherlands", novalidate = "novalidate" }))
{
    <span style="display: none;" id="narrowDownInit" url="@url"></span>
    @Html.Partial("_GlobalNavigation", Model)
    <div class="container containeralignright">
        @Html.Partial("_CurrentUser")  
        @Html.Partial("_ErrorMessage", Model)    
        <ul class="nav nav-tabs">
            <li class="active"><a href="#servicerequestdetails">@Model.Translate("Service Request Details")</a></li>
            <li><a href="#OrganisationalAssignment">@Model.Translate("Organisational Assignment")</a></li>
            <li><a href="#payment">@Model.Translate("Payment Information")</a></li>
            <li><a href="#personal">@Model.Translate("Personal Information")</a></li>
        </ul>
        <div class="content">
            <div class="row-fluid">
                <div class="tab-content">   
                     
                        @Html.Partial("_TabServiceRequestDetails", Model)
                    
                        @Html.Partial("_TabOrganisationalAssignment", Model)  
                    
                        @Html.Partial("_TabPayment", Model)            
                    
                        @Html.Partial("_TabPersonal", Model)
                                                                                      
                </div>
            </div>
        </div>
    </div>
    <input type="hidden" id="activeTab" name="activeTab" value="@Model.ActiveTab" />    
}

<script>
    function selectIndexChangeServiceRequestPriority() {
        var d = new Date();
        var day = d.getDate() + 2;
        if (this.options[this.selectedIndex].value == 'Urgent') {


            $('#date_ProcessBeforeDate').datepicker(
            {

                onRender: function (ev) {
                    if (ev.getDate() > day)
                        return '';
                    return 'disabled';
                }


            });
        }
        else {
            document.getElementById('ProcessBeforeDate').value = document.getElementById('ContractStartDate').value;
        }
    }

    document.getElementById('ServiceRequestPriority').onchange = selectIndexChangeServiceRequestPriority;


</script>
