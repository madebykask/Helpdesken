<?xml version="1.0" encoding="utf-8" ?>
<regexs>
  <date message="Wrong format (dd.mm.yyyy).">^(0?[1-9]|[12][0-9]|3[01])[\./](0?[1-9]|1[012])[\./]\d{4}$</date>
  <percentage message="Wrong format (NNN).">^-?[0-9]{0,2}(\,[0-9]{1,2})?$|^-?(100)(\,[0]{1,2})?$</percentage>
  <num100 message="Cost allocation must always equal 100.">^(100)?$</num100>
  <numBelow100 message="Wrong format (NN).">^-?[0-9]{0,2}(\,[0-9]{1,2})?$|^-?(99)(\,[0]{1,2})?$</numBelow100>
  <pesel message="Wrong format (NNNNNNNNNNN).">^(\d){11}$</pesel>
  <postcode message="Wrong format (NNNN LL).">^[1-9][0-9]{3}\s?[a-zA-Z]{2}$</postcode>
  <employeeno message="Wrong format (11NNNNNN).">^11\d{6}$</employeeno>
  <amount message="Enter maximum four-digit value.">^-?\d{0,4}(\,|.[0-9]{1,5})?$</amount>
  <maxfourdigit message="Wrong format (NNNN).">[0-9]{1,4}</maxfourdigit>
  <unsignednum message="Please enter a numeric value">^[0-9,.]*$</unsignednum>
  <alphaCharachter message="Only Charachters allowed">[^0-9]</alphaCharachter>
  <booltrue>^1|1,0$</booltrue>
  <nip message="Wrong format (NNN-NNN-NN-NN).">^\d{3}\-\d{3}\-\d{2}\-\d{2}$</nip>
  <numMax40 message="Wrong format, enter maximum of 40">\b([0-9]|[1-3][0-9]|40)\b</numMax40>
  <numFrom1To100 message="Wrong format, enter 1-100">^[1-9][0-9]?$|^100$</numFrom1To100>
  <email message="E-mail address must contain @">.+\@.+\..+</email>
  <currency message="Wrong format (LLL)">^[a-zA-Z.]{3,3}$</currency>
  <iban message="Wrong format (IEXXLLLLXXXXXXXXXXXXXX)">^IE\d{2}[A-Z]{4}\d{14}$</iban>
  <bsn message="Wrong format (NNNNNNNNN)">^\D*(?:\d\D*){9,}$</bsn>
  <timestamp message="Wrong format (HH:MM).">^(0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$</timestamp>
  <bankKey message="Wrong format (NNNNNN).">\d{6}</bankKey>
  <accountNumber message="Wrong format (NNNNNNNN).">\d{8}</accountNumber>
  <pps message="Wrong format (NNNNNNNL).">^\d{7}[a-zA-Z]$</pps>
  <maxvalue12 message="Maximum Value is 12">\b([0-9]|1[0-2])\b</maxvalue12>
  <numMax39 message="Incorrect amount of hours">\b([0-9]|[1-3][0-9]|39)\b</numMax39>
</regexs>