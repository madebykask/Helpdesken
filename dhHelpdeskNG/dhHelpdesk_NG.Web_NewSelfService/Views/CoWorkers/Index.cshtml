<div class="container-fluid dh-container">
    <ul class="nav nav-tabs">
        <li class="active" ><a href="#home" data-toggle="tab">@Translation.Get("Co-Workers", Enums.TranslationSource.TextTranslation)</a></li>       
    </ul>
    <div class="content">
        <div class="tab-pane active" id="home">
            <div class="container-fluid dh-container">
                <div class="row">
                    <div class="col-md-3 dh-col">
                        <div class="container">
                            <div class="form-group">
                                <label>
                                    Search
                                </label>
                                <div>
                                    <select><option>All Teams</option><option>Tema One</option><option>Tema One</option></select> <input type="text" /> <button type="submit" class="btn btn-default">Search</button>
                                </div> 
                            </div>
                            
                        </div>
                    </div>
                    
                    <div class="col-md-5 dh-col pull-right">
                        <img src="@Url.Content("~/Content/img-profile/ikea-people.png")" class="pull-right" style="margin:-38px 30px 0 0;" />
                            @*<div class="form-group pull-right">
                                <label>
                                    The list is incorrect
                                </label>
                                <div>
                                    <button class="btn btn-warning">Send change request to SSC</button> <button class="btn btn-info">Time keeping system</button>
                                </div>
                            </div>*@
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-12 table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Co-worker Employee Number</th>
                                    <th>Co-worker First name</th>
                                    <th>Co-worker Last name</th>
                                    <th>Job title – job key</th>
                                    <th>Email</th>
                                    <th>IKEA Inside</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.CoWorkers != null)
                                {
                                    foreach (var cw in Model.CoWorkers)
                                    {
                                        if (cw.EmployeeNumber != "")
                                        {
                                             <tr>
                                                <td>
                                                    @*<button class="btn btn-dhblue btn-xs" data-toggle="modal" data-target="#myModal" title="Previous service requests for this co-worker"><span class="glyphicon glyphicon-folder-open"></span></button>*@
                                                </td>
                                                <td>
                                                     @cw.EmployeeNumber 
                                                </td>
                                                <td>
                                                    @cw.FirstName 
                                                </td>
                                                <td>
                                                    @cw.LastName 
                                                </td>
                                                <td>
                                                    @cw.JobKey - @cw.JobTitle
                                                </td>
                                                 <td>
                                                    @cw.Email 
                                                </td>
                                                <td>
                                                    [IKEA Inside]
                                                </td>
                                                    @*<span class="glyphicon glyphicon-arrow-right"></span>*@
                                             </tr>
                                        }
                                    }
                                }                                                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>        
    </div>
</div>

