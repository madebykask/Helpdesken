<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE form [
    <!ENTITY languages SYSTEM "Templates/Languages.xml">
    <!ENTITY regexs SYSTEM "Templates/Regexs.xml">
    <!ENTITY state SYSTEM "Templates/ErrorNotificationSpecialState.xml">
    <!ENTITY pre_company_unit SYSTEM "Templates/Predefined_Company_Unit.xml">
]>
<!-- Test -->
<!--<form id="17" customerId="10">-->
<!-- Prod -->
<!--<form id="25" customerId="26">-->
<!-- Dev -->
<form id="45" customerId="1">
    &languages;
    &regexs;
    &state;
    <fields>
        <tab name="#errornotification">
            <element name="Company" type="select" label="Company" mandatory="1">
                &pre_company_unit;
            </element>
            <element name="Unit" type="select" label="Store/Unit" mandatory="1"></element>
            <element name="EmployeeNumber" type="typeahead" label="Employee no" mandatory="1">
                <regex inherit="employeeno" pattern="" message=""></regex>
            </element>
            <element name="EmployeeFirstName" type="text" label="First name" mandatory="1"></element>
            <element name="EmployeeLastName" type="text" label="Last name" mandatory="1"></element>
            <element name="Phone" type="text" label="Phone"></element>
            <element name="Email" type="text" label="E-mail"></element>
            <element name="WhoMadeMistake" type="select" label="Who made a mistake?" mandatory="1">
                <options>
                    <option value=""></option>
                    <option value="Country">Country</option>
                    <option value="SSC">SSC</option>
                    <option value="System">System</option>  
                </options>
            </element>
            <element name="ErrorType" type="select" label="Error type" mandatory="1">
                <options>
                    <option value=""></option>
                    <option value="Payroll Related">Payroll Related</option>
                    <option value="Non-Payroll Related">Non-Payroll Related</option>    
                </options>
            </element>
            <element name="ErrorConcerns" type="select" label="The error/complaint concerns" mandatory="1">
                <options>
                    <option value=""></option>
                    <option value="Personal data">Personal data</option>
                    <option value="Payslip">Payslip</option>
                    <option value="Absence">Absence</option>
                    <option value="Contract">Contract</option>
                    <option value="Legal statement">Legal statement</option>
                    <option value="Documents">Documents</option>
                    <option value="Benefits">Benefits</option>
                    <option value="Other">Other</option>
                </options>
            </element>
            <element name="ErrorDescription" type="textarea" label="Please describe the error or your complaint"></element>
            <element name="CoWorkerCorrectionRequest" type="select" label="Correction on co-worker's request" mandatory="1">
                <options>
                    <option value=""></option>
                    <option value="Yes">Yes</option>
                    <option value="No">No</option>
                </options>
            </element>
            <element name="CoWorkerContactType" type="select" label="How can we contact you?">
                <options>
                    <option value=""></option>
                    <option value="Phone">Phone</option>
                    <option value="Email">E-mail</option>
                </options>
            </element>
            <element name="EffectiveDate" type="date" format="dd.MM.yyyy" mandatory="1" label="Effective date">
                <regex inherit="date" pattern="" message=""></regex>
            </element>
            <element name="FileBase" type="file" label="Attach files"></element>
        </tab>
        <tab name="lognote">
            <element type="textarea" name="InternalLogNote" label="Internal log note"></element>
        </tab>
    </fields>
</form>