<?xml version="1.0" encoding="utf-8" ?>
<regexs>
    <date message="Wrong format (dd.mm.yyyy).">^(0?[1-9]|[12][0-9]|3[01])[\.](0?[1-9]|1[012])[\.]\d{4}$</date>
    <percentage message="Wrong format (NNN).">^-?[0-9]{0,2}(\,[0-9]{1,2})?$|^-?(100)(\,[0]{1,2})?$</percentage>
    <num100 message="Value must equal 100.">^(100)?$</num100>
    <numBelow100 message="Wrong format (NN).">^-?[0-9]{0,2}(\,[0-9]{1,2})?$|^-?(99)(\,[0]{1,2})?$</numBelow100>
    <pesel message="Wrong format (NNNNNNNNNNN).">^(\d){11}$</pesel>
    <postcode message="Wrong format (NN-NNN).">^\d{2}\-\d{3}$</postcode>
    <employeeno message="Wrong format (46NNNNNN).">^46\d{6}$</employeeno>
    <amount message="Enter maximum four-digit value.">^[0-9]?[0-9]?[0-9]?[0-9]((\.[0-9][0-9][0-9][0-9]?)|(\,[0-9][0-9][0-9][0-9]?))?$</amount>
    <unsignednum message="Only numbers allowed.">^-?\d*(\,|.[0-9]{1,5})?$</unsignednum>
    <booltrue>^1|1,0$</booltrue>
    <nip message="Wrong format (NNN-NNN-NN-NN).">^\d{3}\-\d{3}\-\d{2}\-\d{2}$</nip>
</regexs>