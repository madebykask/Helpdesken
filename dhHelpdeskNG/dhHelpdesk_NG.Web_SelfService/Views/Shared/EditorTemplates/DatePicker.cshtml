<input type="text" style="display: none;" />
<div id="@controlId" class="input-group date dateie">
    @if (!string.IsNullOrWhiteSpace(controlName))
    {
        // todo
        @Html.TextBoxFor(m => formattedDate, htmlAttributes)
    }
    else
    {
