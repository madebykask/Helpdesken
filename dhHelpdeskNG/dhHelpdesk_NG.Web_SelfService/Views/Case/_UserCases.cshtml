@model DH.Helpdesk.SelfService.Models.Case.UserCasesModel
           
@using (Html.BeginForm("index", "calendar", FormMethod.Post, new { id = "search" }))
{
    <div class="row">
        <div class="span12">
            <table class="tableform">
                <tr>
                    <td class="span3">
                        @Translation.Get("Sökord", Enums.TranslationSource.TextTranslation):
                    </td>
                    <td class="span12">
                        @Html.TextBoxFor(s => Model.PharasSearch)
                    </td>
                </tr>
                <tr>
                    <td class="span3">
                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation):
                    </td>
                    <td class="span12">
                        @Html.TextBoxFor(s => Model.MaxRecords, new { style = "width:50px" })
                        <button id="btnSearch" name="btnSearch" class="btn">@Translation.Get("Sök", Enums.TranslationSource.TextTranslation)</button>
                    </td>
                </tr>
            </table>
        </div>
        <div class ="span100">
            <table class="table table-striped table-bordered table-hover" >
                @if (Model.Cases != null)
                {
                    <thead>
                        <th style="width: 3%">
                            &nbsp;
                        </th>
                        <th>
                            @Translation.Get("Ärende", Enums.TranslationSource.TextTranslation) 
                        </th>
                        <th>
                            @Translation.Get("Datum", Enums.TranslationSource.TextTranslation) 
                        </th>
                        <th>
                            @Translation.Get("Avdelning", Enums.TranslationSource.TextTranslation) 
                        </th>
                        <th>
                            @Translation.Get("Rubrik", Enums.TranslationSource.TextTranslation) 
                        </th>
                        <th>
                            @Translation.Get("Beskrivning", Enums.TranslationSource.TextTranslation) 
                        </th>
                        <th>
                            @Translation.Get("Avslutsdatum", Enums.TranslationSource.TextTranslation) 
                        </th>
                    </thead>
                    <tbody>
                        @foreach (var _case in Model.Cases)
                        {
                            var caseNumber = (int)_case.CaseNumber;

                            <tr>
                                <td>                                
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @Html.DisplayFor(c => caseNumber)
                                    </a>                                                                                                                                                                                       
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @Html.DisplayFor(c => _case.RegTime, "Date")
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @*@Html.DisplayFor(c => _case.Department.DepartmentName)*@
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @Html.DisplayFor(c => _case.Caption)
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @Html.DisplayFor(c => _case.Description)
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("index", "Case")">
                                        @Html.DisplayFor(c => _case.FinishingDate, "Date")
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                }
            </table>
        </div>
    </div>
}