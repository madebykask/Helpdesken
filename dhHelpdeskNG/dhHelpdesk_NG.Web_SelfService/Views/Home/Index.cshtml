    @if (_CaseFieldSetting.ShowExternal == 1)
    {
            <ul>
                <li>Beskrivning</li>
                <li><textarea id="txtDescription" cols="50" rows="5"></textarea></li>
            </ul>    
         
    }
</div>
<div class="divforButton">
    <input type="button" value="Spara och Skicka" /> <input type="button" value="Rensa" />
</div>

