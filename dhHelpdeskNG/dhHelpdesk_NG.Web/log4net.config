<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="ErrorFileAppender" type="log4net.Appender.FileAppender,log4net">
    <param name="File" value="../Logs/PlanogramPlaner.log"/>
    <param name="AppendToFile" value="true"/>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n"/>
    </layout>
  </appender>
  <appender name="EmailAppender" type="log4net.Appender.FileAppender,log4net">
    <param name="File" value="../Logs/Emails.log"/>
    <param name="AppendToFile" value="true"/>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n"/>
    </layout>
  </appender>
  <appender name="DataImportAppender" type="log4net.Appender.FileAppender,log4net">
    <param name="File" value="../Logs/DataImport.log"/>
    <param name="AppendToFile" value="true"/>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] - %m%n"/>
    </layout>
  </appender>
  <root name="AppErrorLog">
    <priority value="ALL"/>
    <appender-ref ref="ErrorFileAppender"/>
  </root>
  <logger name="EmailLog">
    <level value="INFO"/>
    <appender-ref ref="EmailAppender"/>
  </logger>
  <logger name="DataImportLog">
    <level value="INFO"/>
    <appender-ref ref="DataImportAppender"/>
  </logger>
</log4net>