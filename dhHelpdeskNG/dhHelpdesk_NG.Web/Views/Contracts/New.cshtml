@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Models.Contract.ContractViewInputModel
       @{
    ViewBag.Title = "New";
}
@using (Html.BeginForm("save", "Contracts", FormMethod.Post, new { id = "target" }))
{
  <div class="secnavs fixed">
    <div class="pull-left">
       <ul class="secnav">
        <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "save", null, new { @class = "btn", onclick = "$('#target').submit();return false;", id=Model.ContractId})</li>       
             @Html.HiddenFor(x => Model.SettingsModel)
         <li>
            <input name="actiontype" type="submit" value="@Translation.Get("Spara och stäng")" class="btn"/>
         </li>

       <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", null, new { @class = "btn" })</li>
      </ul>                                      
   </div>   
  </div>
        @Html.Partial("_Input", Model)
    @Html.HiddenFor(i => i.ContractId)
}
<script type="text/javascript">

    $("input:text:visible:first").focus();    
</script>