@model DH.Helpdesk.Web.Models.Inventory.InventoryGridModel
@Model.Inventories.Count

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            @foreach (var header in Model.Headers)
            {
                <th>@Translation.Get(header.Caption)</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var inventory in Model.Inventories)
        {
            <tr onclick=" window.location.href = '@Url.Action("EditInventory", new { id = inventory.Id, currentMode = Model.CurrentMode })' ">
                @for (var i = 0; i < inventory.FieldValues.Count; i++)
                {
                    var inventoryField = Model.Headers[i];
                    var inventoryFieldValue = inventory.FieldValues.Single(v => v.FieldName == inventoryField.FieldName);

                    <td class="tdpointer">@inventoryFieldValue.Value.GetDisplayValue()</td>
                }
            </tr>
        }
    </tbody>
</table>
