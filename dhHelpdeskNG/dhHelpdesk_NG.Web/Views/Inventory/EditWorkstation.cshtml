@model DH.Helpdesk.Web.Models.Inventory.EditModel.Computer.ComputerViewModel
@using (Html.BeginForm("EditWorkstation", "Inventory", FormMethod.Post, new { id = "workstation_edit_form" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li id="menu1">
                    <input type="submit" value="@Translation.Get("Spara")" class="btn" onclick=" $('#workstation_edit_form').submit(); "/>
                </li>
                <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt"), "Index", null, new { @class = "btn" })</li>
                <li id="menu3">@Html.ActionLink(Translation.Get("Ta bort"), "DeleteWorkstation", new { id = Model.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="inventory_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("Arbetsstation")</a>
                </li>
                <li>
                    <a href="#fragment-2">@Translation.Get("Lagring")</a>
                </li>
                <li>
                    <a href="#fragment-3">@Translation.Get("Program")</a>
                </li>
                <li>
                    <a href="#fragment-4">@Translation.Get("Hotfix")</a>
                </li>
                <li>
                    <a href="#fragment-5">@Translation.Get("Logg")</a>
                </li>
                <li>
                    <a href="#fragment-6">@Translation.Get("Tillbehör")</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.EditorFor(m => m.WorkstationFieldsViewModel, "Computer/WorkstationFieldsViewModel")
                    @Html.EditorFor(m => m.ChassisFieldsModel, "Shared/ChassisModel")
                    @Html.EditorFor(m => m.InventoryFieldsModel, "Shared/InventoryModel")
                    @Html.EditorFor(m => m.OperatingSystemFieldsViewModel, "Shared/OperatingSystemFieldsViewModel")
                    @Html.EditorFor(m => m.ProccesorFieldsViewModel, "Shared/ProccesorFieldsViewModel")
                    @Html.EditorFor(m => m.MemoryFieldsViewModel, "Shared/MemoryFieldsViewModel")
                    @Html.EditorFor(m => m.GraphicsFieldsModel, "Computer/GraphicsFieldsModel")
                    @Html.EditorFor(m => m.SoundFieldsModel, "Computer/SoundFieldsModel")
                    @Html.EditorFor(m => m.ContractFieldsViewModel, "Computer/ContractFieldsViewModel")
                    @Html.EditorFor(m => m.OtherFieldsModel, "Computer/OtherFieldsModel")
                    @Html.EditorFor(m => m.ContactInformationFieldsModel, "Computer/ContactInformationFieldsModel")
                    @Html.EditorFor(m => m.OrganizationFieldsViewModel, "Computer/OrganizationFieldsViewModel")
                    @Html.EditorFor(m => m.PlaceFieldsViewModel, "Computer/PlaceFieldsViewModel")
                    @Html.EditorFor(m => m.ContactFieldsModel, "Computer/OrganizationFieldsViewModel")
                    @Html.EditorFor(m => m.StateFieldsViewModel, "Computer/StateFieldsViewModel")
                    @Html.EditorFor(m => m.DateFieldsModel, "Computer/DateFieldsModel")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-2">
                    @Html.Partial("StorageGrid")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-3">
                    @Html.Partial("SoftwareGrid")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-4">
                    <table id="tblCases" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Translation.Get("Program")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-5">
                    @using (Html.BeginForm("AddProjectLog", "Projects", FormMethod.Post, new { id = "log_edit_form" }))
                    {
@*                        @Html.EditorFor(x => x)*@
                        <input type="submit" value="@Translation.Get("Nytt logg")" class="btn"/>
                    }
                    @Html.Partial("LogGrid")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-6">
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" name="activeTab" id="activeTab" value="@SessionFacade.ActiveTab" />

<script type="text/javascript">

    $.validator.setDefaults({
        ignore: ""
    });

    $('#inventory_tab a[href="' + $('#activeTab')[0].value + '"]').tab('show');

</script>
