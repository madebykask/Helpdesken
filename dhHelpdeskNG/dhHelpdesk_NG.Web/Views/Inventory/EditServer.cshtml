@model DH.Helpdesk.Web.Models.Inventory.EditModel.Server.ServerViewModel
@using (Html.BeginForm("EditServer", "Inventory", FormMethod.Post, new { id = "server_edit_form" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li id="menu1">
                    <input type="submit" value="@Translation.Get("Spara", Enums.TranslationSource.TextTranslation)" class="btn" onclick=" $('#server_edit_form').submit(); "/>
                </li>
                <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", null, new { @class = "btn" })</li>
                <li id="menu3">@Html.ActionLink(Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation), "DeleteServer", new { id = Model.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="inventory_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("Server", Enums.TranslationSource.TextTranslation)</a>
                </li>
                <li>
                    <a href="#fragment-2">@Translation.Get("Lagring", Enums.TranslationSource.TextTranslation)</a>
                </li>
                <li>
                    <a href="#fragment-3">@Translation.Get("Program", Enums.TranslationSource.TextTranslation)</a>
                </li>
                <li>
                    <a href="#fragment-4">@Translation.Get("Hotfix", Enums.TranslationSource.TextTranslation)</a>
                </li>
                <li>
                    <a href="#fragment-5">@Translation.Get("Logg", Enums.TranslationSource.TextTranslation)</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.EditorFor(m => m.GeneralFieldsModel, "Server/GeneralFieldsModel")
                    @Html.EditorFor(m => m.ChassisFieldsModel, "Shared/ChassisModel")
                    @Html.EditorFor(m => m.InventoryFieldsModel, "Shared/InventoryModel")
                    @Html.EditorFor(m => m.OperatingSystemFieldsViewModel, "Shared/OperatingSystemFieldsViewModel")
                    @Html.EditorFor(m => m.ProccesorFieldsViewModel, "Shared/ProccesorFieldsViewModel")
                    @Html.EditorFor(m => m.MemoryFieldsViewModel, "Shared/MemoryFieldsViewModel")
                    @Html.EditorFor(m => m.StorageFieldsModel, "Server/StorageFieldsModel")
                    @Html.EditorFor(m => m.CommunicationFieldsModel, "Server/CommunicationFieldsViewModel")
                    @Html.EditorFor(m => m.OtherFieldsModel, "Server/OtherFieldsModel")
                    @Html.EditorFor(m => m.PlaceFieldsViewModel, "Shared/PlaceFieldsViewModel")
                    @Html.EditorFor(m => m.StateFieldsModel, "Server/StateModel")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-2">
                    @Html.Partial("StorageGrid")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-3">
                    @Html.Partial("SoftwareGrid")
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-4">
                    <table id="tblCases" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Translation.Get("Program", Enums.TranslationSource.TextTranslation)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-5">
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" name="activeTab" id="activeTab" value="@SessionFacade.ActiveTab" />

<script type="text/javascript">

    $.validator.setDefaults({
        ignore: ""
    });

    $('#inventory_tab a[href="' + $('#activeTab')[0].value + '"]').tab('show');

</script>
