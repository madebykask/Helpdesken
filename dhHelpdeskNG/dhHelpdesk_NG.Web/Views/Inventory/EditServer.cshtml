@model DH.Helpdesk.Web.Models.Inventory.EditModel.Server.ServerEditViewModel
@{
    const string Hotfix = "Hotfix";
}
@using (Html.BeginForm("EditServer", "Inventory", FormMethod.Post, new { id = "server_edit_form" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li id="menu1">
                    <input type="submit" value="@Translation.Get("Spara")" class="btn" onclick=" $('#server_edit_form').submit(); "/>
                </li>
                <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt"), "Index", null, new { @class = "btn" })</li>
                <li id="menu3">@Html.ActionLink(Translation.Get("Ta bort"), "DeleteServer", new { id = Model.ServerViewModel.Id }, new { @class = "btn" })</li>
                <li id="menu4">@Html.CheckBoxFor(m => m.ServerViewModel.IsOperationObject) @Translation.Get("Driftobjekt")</li>
            </ul>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="inventory_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("Server")</a>
                </li>
                <li>
                    <a href="#fragment-2">@Translation.Get("Lagring")</a>
                </li>
                <li>
                    <a href="#fragment-3">@Translation.Get("Program")</a>
                </li>
                <li>
                    <a href="#fragment-4">@Translation.Get("Hotfix")</a>
                </li>
                <li>
                    <a href="#fragment-5">@Translation.Get("Logg")</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.HiddenFor(m => m.ServerViewModel.Id)
                    @Html.EditorFor(m => m.ServerViewModel.GeneralFieldsModel, "Server/GeneralFieldsModel")
                    @Html.EditorFor(m => m.ServerViewModel.ChassisFieldsModel, "Shared/ChassisModel")
                    @Html.EditorFor(m => m.ServerViewModel.InventoryFieldsModel, "Shared/InventoryModel")
                    @Html.EditorFor(m => m.ServerViewModel.OperatingSystemFieldsViewModel, "Shared/OperatingSystemFieldsViewModel")
                    @Html.EditorFor(m => m.ServerViewModel.ProccesorFieldsViewModel, "Shared/ProccesorFieldsViewModel")
                    @Html.EditorFor(m => m.ServerViewModel.MemoryFieldsViewModel, "Shared/MemoryFieldsViewModel")
                    @Html.EditorFor(m => m.ServerViewModel.StorageFieldsModel, "Server/StorageFieldsModel")
                    @Html.EditorFor(m => m.ServerViewModel.CommunicationFieldsViewModel, "Server/CommunicationFieldsViewModel")
                    @Html.EditorFor(m => m.ServerViewModel.OtherFieldsModel, "Server/OtherFieldsModel")
                    @Html.EditorFor(m => m.ServerViewModel.PlaceFieldsViewModel, "Shared/PlaceFieldsViewModel")
                    @Html.EditorFor(m => m.ServerViewModel.StateFieldsModel, "Server/StateModel")
                    <table class="tableform">
                        @if (Model.ServerViewModel.CreatedDate.Show)
                        {
                            <tr>
                                <td class="span3">
                                    <label>@Translation.Get(Model.ServerViewModel.CreatedDate.Caption)</label>
                                </td>
                                <td class="span9">
                                    @Html.DisplayFor(m => m.ServerViewModel.CreatedDate.Value, "Date")
                                </td>
                            </tr>
                        }
                        @if (Model.ServerViewModel.ChangedDate.Show)
                        {
                            <tr>
                                <td class="span3">
                                    <label>@Translation.Get(Model.ServerViewModel.ChangedDate.Caption)</label>
                                </td>
                                <td class="span9">
                                    @Html.DisplayFor(m => m.ServerViewModel.ChangedDate.Value, "Date")
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-2">
                    @Html.Partial("StorageGrid", Model.LogicalDrives)
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-3">
                    @Html.Partial("SoftwareGrid", Model.Softwaries.Where(x => !x.Name.Contains(Hotfix)).OrderBy(x => x.Name).ToList())
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-4">
                    <table id="tblCases" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>@Translation.Get("Program")
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                        var models = Model.Softwaries.Where(x => x.Name.Contains(Hotfix)).Select(x => x.Name).OrderBy(x => x);

                        foreach (var model in models)
                        {
                                <tr>
                                    <th>@Html.DisplayFor(x => model);
                                    </th>
                                </tr>
                        }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-5">
                    @Html.Partial("OperationLogGrid", Model.OperaionLogs)
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" name="activeTab" id="activeTab" value="@SessionFacade.ActiveTab" />

<script type="text/javascript">

    $.validator.setDefaults({
        ignore: ""
    });

</script>
