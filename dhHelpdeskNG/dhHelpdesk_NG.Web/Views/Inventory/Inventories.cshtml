@model DH.Helpdesk.Web.Models.Inventory.SearchModels.InventorySearchViewModel
@using (Ajax.BeginForm("InventoriesGrid", "Inventory", null, new AjaxOptions { UpdateTargetId = "grid_container" }))
{
    <table class="tableform">
        @if (Model.Settings.DepartmentFieldSetting.IsShow)
        {
            <tr>
                <td class="span3">@Translation.Get(Model.Settings.DepartmentFieldSetting.Caption)</td>
                <td>@Html.DropDownListFor(m => m.Filter.DepartmentId, Model.Departments)</td>
            </tr>
        }
        <tr>
            <td class="span3">
                @Html.LabelFor(m => m.Filter.SearchFor)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Filter.SearchFor)
            </td>
        </tr>
        <tr>
            <td class="span3">
                @Html.LabelFor(m => m.Filter.RecordsOnPage)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Filter.RecordsOnPage)
            </td>
        </tr>
        <tr>
            <td class="span3">&nbsp;
            </td>
            <td>
                <input type="submit" value="@Translation.Get("Sök")" class="btn" />
            </td>
        </tr>
    </table>
    @Html.HiddenFor(x => x.InventoryTypeId)
}
<div id="grid_container">
    @Html.Action("InventoriesGrid", "Inventory", new { area = string.Empty, filter = Model.Filter, inventoryTypeId = Model.InventoryTypeId })
</div>
