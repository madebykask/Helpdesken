@model DH.Helpdesk.Web.Models.Inventory.EditModel.Printer.PrinterViewModel
@using (Html.BeginForm("NewPrinter", "Inventory", FormMethod.Post, new { id = "printer_edit_form" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li id="menu1">
                    <input type="submit" value="@Translation.Get("Spara", Enums.TranslationSource.TextTranslation)" class="btn" onclick=" $('#printer_edit_form').submit(); "/>
                </li>
                <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", null, new { @class = "btn" })</li>
            </ul>
            `
        </div>
    </div>

    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="inventory_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("Server", Enums.TranslationSource.TextTranslation)</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.EditorFor(m => m.GeneralFieldsModel, "Printer/GeneralFieldsModel")
                    @Html.EditorFor(m => m.InventoryFieldsModel, "Shared/InventoryModel")
                    @Html.EditorFor(m => m.CommunicationFieldsModel, "Printer/CommunicationFieldsViewModel")
                    @Html.EditorFor(m => m.OtherFieldsModel, "Printer/OtherFieldsModel")
                    @Html.EditorFor(m => m.OrganizationFieldsViewModel, "Printer/OrganizationFieldsViewModel")
                    @Html.EditorFor(m => m.PlaceFieldsViewModel, "Shared/PlaceFieldsViewModel")
                </div>
            </div>
        </div>
    </div>
}

<input type="hidden" name="activeTab" id="activeTab" value="@SessionFacade.ActiveTab" />

<script type="text/javascript">

    $.validator.setDefaults({
        ignore: ""
    });

    $('#inventory_tab a[href="' + $('#activeTab')[0].value + '"]').tab('show');

</script>

