@model DH.Helpdesk.Web.Models.Inventory.EditModel.Shared.OperatingSystemFieldsViewModel
<table class="tableform">
    @if (Model.OperatingSystemFieldsModel.OperatingSystemId.Show
        || Model.OperatingSystemFieldsModel.Version.Show
        || Model.OperatingSystemFieldsModel.ServicePack.Show
        || Model.OperatingSystemFieldsModel.RegistrationCode.Show
        || Model.OperatingSystemFieldsModel.ProductKey.Show)
    {
        <tr>
            <th colspan="2" class="header">@Translation.Get("Operativsystem")</th>
        </tr>
    }
    @Html.EditorFor(m => m.OperatingSystemFieldsModel.OperatingSystemId, "NotReadonlyFields/List", new { Source = Model.OperatingSystems })
    @Html.EditorFor(m => m.OperatingSystemFieldsModel.Version, "NotReadonlyFields/Text")
    @Html.EditorFor(m => m.OperatingSystemFieldsModel.ServicePack, "NotReadonlyFields/Text")
    @Html.EditorFor(m => m.OperatingSystemFieldsModel.RegistrationCode, "NotReadonlyFields/Text")
    @Html.EditorFor(m => m.OperatingSystemFieldsModel.ProductKey, "NotReadonlyFields/Text")
</table>

