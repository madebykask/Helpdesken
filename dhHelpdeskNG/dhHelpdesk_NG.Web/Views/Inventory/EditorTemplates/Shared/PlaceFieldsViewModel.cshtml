@using DH.Helpdesk.Web.Enums.Inventory
@model DH.Helpdesk.Web.Models.Inventory.EditModel.Shared.PlaceFieldsViewModel
<table class="tableform">
    @if (Model.Rooms.Show
        || Model.PlaceFieldsModel.Location.Show)
    {
        <tr>
            <th colspan="2" class="header">@Translation.Get("Placering", Enums.TranslationSource.TextTranslation)</th>
        </tr>
    }
    @if (Model.Rooms.Show)
    {
        <tr>
            <td class="span3">
                <label>@Translation.Get("Byggnad")</label>
            </td>
            <td class="span9">
                @if (!Model.Rooms.IsReadOnly)
                {
                    @Html.DropDownListFor(m => m.PlaceFieldsModel.BuildingId, Model.Buildings, string.Empty, new { id = "building_drop_down" })
                }
                else
                {
                    @(!Model.PlaceFieldsModel.BuildingId.HasValue ? Html.TextBoxFor(m => string.Empty, new { @readonly = true }) : Html.TextBoxFor(m => m.Buildings.SingleOrDefault(x => x.Value == Model.PlaceFieldsModel.BuildingId.ToString()).Text, new { @readonly = true }))
                    @Html.HiddenFor(m => m.PlaceFieldsModel.BuildingId)
                }
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get("Våning")</label>
            </td>
            <td class="span9">
                @if (!Model.Rooms.IsReadOnly)
                {
                    <div id="floor_drop_down_div">
                        @Html.DropDownListFor(m => m.PlaceFieldsModel.FloorId, Model.Floors, string.Empty, new { id = DropDownId.FloorId })
                    </div>
                }
                else
                {
                    @(!Model.PlaceFieldsModel.FloorId.HasValue ? Html.TextBoxFor(m => string.Empty, new { @readonly = true }) : Html.TextBoxFor(m => m.Floors.SingleOrDefault(x => x.Value == Model.PlaceFieldsModel.FloorId.ToString()).Text, new { @readonly = true }))
                    @Html.HiddenFor(m => m.PlaceFieldsModel.FloorId)
                }
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get(Model.Rooms.Caption)</label>
            </td>
            <td class="span9">
                @if (!Model.Rooms.IsReadOnly)
                {
                    <div id="room_drop_down_div">
                        @Html.DropDownListFor(m => m.PlaceFieldsModel.RoomId, Model.Rooms.Value, string.Empty, new { id = DropDownId.RoomId })
                    </div>
                }
                else
                {
                    @(!Model.PlaceFieldsModel.RoomId.HasValue ? Html.TextBoxFor(m => string.Empty, new { @readonly = true }) : Html.TextBoxFor(m => m.Rooms.Value.SingleOrDefault(x => x.Value == Model.PlaceFieldsModel.RoomId.ToString()).Text, new { @readonly = true }))
                    @Html.HiddenFor(m => m.PlaceFieldsModel.RoomId)
                }
            </td>
        </tr>
    }
    @if (Model.PlaceFieldsModel.Location.Show)
    {
        <tr>
            <td class="span3">
                <label>@Translation.Get(Model.PlaceFieldsModel.Location.Caption, Enums.TranslationSource.TextTranslation)</label>
            </td>
            <td class="span9">
                @(!Model.PlaceFieldsModel.Location.IsReadOnly
                      ? Html.TextBoxFor(m => m.PlaceFieldsModel.Location.Value)
                      : Html.TextBoxFor(m => m.PlaceFieldsModel.Location.Value, new { @readonly = true }))
            </td>
        </tr>
    }
</table>

<script>
    $('#building_drop_down').change(function () {
        var selectedBuilding = $(this).val();
        $.get('@Url.Action("SearchFloorsByBuildingId")', { selected: selectedBuilding }, function (floorDropDownMarkup) {
            $('#floor_drop_down_div').html(floorDropDownMarkup);
            $('#floor_drop_down_div select').attr('id', "@DropDownId.FloorId");
            applyFloorDropDownBehavior();
            clearRoomSelect();
        });
    });

    $(function () {
        applyFloorDropDownBehavior();
    });

    function applyFloorDropDownBehavior() {
        $('#floor_drop_down').change(function () {
            var selectedFloor = $(this).val();
            $.get('@Url.Action("SearchRoomsByFloorId")', { selected: selectedFloor }, function (roomDropDownMarkup) {
                $('#room_drop_down_div').html(roomDropDownMarkup);
                $('#room_drop_down_div select').attr('id', "@DropDownId.RoomId");
            });
        });
    }

    function clearRoomSelect() {
        $('#room_drop_down')
            .find('option')
            .remove()
            .end();
    }
</script>
