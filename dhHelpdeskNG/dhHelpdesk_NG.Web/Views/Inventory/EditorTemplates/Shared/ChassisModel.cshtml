@model DH.Helpdesk.Web.Models.Inventory.EditModel.Shared.ChassisFieldsModel
<table class="tableform">
    @if (Model.Chassis.Show)
    {
        <tr>
            <td class="span3">
                <label>@Translation.Get(Model.Chassis.Caption, Enums.TranslationSource.TextTranslation)</label>
            </td>
            <td class="span9">
                @(!Model.Chassis.IsReadOnly
                ? Html.TextBoxFor(m => m.Chassis.Value)
                : Html.TextBoxFor(m => m.Chassis.Value, new { @readonly = true }))
            </td>
        </tr>
    }
</table>

