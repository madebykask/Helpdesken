@model DH.Helpdesk.Web.Models.Inventory.EditModel.Inventory.ConfigurableFieldModel<string>
@if (!Model.Show)
{
    return;
}

<tr>
    <td class="span3">
        @Translation.Get(Model.Caption)
    </td>
    <td class="span9">
        @Html.TextAreaFor(m => m.Value, new { @class = "inputw500 inputmh100" })
        @Html.ValidationMessageFor(m => m.Value)
    </td>
</tr>
