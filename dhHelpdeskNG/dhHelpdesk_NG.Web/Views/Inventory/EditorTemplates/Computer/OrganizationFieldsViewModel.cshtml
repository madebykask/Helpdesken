@model DH.Helpdesk.Web.Models.Inventory.EditModel.Computer.OrganizationFieldsViewModel
@if (Model.OrganizationFieldsModel.DepartmentId.Show
        || Model.OrganizationFieldsModel.DomainId.Show
        || Model.OrganizationFieldsModel.UnitId.Show)
{
    <h4>@Translation.Get("Organisation")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.OrganizationFieldsModel.DepartmentId, "Fields/List", new { Source = Model.Departments })
                @Html.EditorFor(m => m.OrganizationFieldsModel.DomainId, "Fields/List", new { Source = Model.Domains })
                @Html.EditorFor(m => m.OrganizationFieldsModel.UnitId, "Fields/List", new { Source = Model.Units })
            </table>
        </div>
    </div>
}
