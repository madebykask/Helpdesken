@model DH.Helpdesk.Web.Models.Inventory.EditModel.Computer.ContactInformationFieldsModel
<table class="tableform">
    @if (Model.UserStringId.Show)
    {
        <tr>
            <th colspan="2" class="header">@Translation.Get("Användarinformation")</th>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get(Model.UserStringId.Caption)</label>
            </td>
            <td class="span9">
                @(!Model.UserStringId.IsReadOnly
                      ? Html.TextBoxFor(m => m.UserStringId.Value)
                      : Html.TextBoxFor(m => m.UserStringId.Value, new { @readonly = true }))
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get("Förnamn")</label>
            </td>
            <td class="span9">
                @Html.TextBoxFor(m => m.UserName.FirstName, new { @readonly = true })
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get("Efternamn")</label>
            </td>
            <td class="span9">
                @Html.TextBoxFor(m => m.UserName.LastName, new { @readonly = true })
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get("Avdelning")</label>
            </td>
            <td class="span9">
                @Html.TextBoxFor(m => m.Department, new { @readonly = true })
            </td>
        </tr>
        <tr>
            <td class="span3">
                <label>@Translation.Get("Enhet")</label>
            </td>
            <td class="span9">
                @Html.TextBoxFor(m => m.Unit, new { @readonly = true })
            </td>
        </tr>
    }
</table>
