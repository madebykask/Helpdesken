@model DH.Helpdesk.Web.Models.Inventory.EditModel.Settings.Server.ServerFieldsSettingsViewModel
<script type="text/javascript" src="@Url.Content("~/Content/js/Changes/settings.js")"></script>

<script type="text/javascript">
    $(function () {
        var parameters = {
            saveSettingsUrl: '@Url.Action("ServerSettings")',
            settingsSavedSuccessfullyMessage: '@Translation.Get("Settings saved successfully.")'
        };

        applySettingsBehavior(parameters);
    });
</script>
<div id="settings_container">
    @using (Ajax.BeginForm("ServerSettings", "InventorySettings", new AjaxOptions { OnSuccess = "onSettingsSavedSuccessfully", HttpMethod = "POST"}, new { id = "settings_form" }))
    {
        @Html.EditorFor(m => m, "Settings/ServerFieldsSettingsViewModel")
    }
</div>
