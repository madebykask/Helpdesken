@using DH.Helpdesk.Common.Constants
@model DH.Helpdesk.BusinessData.Models.ComputerUsers.ComputerUserCategoryData

<div class="container">
    <div>
        <h4>@Translation.GetCoreTextTranslation("Kategori") @(Model.IsEmpty ? "[Fixed]" : "")</h4>
        <div class="row">
            <div class="span12">
                <table class="tableform">
                    <thead>
                    <tr>
                        <th class="span3"></th>
                        <th class="span4"></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>@Translation.GetCoreTextTranslation("Namn")</td>
                        <td>@Html.EditorFor(x => x.Name)</td>
                    </tr>
                    <tr>
                        <td>@Translation.GetCoreTextTranslation("Skrivskyddad")</td>
                        <td>
                            @if (Model.IsEmpty)
                            {
                                <input type="checkbox" name="IsReadOnly"
                                       @(Model.IsReadOnly ? "checked=checked" : "")
                                       readonly="readonly" onclick='return false' 
                                       value="true"/>
                            }
                            else
                            {
                                <input type="checkbox" name="IsReadOnly"
                                       @(Model.IsReadOnly ? "checked=checked" : "")
                                       value="true"/>
                            }
                            <input type="hidden" name="IsReadOnly" value="false"/>
                        </td>
                    </tr>
                    <tr>
                        <td>@Translation.GetCoreTextTranslation("Standard") @ViewBag.InitiatorSectionHeader</td>
                        <td>@Html.CheckBoxFor(m => m.DefaultInitiatorCategory, new { @class = "switchcheckbox" })</td>        
                    </tr>
                    <tr>
                        <td>@Translation.GetCoreTextTranslation("Standard") @ViewBag.RegardingSectionHeader</td>
                        <td>@Html.CheckBoxFor(m => m.DefaultRegardingCategory, new { @class = "switchcheckbox" })</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("Id", @Model.Id.ToString())
@Html.Hidden("CustomerId", @Model.CustomerId.ToString())
@Html.Hidden("IsEmpty", @Model.IsEmpty ? "true" : "false")