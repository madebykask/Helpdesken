@using System.Globalization
@model DH.Helpdesk.Web.Models.Profile.UserModulesViewModel

@if (Model != null && Model.Modules.Any())
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <th style="width: 1%;"></th>
            <th style="width: 30%;">@Translation.Get("Module", Enums.TranslationSource.TextTranslation)</th>
            <th>@Translation.Get("Number of rows", Enums.TranslationSource.TextTranslation)</th>
        </thead>        
        <tbody>    
            @Html.EditorFor(m => m.Modules, new { NumberOrRows = GetNumberOfRowsList() })
        </tbody>
    </table>            
}
@functions{

    private IList<SelectListItem> GetNumberOfRowsList()
    {
        var list = new List<SelectListItem>();
        list.Add(new SelectListItem()
        {
            Value = string.Empty,            
            Text = Translation.Get("All", Enums.TranslationSource.TextTranslation),
        });
        for (int i = 1; i <= 10; i++)
        {
            list.Add(new SelectListItem()
            {
                Value = i.ToString(CultureInfo.InvariantCulture),
                Text = i.ToString(CultureInfo.InvariantCulture)
            });
        }        
        return list;
    }

} 
