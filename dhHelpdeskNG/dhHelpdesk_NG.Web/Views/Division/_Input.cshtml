@model dhHelpdesk_NG.Domain.Division
<div id="tabContainer">
    <ul>
        <li><a href="#fragment-1">@Translation.Get("Division", Enums.TranslationSource.TextTranslation)</a></li>
    </ul>
    <div id="fragment-1" class="ui-tabs-panel">
        @if (TempData["Error"] != null)
        {
            <div class="validation-summary-errors">@Translation.Get("Division", Enums.TranslationSource.TextTranslation)
                @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
            </div>    
        }
        <div class="formContainer">
            <table>
                <tr>
                    <td>
                        @Translation.Get("Division", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.Name, new { maxlength = "50", style = "width: 200px;" })
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(model => model.Customer_Id)
            @Html.HiddenFor(model => model.Id)
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "Name": {
                    required: true
                }
            },
            messages: {
                "Name": {
                    required: "@Translation.Get("Du måste välja en division", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
 });

</script>
