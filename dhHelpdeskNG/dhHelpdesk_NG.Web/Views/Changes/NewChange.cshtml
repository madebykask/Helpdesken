@model dhHelpdesk_NG.Web.Models.Changes.NewChangeModel

@using (Ajax.BeginForm("NewChange", new AjaxOptions()))
{
    @Html.HiddenFor(m => m.Id)

    <div class="secnavs">
        <div class="pull-left">
            <ul class="secnav">
                <li>
                    <input type="submit" class="btn" value="@Translation.Get("Save", Enums.TranslationSource.TextTranslation)" />
                </li>
                <li>
                    <a id="save_and_close_button" class="btn">@Translation.Get("Save and Close", Enums.TranslationSource.TextTranslation)</a>
                </li>
                <li>
                    @Html.ActionLink(Translation.Get("Cancel", Enums.TranslationSource.TextTranslation), "Index", "Changes", new { id = "cancel_button", @class = "btn" })
                </li>
            </ul>
        </div>
    </div>
    @Html.EditorFor(m => m.Input)
}