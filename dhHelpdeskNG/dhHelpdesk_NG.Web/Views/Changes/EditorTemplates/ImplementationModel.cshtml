@using dhHelpdesk_NG.DTO.Enums.Changes
@model dhHelpdesk_NG.Web.Models.Changes.Edit.ImplementationModel
           
<script type="text/javascript">
    function f2(selectedEmails) {
        for (var i = 0; i < selectedEmails.length; i++) {
            var email = selectedEmails[i];
            $('#implementation_recipient_emails_listbox').append('<option value="' + email + '">' + email + '</option>');
        }
    }
</script>

<table class="tableform">
    <tr>
        <td class="span3">
            @Html.LabelFor(m => m.ImplementationStatus)
        </td>
        <td class="span9">
            @Html.DropDownListFor(m => m.ImplementationStatusId, Model.ImplementationStatus)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.RealStartDate)
        </td>
        <td>
            <div class="input-append date dateie" data-date="">
                @Html.TextBoxFor(m => m.RealStartDate, new { id = "implementation_real_start_date_datepicker" })
                <span class="add-on">
                    <i class="icon-calendar"></i>
                </span>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.FinishingDate)
        </td>
        <td>
            <div class="input-append date dateie" data-date="">
                @Html.TextBoxFor(m => m.FinishingDate, new { id = "implementation_finishing_date_datepicker" })
                <span class="add-on">
                    <i class="icon-calendar"></i>
                </span>
            </div>
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.BuildImplemented)
        </td>
        <td>
            @Html.CheckBoxFor(m => m.BuildImplemented)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.ImplementationPlanUsed)
        </td>
        <td>
            @Html.CheckBoxFor(m => m.ImplementationPlanUsed)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.ChangeDeviation)
        </td>
        <td>
            @Html.TextAreaFor(m => m.ChangeDeviation)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.RecoveryPlanUsed)
        </td>
        <td>
            @Html.CheckBoxFor(m => m.RecoveryPlanUsed)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.AttachedFilesContainer)
        </td>
        <td>
            @Html.Partial("AttachedFilesContainer", Model.AttachedFilesContainer)
        </td>
    </tr>
    <tr>
        <td>
            @Html.LabelFor(m => m.ImplementationReady)
        </td>
        <td>
            @Html.CheckBoxFor(m => m.ImplementationReady)            
        </td>
    </tr>
</table>

<div id="implementation_logs_container">
    @Html.Action("Logs", new { changeId = Model.ChangeId, subtopic = Subtopic.Implementation, area = string.Empty })
</div>

@Html.TextBoxFor(m => m.NewLog.Text)
<button id="implementation_send_to_button" class="btn">@Translation.Get("Send to...", Enums.TranslationSource.TextTranslation)</button>
@Html.Partial("SendToDialog", Model.SendToDialog, new ViewDataDictionary(new ViewDataDictionary { { "Id", "implementation_send_to_dialog" }, { "Callback", "f2" } }))
@Html.ListBox("SendToEmails", new List<SelectListItem>(0), new { id = "implementation_recipient_emails_listbox" })