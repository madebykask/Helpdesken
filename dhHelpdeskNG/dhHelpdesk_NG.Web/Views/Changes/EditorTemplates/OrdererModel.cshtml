            <td class="span3">
                <label>@Translation.Get(Model.Department.Caption, Enums.TranslationSource.TextTranslation)</label>
            </td>
            <td class="span9">
                @Html.DropDownListFor(m => m.DepartmentId, Model.Department.Value)
            </td>
        </tr>
    }
</table>