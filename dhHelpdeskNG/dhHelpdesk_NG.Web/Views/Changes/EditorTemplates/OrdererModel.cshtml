
@model DH.Helpdesk.Web.Models.Changes.ChangeEdit.OrdererModel
 
<table class="tableform">
    @if (Model.Id.Show)
    {
        <tr>
            <td class="span3">
                <label>@Translation.Get(Model.Id.Caption, Enums.TranslationSource.TextTranslation)</label>
            </td>
            <td class="span9">
                @Html.TextBoxFor(m => m.Id.Value)            
            </td>
        </tr>
    }
