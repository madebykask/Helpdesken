
@model DH.Helpdesk.Web.Models.Changes.ChangeEdit.GeneralModel
 
<table class="tableform">
    @Html.EditorFor(m => m.Prioritisation, "Fields/Number")
    @Html.EditorFor(m => m.Title, "Fields/Text")
    
     @if (Model.Systems.Show)
     {
         <tr>
             <td class="span3">
                 @Translation.Get(Model.Systems.Caption, Enums.TranslationSource.TextTranslation)
             </td>
             <td>
                 @Html.DropDownListFor(m => m.SystemId, Model.Systems.Value)
             </td>
         </tr>
     }
    @if (Model.Systems.Show)
    {
        <tr>
            <td class="span3">
                @Translation.Get(Model.Systems.Caption, Enums.TranslationSource.TextTranslation)
            </td>
            <td>
                @Html.DropDownListFor(m => m.SystemId, Model.Systems.Value)
            </td>
        </tr>
    }
    @if (Model.Objects.Show)
    {
        <tr>
            <td class="span3">
                @Translation.Get(Model.Objects.Caption, Enums.TranslationSource.TextTranslation)
            </td>
            <td>
                @Html.DropDownListFor(m => m.ObjectId, Model.Objects.Value)
            </td>
        </tr>
    }
    
    @if (Model.InventoryDialog.Show)
    {
        <tr>
            <td class="span3">
                @Translation.Get(Model.InventoryDialog.Caption)
            </td>
            <td class="span9">
                <input id="general_inventory_dialog_open_button" class="btn" type="button" value="..." />
                @Html.EditorFor(m => m.InventoryDialog.Value)
            </td>
        </tr>
    }

    @if (Model.WorkingGroups.Show)
    {
        <tr>
            <td class="span3">
                @Translation.Get(Model.WorkingGroups.Caption, Enums.TranslationSource.TextTranslation)
            </td>
            <td>
                @Html.DropDownListFor(m => m.WorkingGroupId, Model.WorkingGroups.Value)
            </td>
        </tr>
    }
    @if (Model.Administrators.Show)
    {
        <tr>
            <td class="span3">
                @Translation.Get(Model.Administrators.Caption, Enums.TranslationSource.TextTranslation)
            </td>
            <td>
                @Html.DropDownListFor(m => m.AdministratorId, Model.Administrators.Value)
            </td>
        </tr>
    } 
    @Html.EditorFor(m => m.FinishingDate, "Fields/Date", new { id = "general_finishing_date_datepicker" })
    @Html.EditorFor(m => m.Rss, "Fields/Flag")
    
    @if (!Model.IsNew)
    {
        <tr>
            <td class="span3">
                @Html.LabelFor(m => m.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(m => m.CreatedDate)
            </td>
        </tr>
        <tr>
            <td class="span3">
                @Html.LabelFor(m => m.ChangedDate)
            </td>
            <td>
                @Html.DisplayTextFor(m => m.ChangedDate)
            </td>
        </tr>
    }
</table>