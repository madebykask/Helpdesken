
@model DH.Helpdesk.Web.Models.Changes.InventoryDialog.InventoryDialogModel
        
<script type="text/javascript" src="@Url.Content("~/Content/js/Changes/inventoryDialog.js")"></script>

<script type="text/javascript">
    $(function() {
        applyInventoryDialogBehavior();
    });
</script>

<div id="general_inventory_dialog" title="@Translation.Get("Inventory")">
    @for (var i = 0; i < Model.InventoryTypes.Count; i++)
    {
        @Model.InventoryTypes[i].Name

        <select class="inventory-selection-dropdown multiselect multiselect-search" multiple="multiple">
            @foreach (var inventory in Model.InventoryTypes[i].Inventories)
            {
                <option value="@inventory.Value">@inventory.Text</option>
            }
        </select>
    }

    <input type="button" id="flush_selected_inventories_button" class="btn" value="-->" />
    <select id="selected_inventories_listbox" multiple="multiple"></select>
    <input type="button" id="delete_selected_inventory_button" class="btn" value="@Translation.Get("Delete")" />
    @Html.DropDownListFor(m => m.SelectedInventories, Model.SelectedInventories.Select(i => new SelectListItem { Value = i }).ToList(), new { id = "selected_inventories_cache", multiple="multiple", style = "display: none;" })
</div>