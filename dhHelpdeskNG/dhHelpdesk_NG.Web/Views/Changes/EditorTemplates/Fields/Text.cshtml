
@model DH.Helpdesk.Web.Models.Changes.ChangeEdit.ConfigurableFieldModel<string>
           
@if (!Model.Show)
{
    return;
}

<tr>
    <td class="span3">
        @Translation.Get(Model.Caption)
    </td>
    <td class="span9">
        @Html.TextBoxFor(m => m.Value, new Dictionary<string, object> { { "data-dh-is-required", Model.IsRequired } })
        @Html.HiddenFor(m => m.IsRequired)
        @Html.ValidationMessageFor(m => m.Value)
    </td>
</tr>