
@model DH.Helpdesk.Web.Models.Changes.HistoryModel
           
<tr>
    <td>
        @Html.DisplayFor(m => m.DateAndTime)
    </td>
    <td>
        @Html.DisplayFor(m => m.RegisteredBy.FirstName)
        @Html.DisplayFor(m => m.RegisteredBy.LastName)
    </td>
    <td>
        @Html.DisplayFor(m => m.Log)
    </td>
    <td>
        @foreach (var fieldDifferences in Model.Histories)
        {
            if (fieldDifferences.OldValue == null && fieldDifferences.NewValue != null)
            {
                @fieldDifferences.FieldName@:: --> @fieldDifferences.NewValue
            }
            else
            {
                @fieldDifferences.FieldName@:: @fieldDifferences.OldValue --> @fieldDifferences.NewValue
            }
        }
    </td>
    <td>
        @foreach (var email in Model.Emails)
        {
            @Html.Display(email)
        }
    </td>
</tr>