@model IEnumerable<dhHelpdesk_NG.Web.Models.Changes.LogModel>
           
<script type="text/javascript">
    function deleteLog(id) {
        $.post('@Url.Action("DeleteLog")', { id: id }, function(markup) {
            
        });
    }
</script>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.LabelFor(m => m.FirstOrDefault().DateAndTime)
            </th>
            <th>
                @Html.LabelFor(m => m.FirstOrDefault().RegisteredBy)
            </th>
            <th>
                @Html.LabelFor(m => m.FirstOrDefault().Text)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>
                    @log.DateAndTime
                </td>
                <td>
                    @log.RegisteredBy
                </td>
                <td>
                    @log.Text
                </td>
                <td>
                    <a onclick="deleteLog(@log.Id)" class="btn">@Translation.Get("Delete", Enums.TranslationSource.TextTranslation)</a>
                </td>
            </tr>
        }
    </tbody>
</table>