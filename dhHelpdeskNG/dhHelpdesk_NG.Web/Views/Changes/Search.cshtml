@model dhHelpdesk_NG.Web.Models.Changes.SearchModel
           
<script type="text/javascript" src="@this.Url.Content("~/Scripts/jquery.typing-0.2.0.min.js")"></script>
<script type="text/javascript" src="@this.Url.Content("~/Scripts/Changes/search.js")"></script>        

@using (this.Ajax.BeginForm("ChangesGrid", "Changes", null, new AjaxOptions{HttpMethod = "POST"}, new { id = "search_form" }))
{
    @this.Html.LabelFor(m => m.StatusItems)
    @this.Html.DropDownListFor(m => m.StatusIds, this.Model.StatusItems, new { id = "statuses_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
 
    @this.Html.LabelFor(m => m.ObjectItems)   
    @this.Html.DropDownListFor(m => m.ObjectIds, this.Model.ObjectItems, new { id = "objects_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
    
    @this.Html.LabelFor(m => m.OwnerItems)
    @this.Html.DropDownListFor(m => m.OwnerIds, new MultiSelectList(new List<object>()), new { id = "owners_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
    
    @this.Html.LabelFor(m => m.WorkingGroupItems)
    @this.Html.DropDownListFor(m => m.WorkingGroupIds, this.Model.WorkingGroupItems, new { id = "working_groups_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
    
    @this.Html.LabelFor(m => m.AdministratorItems)
    @this.Html.DropDownListFor(m => m.AdministratorIds, this.Model.AdministratorItems, new { id = "administrators_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
    
    @this.Html.LabelFor(m => m.Pharse)
    @this.Html.TextBoxFor(m => m.Pharse, new { id = "search_textbox" })

    @this.Html.LabelFor(m => m.ShowItems)
    @this.Html.DropDownListFor(m => m.ShowValue, this.Model.ShowItems, new { id = "show_dropdown" })
    
    @this.Html.LabelFor(m => m.RecordsOnPage)
    @this.Html.TextBoxFor(m => m.RecordsOnPage, new { id = "records_on_page_textbox" })
}