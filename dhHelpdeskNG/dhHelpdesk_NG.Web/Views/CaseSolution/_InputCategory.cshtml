@model dhHelpdesk_NG.Domain.CaseSolutionCategory
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("Ärendemallskategori", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Kategori", Enums.TranslationSource.TextTranslation)</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Ärendemall", Enums.TranslationSource.TextTranslation) 
                                        @Translation.Get("Kategori", Enums.TranslationSource.TextTranslation) 
                                         
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.Name, new { maxlength = "50", style = "width: 200px;" })                                                                           
                                    </td>                                                                        
                                </tr>                                
                                <tr>
                                    <td>
                                         @Translation.Get("Standard", Enums.TranslationSource.TextTranslation)
                                    </td>                                    
                                    <td class="checkbox" style="padding-left: 20px">                                        
                                        <input type="checkbox" name="IsDefault" @(Model.IsDefault== 1 ? "checked=checked" : "") value ="1" />                                        
                                        <input type="hidden" name="IsDefault" value="0" />                                                                      
                                    </td>                                   
                                </tr>               
                            </table>
                            @Html.HiddenFor(model => model.Customer_Id)
                            @Html.HiddenFor(model => model.Id)                         

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "Name": {
                    required: true
                }
            },
            messages: {
                "Name": {
                    required: "@Translation.Get("Du måste ange en ärendemallskategori", Enums.TranslationSource.TextTranslation)"
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });

</script>
