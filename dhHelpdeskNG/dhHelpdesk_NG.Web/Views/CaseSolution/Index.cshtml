@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Models.CaseSolution.CaseSolutionIndexViewModel
@{
    ViewBag.Title = "Index";
}
@{
    var CurIcon = "";
     
    var menu1Style = "";
    var menu2Style = "";
    
    var menu1TabClass = "";
    var menu2TabClass = "";
    
    switch (Model.ActiveTab)
    {
        case "Categories":
            menu2Style = "display: block";
            menu1Style = "display: none";
            menu2TabClass = "active";
            menu1TabClass = "";
            break;
            
        default:
            menu1Style = "display: block";
            menu2Style = "display: none";
            menu1TabClass = "active";
            menu2TabClass = "";
            
            break;                              
    }
            
 }


<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li id="menu1" style="@menu1Style">@Html.ActionLink(Translation.Get("Ny ärendemall", Enums.TranslationSource.TextTranslation), "new", null, new { @class = "btn" })</li>
            <li id="menu2" style="@menu2Style">@Html.ActionLink(Translation.Get("Ny kategori", Enums.TranslationSource.TextTranslation), "newcategory", null, new { @class = "btn" })</li>
        </ul>
    </div>
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li id="CaseTemplateTab" class="@menu1TabClass">
                <a href="#fragment-1">@Translation.Get("Ärendemallar", Enums.TranslationSource.TextTranslation)</a>
            </li>
            <li id="CategoriesTab" class="@menu2TabClass">
                <a href="#fragment-2">@Translation.Get("Kategorier", Enums.TranslationSource.TextTranslation)</a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane tab-pane-border @menu1TabClass" id="fragment-1"> 
                @using (Html.BeginForm("index", "casesolution", FormMethod.Post, new { id = "caseSolutionOverview" }))
                {
                    <div>
                        <table>
                            <tr>
                                <td>
                                    @Html.TextBoxFor(model => model.SearchCss, new { maxlength = "50", style = "width: 200px;" })
                                    <input type="button" id="searchQueryBtn" value="@Translation.Get("Sök", Enums.TranslationSource.TextTranslation)" class="btn" onclick="submit();" />
                                </td>
                                <td>
                                    @* <span class="label label-info">@Model.CaseSolutions.Count()
                                    @Translation.Get(" poster i sökresultat", Enums.TranslationSource.TextTranslation)</span>*@
                                </td>
                            </tr>
                        </table>
                    </div>
                    <table class="table table-striped table-bordered table-hover" id="tblCaseSolution">
                        <thead>
                            <tr>
                                <th sort-data="Name"  style="cursor: pointer; cursor: hand;width:15%">
                                    @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)
                                    @{CurIcon = "Name";}
                                    <i class="@CurIcon.SetCaseSolutionSortIcon()"></i>
                                </th>
                                <th sort-data="Category" style="cursor: pointer; cursor: hand;width:12%">
                                    @Translation.Get("Kategori", Enums.TranslationSource.TextTranslation)
                                    @{CurIcon = "Category";}
                                    <i class="@CurIcon.SetCaseSolutionSortIcon()"></i>
                                </th>
                                <th sort-data="Caption" style="cursor: pointer; cursor: hand;width:15%">
                                    @Translation.Get("Rubrik", Enums.TranslationSource.TextTranslation)
                                    @{CurIcon = "Caption";}
                                    <i class="@CurIcon.SetCaseSolutionSortIcon()"></i>
                                </th>
                                <th sort-data="PerformerUser" style="cursor: pointer; cursor: hand;width:10%">
                                    @Translation.Get("Handläggare", Enums.TranslationSource.TextTranslation)
                                    @{CurIcon = "PerformerUser";}
                                    <i class="@CurIcon.SetCaseSolutionSortIcon()"></i>
                                </th>
                                <th sort-data="Priority" style="cursor: pointer; cursor: hand;width:50%">
                                    @Translation.Get("Prioritet", Enums.TranslationSource.TextTranslation)
                                    @{CurIcon = "Priority";}
                                    <i class="@CurIcon.SetCaseSolutionSortIcon()"></i>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Rows)
                            {
                                var inactiveVal = item.IsActive ? string.Empty : "inactive";
                                <tr>
                                    <td>
                                        <a class="@inactiveVal" href="@Url.Action("edit", "casesolution", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
                                    </td>
                                    <td>
                                        <a class="@inactiveVal" href="@Url.Action("edit", "casesolution", new { id = item.Id })">@Html.DisplayFor(modelItem => item.CategoryName)</a>
                                    </td>
                                    <td>
                                        <a class="@inactiveVal" href="@Url.Action("edit", "casesolution", new { id = item.Id })">@Html.DisplayFor(modelItem => item.CaseCaption)</a>
                                    </td>
                                    <td>
                                        <a class="@inactiveVal" href="@Url.Action("edit", "casesolution", new { id = item.Id })">@Html.DisplayFor(modelItem => item.PerformerUserName)</a>
                                    </td>
                                    <td>
                                        <a class="@inactiveVal" href="@Url.Action("edit", "casesolution", new { id = item.Id })">@Html.DisplayFor(modelItem => item.PriorityName)</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>            
                }
            </div>
            <div class="tab-pane tab-pane-border @menu2TabClass" id="fragment-2">
                <table class="table table-striped table-bordered table-hover" id="tblCaseSolutionCategory">
                    <thead>
                        <tr>
                            <th style ="width:20%">
                                @Translation.Get("Kategori", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Standard", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var items in Model.CaseSolutionCategories)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("editcategory", "casesolution", new { id = items.Id })">@Html.DisplayFor(modelItem => items.Name)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("editcategory", "casesolution", new { id = items.Id })">@items.IsDefault.IntToYES_NO()</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
</div>
<script type="text/javascript">

    var customerId = $("#currentCustomerId").val();

    $('#CaseTemplateTab').click(function () {
        $.post("/CaseSolution/RememberTab", { topic: "CaseSolution", tab: "CaseTemplate" });
        $('#menu1').show();
        $('#menu2').hide();        
    });

    $('#CategoriesTab').click(function () {
        $.post("/CaseSolution/RememberTab", { topic: "CaseSolution", tab: "Categories" });
        $('#menu2').show();
        $('#menu1').hide();
    });

    $(document).ready(function () {        
        $("#currentCustomer").change(function () {
            $("#caseSolutionOverview").submit();
        });
    });

    $(document).on('click', 'th', function (e) {
        var sortBy = $(this).attr('sort-data');        
        $.post("/CaseSolution/Sort", { fieldName: sortBy });
        $("#caseSolutionOverview").submit();

    });  

</script>
