@model DH.Helpdesk.Web.Models.CaseSolution.CaseSolutionInputViewModel

@{
    ViewBag.Title = "";
    int backPageId = ViewBag.PageId;
    string SelectedValues = ViewBag.selectedValues;
}

@using (Html.BeginForm("Edit", "casesolution", new { id = Model.CaseSolution.Id }, FormMethod.Post, new { id = "target" }))
{
    @Html.Hidden("PageId", backPageId )
    @Html.Hidden("selectedValues", SelectedValues)
    
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                @*<li>@Html.ActionLink(Translation.GetCoreTextTranslation("Spara"), "edit", new { id = Model.CaseSolution.Id }, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>*@
                <li><a class="btn save" id="SaveCaseSolution">@Translation.GetCoreTextTranslation("Spara")</a></li>
                <li>
                    @Html.ActionLink(Translation.GetCoreTextTranslation("Ta bort"), "delete",
                        new { id = @Model.CaseSolution.Id, pageId = backPageId },
                        new { @class = "btn deleteDialog", deleteDialogText = Translation.GetCoreTextTranslation("Är du säker på att du vill ta bort aktuell post") + "?" })
                </li>
                <li><a class="btn save" id="CopyCaseSolution">@Translation.GetCoreTextTranslation("Kopiera")</a></li>
                @*<li>@Html.ActionLink(Translation.GetCoreTextTranslation("Kopiera"), "copy", new { id = "CopyCaseSolution" }, new { @class = "btn deleteDialog", deleteDialogText = Translation.GetCoreTextTranslation("Är du säker på att du vill kopiera aktuell post") + "?" }) </li>*@
                <li>
                @switch (backPageId)
                {
                    case 0:
                        @Html.ActionLink(Translation.GetCoreTextTranslation("Avbryt"), "index", null, new { @class = "btn" })
                        break;

                    case 1:
                        @Html.ActionLink(Translation.GetCoreTextTranslation("Avbryt"), "index", "Cases", null, new { @class = "btn" })
                        break;
                }
                </li>
            </ul>
        </div>
    </div>

    <div class="contentContent">
        @Html.Partial("_Input", Model)
    </div>
}
