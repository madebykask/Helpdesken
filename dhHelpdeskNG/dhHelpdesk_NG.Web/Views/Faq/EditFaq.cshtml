@using System.Globalization
@using System.Web.Optimization
@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Models.Faq.Output

@model DH.Helpdesk.Web.Models.Faq.Output.EditFaqModel


@Scripts.Render("~/bundles/dhhelpdesk")
<script>
    $(document).ready(function () {
        FAQInitForm();
    });
</script>


@{
    this.ViewBag.Title = @Translation.GetCoreTextTranslation("Edit FAQ");
}

<script type="text/javascript">
    $(function() {
        $('#delete_button').click(function() {
            $.post('@Url.Action("DeleteFaq")', { id: '@Model.Id' }, function() {
                window.location.href = '@Url.Action("Index")';
            });
        });
    });
</script>

@Html.Partial("_Plupload")
@using (this.Html.BeginForm("EditFaq", "Faq", FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                @if (Model.UserHasFaqAdminPermission)
                {
                <li>@Html.ActionLink(Translation.GetCoreTextTranslation("Spara"), "edit", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                    <!--<li><input type="submit" value="@Translation.Get("Spara", Enums.TranslationSource.TextTranslation)" class="btn" /></li>-->
                    <li><a id="delete_button" class="btn">@Translation.GetCoreTextTranslation("Ta bort")</a></li>
                }
                <li><a href="@Url.Action("Index")" class="btn">@Translation.GetCoreTextTranslation("Avbryt")</a></li>
            </ul>
        </div>
    </div>
    @Html.Partial("FaqEditing", new EditingFaqModel(this.Model.Id.ToString(), this.Model.Category, this.Model.Question, this.Model.Answer, this.Model.InternalAnswer, this.Model.Files, this.Model.UrlOne, this.Model.UrlTwo, this.Model.WorkingGroup, this.Model.InformationIsAvailableForNotifiers, this.Model.ShowOnStartPage, Model.Languages, Model.LanguageId))
}