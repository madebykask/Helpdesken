@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Models.CalendarInputViewModel
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        @Translation.Get("Händelse", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Aktuellt", Enums.TranslationSource.TextTranslation)</a></li>            
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <h4>@Translation.Get("Aktuellt", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">                               
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Datum", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.EditorFor(model => model.Calendar.CalendarDate, "DatePicker", new { id = "divCalendar_CalendarDate" }) 
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Visa t.o.m", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.EditorFor(model => model.Calendar.ShowUntilDate, "DatePicker", new { id = "divCalendar_ShowUntilDate" }) 
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Rubrik", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.Calendar.Caption, new { maxlength = "50", style = "width: 200px;" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Text", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(model => model.Calendar.Text, new { style = "width:600px; height:250px;", maxlength = "2000" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="checkbox" style="padding-left: 20px">                                        
                                        <input type="checkbox" name="Calendar.ShowOnStartPage" @(Model.Calendar.ShowOnStartPage == 1 ? "checked=checked" : "") value ="1" />                                        
                                        <input type="hidden" name="Calendar.ShowOnStartPage" value="0" />                                                                      
                                        &nbsp;@Translation.Get("Visa på startsidan", Enums.TranslationSource.TextTranslation)
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td class="checkbox" style="padding-left: 20px">
                                        <input type="checkbox" name="Calendar.PublicInformation" @(Model.Calendar.PublicInformation == 1 ? "checked=checked" : "")  value="1" />                                        
                                        <input type="hidden" name="Calendar.PublicInformation" value="0" />                                        
                                        &nbsp;@Translation.Get("Visa på självservice", Enums.TranslationSource.TextTranslation)
                                    </td>                                
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <h4>@Translation.Get("Säkerhet", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform" id="säkerhet">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Driftgrupp", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Translation.Get("Tillgängliga", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td></td>
                                    <td>
                                        @Translation.Get("Valda", Enums.TranslationSource.TextTranslation)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        
                                    </td>
                                    <td>
                                        @Html.ListBox("WGsAvailable", Model.WGsAvailable, new { style = "width: 340px; height: 100px" })
                                        
                                    </td>
                                    <td>
                                        <input type="button" value="&gt;" id="addWGs" class="btn"/>
                                        <input type="button" value="&lt;" id="removeWGs" class="btn" />
                                    </td>
                                    <td>
                                        @Html.ListBox("WGsSelected", Model.WGsSelected, new { style = "width: 340px; height: 100px" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.Calendar.Customer_Id)
                            @Html.HiddenFor(model => model.Calendar.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    function submitForm() {
        $("#WGsSelected option").attr("selected", "selected");
        $("#target").submit();
    }

    $("#addWGs").click(function () {
        $("#WGsAvailable option:selected").remove().appendTo("#WGsSelected");
        $("#WGsAvailable").get(0).selectedIndex = -1;
        $("#WGsSelected").get(0).selectedIndex = -1;
        return false;
    });

    $("#removeWGs").click(function () {
        $("#WGsSelected option:selected").remove().appendTo("#WGsAvailable");
        $("#WGsAvailable").get(0).selectedIndex = -1;
        $("#WGsAvailable").get(0).selectedIndex = -1;
        return false;
    });

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "Calendar.Caption": {
                    required: true
                },
                "Calendar.Text": {
                    required: true
                }
            },
            messages: {
                "Calendar.Caption": {
                    required: "@Translation.Get("Du måste ange en rubrik", Enums.TranslationSource.TextTranslation)"
                                },
                                "Calendar.Text": {
                                    required: "@Translation.Get("Du måste ange en text", Enums.TranslationSource.TextTranslation)"
                                }
                            },
                            submitHandler: function (form) {
                                form.submit();
                            }
                        });
                    });

</script>
