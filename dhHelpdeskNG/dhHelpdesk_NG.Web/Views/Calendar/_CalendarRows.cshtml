@model IEnumerable<dhHelpdesk_NG.Domain.Calendar>

@{var CurIcon = "";}
<table class="table table-striped table-bordered table-hover" id="tblcalendar">    
    <thead>             
        <tr>                
            <th  sort-data="CalendarDate" onclick="submit();" style="cursor: pointer; cursor: hand">
                @Translation.Get("Datum", Enums.TranslationSource.TextTranslation)                                  
                @{CurIcon = "CalendarDate";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                
            </th>           
            <th sort-data="ShowUntilDate" onclick="submit();"  style="cursor: pointer; cursor: hand">
                @Translation.Get("Visa t.o.m", Enums.TranslationSource.TextTranslation)                                
                @{CurIcon = "ShowUntilDate";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                
            </th>
            <th sort-data="Caption" onclick="submit();"  style="cursor: pointer; cursor: hand">
                @Translation.Get("Rubrik", Enums.TranslationSource.TextTranslation)               
                @{CurIcon = "Caption";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                                
            </th>
            <th sort-data="Text" onclick="submit();"  style="cursor: pointer; cursor: hand">
                @Translation.Get("Text", Enums.TranslationSource.TextTranslation)           
                @{CurIcon = "Text";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                               
            </th>
            <th sort-data="ShowOnStartPage" onclick="submit();"  style="cursor: pointer; cursor: hand">
                @Translation.Get("Visa på startsidan", Enums.TranslationSource.TextTranslation)                
                @{CurIcon = "ShowOnStartPage";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                
            </th>
            <th sort-data="PublicInformation" onclick="submit();"  style="cursor: pointer; cursor: hand">
                @Translation.Get("Självservice", Enums.TranslationSource.TextTranslation)                
                @{CurIcon = "PublicInformation";}
                <i class="@CurIcon.SetCalendarSortIcon()"></i>                               
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {                               
            <tr>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Html.DisplayFor(modelItem => item.CalendarDate)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Html.DisplayFor(modelItem => item.ShowUntilDate)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Caption)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Text)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Translation.Get(item.ShowOnStartPage.TranslateBit(), Enums.TranslationSource.TextTranslation)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "calendar", new { id = item.Id })">@Translation.Get(item.PublicInformation.TranslateBit(), Enums.TranslationSource.TextTranslation)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
