        @{
            Html.RenderPartial("DocumentsInfo", Model.DocumentsModel);
        }
    </div>
    <div class="cases"
         data-usermodules="item"
         data-usermodules-moduleid="@(GetModuleId(Module.Cases))"
         data-usermodules-position="@(GetModulePosition(Module.Cases))">
        @{
            Html.RenderPartial("MyCasesInfo", Model.MyCases);
        }
    </div>
    <div class="cases quick-open"
         data-usermodules="item"
         data-usermodules-moduleid="@(GetModuleId(Module.CaseQuickOpen))"
         data-usermodules-position="@(GetModulePosition(Module.CaseQuickOpen))">
        @if (GetModuleVisibility(Module.CaseQuickOpen))
        {
            Html.RenderPartial("CaseQuickOpen");
        }
    </div>
</div>
@functions
{

    private int GetModuleId(Module module)
    {
        var userModule = Model.UserModules.FirstOrDefault(m => m.Module_Id == (int)module);
        if (userModule == null)
            return 0;
        return userModule.Module_Id;
    }

    private int GetModulePosition(Module module)
    {
        var userModule = Model.UserModules.FirstOrDefault(m => m.Module_Id == (int)module);
        if (userModule == null)
            return 101;
        return userModule.Position;
    }

    private bool GetModuleVisibility(Module module)
    {
        var userModule = Model.UserModules.FirstOrDefault(m => m.Module_Id == (int)module);
        if (userModule == null)
            return false;
        return userModule.isVisible;
    }
}

<script type="text/javascript">

    function UpdateLogo() {
        var columns = $(".span4");
        $("#mainContainer").find(".startpage-brand").remove();
        var logo = $(".startpage-brand").clone();
        for (var i = 0; i < columns.length; i++) {
            var column = $(columns[i]);
            var columnLogo = column.find(".startpage-brand");
            if (column.find(".portlet-content").length == 0) {
                if (columnLogo.length == 0) {
                    column.find(".tab-content").before(logo);
                    logo.show();
                    break;
                }
            }
        }
    }

    $(function () {
        $(".column").sortable({
            connectWith: ".column",
            handle: ".portlet-header",
            cancel: ".portlet-toggle",
            placeholder: "portlet-placeholder",
            revert: true,
            beforeStop: function (event, ui) {
                //UpdateLogo();
                $(document).trigger("OnUserModuleItemMoved", [ui]);
            }
        });

        //UpdateLogo();
    });

</script>
@if (showStatisticsWidget)
{
    <script type="text/javascript">
        dhHelpdesk.statistics.init({
            dataUrl: '@Url.Action("GetStatistics", "Statistics")'
        });
        var statXhr = dhHelpdesk.statistics.loadStatistics();

        $(function () {
            statXhr.done(function() {
                dhHelpdesk.statistics.tryApplyData();
            });
        });
    </script>
}