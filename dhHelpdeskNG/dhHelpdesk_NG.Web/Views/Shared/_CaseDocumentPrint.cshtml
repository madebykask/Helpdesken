@model DH.Helpdesk.BusinessData.Models.CaseDocument.CaseDocumentModel
@using DH.Helpdesk.Common.Extensions.String
@{
    Layout = null;

}


<!DOCTYPE html>
<html>
<head>
    <style>
        @@font-face {
            font-family: 'IDAutomationHC39M';
            src: url('../fonts/IDAutomationHC39M.eot');
            src: url('../IDAutomationHC39M.eot?#iefix') format('embedded-opentype'), url('../fonts/IDAutomationHC39M.woff') format('woff');
            /*,
        url('IDAutomationHC39M.svg#IDAutomationHC39M') format('svg');*/
            font-weight: normal;
            font-style: normal;
        }

        @@font-face {
            font-family: 'Verdana';
            src: url('../fonts/verdana.eot');
            src: url('../verdana.eot?#iefix') format('embedded-opentype'), url('../fonts/verdana.woff') format('woff'),url('verdana.svg#verdana') format('svg');
            font-weight: normal;
            font-style: normal;
        }


        body, table, p, ul, li {
            font-size: 10pt;
            line-height: 22px;
            font-family: Verdana;
            vertical-align: top;
        }

        p {
            page-break-inside: avoid;
        }

        h1 {
            font-size: 11pt;
            line-height: 24px;
            font-family: Verdana;
            font-weight: bold;
        }

        h2 {
            font-size: 16pt;
            line-height: 24px;
            font-family: Verdana;
            font-weight: bold;
        }

        h4 {
            margin: 0;
            padding: 0;
            font-size: 14pt;
            line-height: 24px;
            font-family: Verdana;
            font-weight: bold;
        }

        h5 {
            font-size: 11pt;
            font-family: Verdana;
            font-weight: bold;
            margin: 0 !important;
            padding: 0 !important;
        }

        h6 {
            margin: 0;
            padding: 0;
            font-size: 9pt;
            font-family: Verdana;
            font-weight: bold;
        }

        table {
            border: none;
            /*width:100%;*/
            border-collapse: collapse;
        }



        .table-full-width {
            width: 100%;
            min-width: 100%;
            margin: 0 !important;
            padding: 0 !important;
        }

        .table-two-colums {
            margin: 20px !important;
            padding: 20px !important;
        }

        .table-numeric tr td, .table-text tr td {
            padding-bottom: 10px !important;
        }

        .table {
            width: 100%;
            min-width: 100%;
            border: 1px solid black;
            border-collapse: collapse;
        }

        .td-no-border {
            border: none !important;
        }

        .table-bordered > tbody > tr > td, .table-bordered > tbody > tr > th, .table-bordered > tfoot > tr > td, .table-bordered > tfoot > tr > th, .table-bordered > thead > tr > td, .table-bordered > thead > tr > th {
            border: 1px solid black;
        }

        table tr td {
            vertical-align: top;
        }



        .table-appendix tr td {
            vertical-align: middle !important;
            text-align: center !important;
            padding: 5px !important;
        }

        .form-personal-data, .form-personal-data ul li {
            font-size: 11pt !important;
        }

            .form-personal-data tr td {
                vertical-align: top;
                padding: 5px;
            }

        .td-bold {
            font-weight: bold;
        }

        .td-align-middle {
            vertical-align: middle !important;
        }

        /*.circle_ul {
            list-style: none;
            list-style-image: url('/ect/FormLibContent/Assets/img/circle.png');
            padding-left: 10px;
            margin-left: 10px;
        }*/


        .dash_ul {
            list-style: none;
            padding-left: 0;
            margin-left: 0;
        }

            .dash_ul li:before {
                content: "– ";
            }

        ul {
            margin-top: 0;
            padding-top: 0;
        }


        .nomargin_ul {
            margin: 0;
            margin-left: 20px;
            padding: 0;
        }

        .default-page {
            margin: 0 auto;
            width: 609px;
            max-width: 609px;
        }

        .form-personal-data-page {
            margin: 0 auto;
            width: 713px;
            max-width: 713px;
        }

        .draft {
            /* IE 8 */
            -ms-filter: "progid:DXImageTransform.Microsoft.Alpha(Opacity=50)";
            /* IE 5-7 */
            filter: alpha(opacity=50);
            /* Netscape */
            -moz-opacity: 0.5;
            /* Safari 1.x */
            -khtml-opacity: 0.5;
            /* Good browsers */
            opacity: 0.5;
        }

        .footer-au {
            font-family: 'Verdana';
            font-weight: normal;
            font-style: normal;
            text-align: center !important;
        }
    </style>
</head>
<body>
    <div class="default-page">

        @if (Model.CaseDocumentParagraphs != null)
        {
            foreach (var item in Model.CaseDocumentParagraphs.OrderBy(x => x.SortOrder))
            {

                if (item.CaseDocumentParagraph.CaseDocumentTexts != null)
                {
                    //TODO: OrderBy
                    //Check ParagraphType

                    if (item.CaseDocumentParagraph.ParagraphType == 1)
                    {
                        <p style="text-align: justify;">

                            @foreach (var paragraphText in item.CaseDocumentParagraph.CaseDocumentTexts.OrderBy(x => x.SortOrder))
                            {

                                if (!string.IsNullOrEmpty(paragraphText.Text))
                                {

                                    @paragraphText.Text.ToHtmlString()
                                }

                            }
                        </p>

                    }

                    if (item.CaseDocumentParagraph.ParagraphType == 2)
                    {
                        int nr = 1;

                        <table class="table-full-width table-numeric">
                            @foreach (var paragraphText in item.CaseDocumentParagraph.CaseDocumentTexts.OrderBy(x => x.SortOrder))
                    {
                        //Dont list empty
                        if (!string.IsNullOrEmpty(paragraphText.Text))
                        {

                    <tr style="page-break-inside: avoid">
                        <td style="padding-right:10px;margin-right:10px; text-align:unset;"><strong>@nr.</strong></td>
                        <td style="padding-right:10px;margin-right:10px; text-align:unset;"><strong>@paragraphText.Headline.ToHtmlString()</strong></td>
                        <td style="text-align: justify;">@paragraphText.Text.ToHtmlString()</td>
                    </tr>

                            nr = nr + 1;

                        }
                    }
                        </table>

                    }
                    if (item.CaseDocumentParagraph.ParagraphType == 3)
                    {
                        <img src="~/img-profile/IKEA_logo_RGB_2.jpg" style="width:200px;" />
                    }


                    if (item.CaseDocumentParagraph.ParagraphType == 4)
                    {
                        <table class="table-full-width table-two-colums">
                            @foreach (var paragraphText in item.CaseDocumentParagraph.CaseDocumentTexts.OrderBy(x => x.SortOrder))
                            {
                                //Dont list empty
                                if (!string.IsNullOrEmpty(paragraphText.Text))
                                {

                                    <tr style="page-break-inside: avoid">
                                        <td style="padding-right:10px;margin-right:10px;">@paragraphText.Headline.ToHtmlString()</td>
                                        <td>@paragraphText.Text.ToHtmlString()</td>
                                    </tr>

                                }
                            }
                        </table>

                    }
                }

            }
        }

    </div>
</body>
</html>