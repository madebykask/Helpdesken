@model DateTime?

@{
    var controlId = ViewData["id"];
}

<script type="text/javascript">
    $(function() {
        $('#@controlId').datepicker({
            format: "mm-yyyy",
            viewMode: "months", 
            minViewMode: "months",
            autoclose: true
        });

        $('#@controlId').datepicker("setDate", new Date());
    });
</script>

<input type="text" style="display: none;" />
<div id="@controlId" class="input-append date dateie">
    @Html.TextBox(string.Empty, string.Empty, new { @class = "span2" })
    <span class="add-on">
        <i class="icon-calendar"></i>
    </span>
</div>

