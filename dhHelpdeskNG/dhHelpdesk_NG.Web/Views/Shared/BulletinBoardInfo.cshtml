@model IEnumerable<DH.Helpdesk.BusinessData.Models.BulletinBoard.Output.BulletinBoardOverview>

@if (Model != null && Model.Any())
{
    <div class="row-fluid">
        <div class="box-box span12">
            <div class="box-header">
                <div class="start-tile-img label blue"><a href="@Url.Action("index", "bulletinboard", new {area = ""})"><img src="@Url.Content("~/Content/icons/bulletinboard.png")" alt="@Translation.Get("Anslagstavla", Enums.TranslationSource.TextTranslation)" /></a></div><h4>@Translation.Get("Anslagstavla", Enums.TranslationSource.TextTranslation)</h4>
            </div>
            <div class="box-body">
                @foreach (var bulletinBoard in Model)
                {
                    <div class="box-post">
                        <div class="label blue">@bulletinBoard.CreatedDate.ToFormattedDate()</div>
                        <div class="textrow">@bulletinBoard.Text</div>
                    </div>
                }
            </div>
        </div>
    </div>
}
