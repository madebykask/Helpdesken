@model IEnumerable<DH.Helpdesk.BusinessData.Models.Document.Output.DocumentOverview>

<div class="row-fluid">
    <div class="box-box span12">
        <div class="box-header">
            <div class="start-tile-img label orange"><a href="@Url.Action("Index", "Document", new { area = "" })"><img src="@Url.Content("~/Content/icons/problem.png")" alt="@Translation.Get("Documents", Enums.TranslationSource.TextTranslation)" /></a></div><h4>@Translation.Get("Documents", Enums.TranslationSource.TextTranslation)</h4>
        </div>
        <div class="box-body">
            @foreach (var document in Model)
            {
                <div class="box-post" onclick="">
                    <div class="label orange">@document.CreatedDate.ToFormattedDateTimeReverse()</div>
                    <div class="textrow">@document.Name</div>
                </div>                
            }
        </div>
    </div>
</div>
