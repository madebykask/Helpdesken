@using DH.Helpdesk.BusinessData.OldComponents
<style>
    .nomargin-padding-bottom {
        margin-bottom: 0px;
        padding-bottom: 0px;
    }

    #btnQuickOpen {
        float: right;
        min-width: 100px;
    }

    #messageQuickOpen {
      vertical-align: middle;
      line-height:30px;
    }
</style>
<div class="row-fluid">
    <div class="box-box span12">
        <div class="box-header portlet-header">
            <h4>@Translation.GetCoreTextTranslation("Snabbåtkomst") </h4>
        </div>
        <div class="box-body portlet-content">
            <div class="span12 pull-right nomargin-padding-bottom">
                <div class="box-post">
                     <form id="frmQuickOpen" name="frmQuickOpen" class="form-inline">
                        <div>
                            @*<input id="txtQuickOpen" class="span12" tabindex="0" name="txtQuickOpen" rel="tooltip" title="@Translation.GetCoreTextTranslation("Ange ärendenummer du vill öppna")" onkeypress="return event.charCode >= 48 && event.charCode <= 57" placeholder="@Translation.GetCoreTextTranslation("Ange ärendenummer du vill öppna")" type="text" />*@
                            <input id="txtQuickOpen" class="span12" tabindex="0" name="txtQuickOpen" rel="tooltip" title="@Translation.GetCoreTextTranslation("Ange") @Translation.GetForCase(GlobalEnums.TranslationCaseFields.CaseNumber.ToString(), SessionFacade.CurrentCustomer.Id) @Translation.GetCoreTextTranslation("nummer du vill öppna")" onkeypress="return event.charCode >= 48 && event.charCode <= 57" placeholder="@Translation.GetCoreTextTranslation("Ange") @Translation.GetForCase(GlobalEnums.TranslationCaseFields.CaseNumber.ToString(), SessionFacade.CurrentCustomer.Id) @Translation.GetCoreTextTranslation("nummer du vill öppna")" type="text" />
                        </div>
                        <div><span id="messageQuickOpen">&nbsp;</span><button id="btnQuickOpen" class="btn" tabindex="1" type="button">@Translation.GetCoreTextTranslation("Öppna")</button></div>
                    </form>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<script>
    $(function () {

        $('#txtQuickOpen').focusout(function () {
            $('#btnQuickOpen').focus();
        });

        $('#txtQuickOpen').focusin(function () {
            $(this).select();
        });

        $('#txtQuickOpen').keypress(function (e) {

            var $this = $(this);

            if ($this.val() != '') {
                $('#messageQuickOpen').html('&nbsp;');
                $('#txtQuickOpen').tooltip('hide');
            }

            var key = e.keyCode || e.which;
            if (key == 13)  // the enter key code
            {
                e.preventDefault();
                $("#btnQuickOpen").click();
                return false;
            }
        });
    });
    $("#btnQuickOpen").unbind().click(function (e) {
        e.preventDefault();

        if ($('#txtQuickOpen').val() != '') {

            $('#txtQuickOpen').addClass('input-searching');

            var $this = $(this);
            $this.attr('disabled', 'disabled');

            var form = $("#frmQuickOpen").serialize();
            $.ajax({
                type: 'POST',
                url: "/Cases/QuickOpen",
                data: form,
                dataType: 'json',
                success: function (data) {
                    if (data.result == "success") {
                        window.location.href = data.data;
                        $('#btnQuickOpen').focus();
                        $('#txtQuickOpen').attr('disabled', 'disabled');
                        $('#messageQuickOpen').html('&nbsp;');
                    }
                    else {
                        $this.removeAttr('disabled');
                        $('#txtQuickOpen').removeAttr('disabled');
                        $('#messageQuickOpen').html(data.data);
                        $('#txtQuickOpen').removeClass('input-searching');
                        $("#txtQuickOpen").select();
                    }
                }
                , error: function (XMLHttpRequest, texmessageQuickOpenatus, errorThrown) {

                    $('#messageQuickOpen').html('&nbsp;');
                    $this.removeAttr('disabled');
                    $('#txtQuickOpen').removeAttr('disabled');
                    $("#txtQuickOpen").select();
                }
            });
        }

        else
        {
            $('#messageQuickOpen').html($('#txtQuickOpen').attr('placeholder'));
        }
    });
</script>