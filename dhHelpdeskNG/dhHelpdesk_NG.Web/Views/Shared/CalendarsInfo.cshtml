@using DH.Helpdesk.Common.Extensions.DateTime
@model IEnumerable<DH.Helpdesk.BusinessData.Models.Calendar.Output.CalendarOverview>

@if (Model != null && Model.Any())
{
    <div class="row-fluid">
        <div class="box-box span12">
            <div class="box-header portlet-header">
                <div class="start-tile-img label green"><a href="@Url.Action("index", "calendar", new {area = ""})"><img src="@Url.Content("~/Content/icons/news.png")" alt="@Translation.Get("Aktuellt", Enums.TranslationSource.TextTranslation)" /></a></div><h4>@Translation.Get("Aktuellt", Enums.TranslationSource.TextTranslation)</h4>
            </div>
            <div class="box-body portlet-content">
                @foreach (var calendar in Model)
                {
                    <div class="box-post">
                        <div class="label green">@calendar.CalendarDate.ToFormattedDate()</div>
                        <div class="captionrow">@calendar.Caption</div>
                        <div class="textrow">@calendar.Text</div>
                    </div>
                }
            </div>
        </div>
    </div>
}
