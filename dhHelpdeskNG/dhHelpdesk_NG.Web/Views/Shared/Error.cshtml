@model DH.Helpdesk.Web.Models.Error.HandleErrorInfoGuid
@{
    ViewBag.Title = "Error (" + Model.Exception.Message + ")";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content">
    <div class="container">
        <h2 style="margin: 10px 0;">
            Sorry, an error occurred while processing your request.
        </h2>
        <p style="margin: 10px 0;">
            @DateTime.Now
        </p>
        <p style="margin: 10px 0;">
            Please provide below to your support team:
        </p>
        <p id="exception" style="padding: 10px; background: #ffa;">
            •	Error Id: @Model.Guid<br />
            •	Step-by-step instructions on how to reproduce your issue<br />
            •	Time when error occurred<br />
        </p>
    </div>
</div>
