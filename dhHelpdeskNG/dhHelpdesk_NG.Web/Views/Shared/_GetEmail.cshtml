@model dhHelpdesk_NG.Web.Models.CaseInputViewModel 
@using dhHelpdesk_NG.DTO.Utils

<div class="modal fade" id="modalGetEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-body">
            <form method="post" id="GetEmailDialogForm" class="modal-content">
                <table>
                    <tr>
                        <td>
                            @Translation.Get("Välj", Enums.TranslationSource.TextTranslation)...
                        </td>
                        <td></td>
                        <td>
                            <div>
                                @Translation.Get("Mottagare", Enums.TranslationSource.TextTranslation)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <select id="GetEmailType" name="GetEmailType">
                                <option value="1" selected > @Translation.Get("E-post", Enums.TranslationSource.TextTranslation) </option>                                                   
                                <option value="2"> @Translation.Get("E-postgrupp", Enums.TranslationSource.TextTranslation) </option>                                                   
                                <option value="3"> @Translation.Get(GlobalEnums.TranslationCaseFields.WorkingGroup_Id.ToString(), Enums.TranslationSource.CaseTranslation, Model.case_.Customer_Id)</option>                                                   
                                <option value="4"> @Translation.Get(GlobalEnums.TranslationCaseFields.CaseResponsibleUser_Id.ToString(), Enums.TranslationSource.CaseTranslation, Model.case_.Customer_Id)</option>                                                   
                                <option value="5"> @Translation.Get("Anmälare", Enums.TranslationSource.TextTranslation) </option>                                                   
                            </select><br /> 
                            <div id="divGetEmailFromDropdown" style="display:none">
                                <select id="GetEmailFromDropdown" name="GetEmailFromDropdown">
                                </select>     
                            </div>
                            <div id="divGetEmailFromTextbox">
                                @Html.TextBox("GetEmailFromTextbox")
                            </div>
                            <div id="divGetEmailFromTypeahead" style="display:none">
                                @Html.TextBox("GetEmailFromTypeahead")
                            </div>
                        </td>
                        <td>
                            <button id="btnGetEmail_Append" name="btnGetEmail_Append" class="btn">@Translation.Get("till", Enums.TranslationSource.TextTranslation)</button>
                        </td>
                        <td>
                            <div>
                                <select id="GetEmailRecepients" name="GetEmailRecepients" multiple="multiple">
                                </select>     
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>
                            <button id="btnGetEmail_Delete" name="btnGetEmail_Delete" class="btn">@Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation)</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
        <div class="modal-footer">
            <input type="hidden" id="CopyGetEmailRecepientsTo" value="" />
            <button id="btnGetEmail_OK" name="btnSendGetEmail_OK" class="btn">@Translation.Get("OK", Enums.TranslationSource.TextTranslation)</button>
            <button id="btnGetEmail_Cancel" name="btnGetEmail_Cancel" class="btn">@Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation)</button>
        </div>
    </div>
</div>