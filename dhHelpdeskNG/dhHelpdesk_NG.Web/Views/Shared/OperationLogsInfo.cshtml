@model IEnumerable<DH.Helpdesk.BusinessData.Models.OperationLog.Output.OperationLogOverview>

@if (Model != null && Model.Any())
{
    <div class="row-fluid">
        <div class="box-box span12">
            <div class="box-header portlet-header">
                <div class="start-tile-img label green"><a href="@Url.Action("index", "operationlog", new {area = ""})"><img src="@Url.Content("~/Content/icons/operationlog.png")" alt="@Translation.Get("Driftlogg", Enums.TranslationSource.TextTranslation)" /></a></div><h4>@Translation.Get("Driftlogg", Enums.TranslationSource.TextTranslation)</h4>
            </div>
            <div class="box-body portlet-content">
                @foreach (var operationLog in Model)
                {
                    <div class="box-post">
                        <div class="label green">
                            <img src="@Url.Content("~/Content/icons/new.png")" 
                                 title="@Translation.Get("Ny", Enums.TranslationSource.TextTranslation)" /> Skapad @operationLog.CreatedDate.ToFormattedDateTimeReverse() Uppdaterad @operationLog.ChangedDate.ToFormattedDateTimeReverse()
                        </div>
                        <div class="captionrow">@operationLog.Category.OLCName</div>
                        <div class="textrow">@operationLog.LogText</div>
                    </div>
                }            
            </div>
        </div>
    </div>
}
