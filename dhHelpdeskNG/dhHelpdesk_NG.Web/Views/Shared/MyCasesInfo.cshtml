@using DH.Helpdesk.Common.Extensions.DateTime
@model DH.Helpdesk.Web.Models.Case.MyCasesModel

@if (Model != null && Model.Cases != null && Model.Cases.Any())
{
    <div class="box-header portlet-header">
        <div class="start-tile-img label orange">
            <img src="@Url.Content("~/Content/icons/case.png")" alt="@Translation.Get("Mina tilldelade ärenden")" />
        </div>
        <h4>@Translation.Get("Mina tilldelade ärenden")</h4>
    </div>
    <div class="box-body portlet-content">
        <div class="box-post">
            <table class="table table-bordered table-hover">
                <tbody>
                    @foreach (var myCase in Model.Cases)
                    {  
                        if ((Request.Browser.Browser == "IE") && ((Request.Browser.MajorVersion == 8)))  {
                            <tr alt="@Translation.Get("Kund"): @Html.DisplayFor(m => myCase.CustomerName)" style="cursor: pointer" onclick="window.location.href = '@Url.Action("Edit", "Cases", new { id = myCase.Id })'">
                                <td>
                                 @myCase.CaseNumber
                            </td>
                            <td>
                                 @Html.DisplayFor(m => myCase.Subject)
                            </td>
                            <td style="width:30%;">
                                @myCase.ChangedDate.ToFormattedDateTime()
                            </td>
                        </tr>
                        }
                         else      {
                            <tr rel="tooltip" title="<p style='text-align:left'><strong>@Translation.Get("Kund"):</strong> @Html.DisplayFor(m => myCase.CustomerName)</p><p style='text-align:left'><strong>@Translation.Get("Anmälare"):</strong> @Html.DisplayFor(m => myCase.InitiatorName)</p><p class='toodesc' style='text-align:left'><strong>@Translation.Get("Beskrivning"):</strong> @Html.DisplayFor(m => myCase.Description)</p><p class='readmore'></p>" style="cursor: pointer" onclick="window.location.href = '@Url.Action("Edit", "Cases", new { id = myCase.Id })'">
                                <td>
                                 @myCase.CaseNumber
                            </td>
                            <td>
                                 @Html.DisplayFor(m => myCase.Subject)
                            </td>
                            <td style="width:30%;">
                                @myCase.ChangedDate.ToFormattedDateTime()
                            </td>
                        </tr>
                        }
                        
                        @*<tr rel="tooltip" title="<p style='text-align:left'><strong>@Translation.Get("Kund"):</strong> @Html.DisplayFor(m => myCase.CustomerName)</p><p style='text-align:left'><strong>@Translation.Get("Anmälare"):</strong> @Html.DisplayFor(m => myCase.InitiatorName)</p><p style='text-align:left'><strong>@Translation.Get("Beskrivning"):</strong> @Html.DisplayFor(m => myCase.Description)</div>" style="cursor: pointer" onclick="window.location.href = '@Url.Action("Edit", "Cases", new { id = myCase.Id })'">*@
                            @*<td>
                                 @myCase.CaseNumber
                            </td>
                            <td>
                                 @Html.DisplayFor(m => myCase.Subject)
                            </td>
                            <td style="width:30%;">
                                @myCase.ChangedDate.ToFormattedDateTime()
                            </td>
                        </tr>*@
                    }
                </tbody>
            </table>
        </div>
    </div>
}


