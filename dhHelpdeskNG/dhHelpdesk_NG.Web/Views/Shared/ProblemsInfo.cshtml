@model IEnumerable<DH.Helpdesk.BusinessData.Models.Problem.Output.ProblemInfoOverview>

<div class="row-fluid">
    <div class="box-box span12">
        <div class="box-header">
            <div class="start-tile-img label orange"><a href="@Url.Action("Index", "Problems", new { area = "" })"><img src="@Url.Content("~/Content/icons/problem.png")" alt="@Translation.Get("Problem", Enums.TranslationSource.TextTranslation)" /></a></div><h4>@Translation.Get("Problem", Enums.TranslationSource.TextTranslation)</h4>
        </div>
        <div class="box-body">
            @foreach (var problem in Model)
            {
                <div class="box-post" onclick="">
                    <div class="label orange">@problem.CreatedDate.ToFormattedDateTimeReverse()</div>
                    <div class="textrow">@string.Format("#{0}, {1}", problem.ProblemNumber, problem.Name)</div>
                </div>                
            }
        </div>
    </div>
</div>
