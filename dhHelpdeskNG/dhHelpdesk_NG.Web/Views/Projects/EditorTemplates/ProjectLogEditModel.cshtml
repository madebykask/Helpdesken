@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Models.Projects.ProjectLogEditModel
<div class="container">
    <h4>@Translation.Get("New Log Note", Enums.TranslationSource.TextTranslation)</h4>
    <div class="row">
        <div class="span12">
            <table>
                <tr>
                    <td>@Html.LabelFor(x => x.LogText)
                    </td>
                    <td>
                        @Html.TextAreaFor(x => x.LogText)
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.ProjectId)
            @Html.HiddenFor(x => x.ResponsibleUserId)
        </div>
    </div>
</div>


