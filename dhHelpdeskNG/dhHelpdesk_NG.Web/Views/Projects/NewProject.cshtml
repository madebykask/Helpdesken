@model dhHelpdesk_NG.Web.Models.Projects.NewProjectViewModel
@using (Html.BeginForm("NewProject", "Projects", FormMethod.Post, new { id = "edit_form" }))
{
    @Html.ValidationSummary(true)

    <div class="secnavs">
        <div class="pull-left">
            <ul class="secnav">
                <li>
                    <input type="submit" value="@Translation.Get("Save Project", Enums.TranslationSource.TextTranslation)" class="btn"/>
                </li>

                <li id="menu2">@Html.ActionLink(Translation.Get("Cancel", Enums.TranslationSource.TextTranslation), "Index", null, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs" id="problem_tab">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("Project", Enums.TranslationSource.TextTranslation)</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane tab-pane-border active" id="fragment-1">
                    @Html.Partial("_InputProject", Model)
                </div>
                <div class="tab-pane tab-pane-border" id="fragment-2">
                    <div id="log_edit">
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>

    $.validator.setDefaults({
        ignore: ""
    });

</script>
