@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.BusinessData.Models.Case.FilesModel     

@if (Model != null)
{    
    <table id="case_files_table" class="tableform">
        <tbody>
            @if (Model.Files != null)    
            {
                var i = 0;
                foreach (var filename in Model.Files) 
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("DownloadFile", new RouteValueDictionary { { "id", Model.Id }, { "fileName", filename } })">@filename</a>
                        </td>
                        <td>
                            <a id="@string.Format("delete_casefile_button_{0}", i)" class="btn">@Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation)</a>
                        </td>
                    </tr>
                    i++;
                }
            }    
        </tbody>
    </table> 
}    