@model dhHelpdesk_NG.Web.Models.Projects.NewProjectViewModel
<script type="text/javascript" src="@this.Url.Content("~/Scripts/jquery.typing-0.2.0.min.js")"></script>

<div class="container">
    <h4>@Translation.Get("General", Enums.TranslationSource.TextTranslation)</h4>
    <div class="row">
        <div class="span12">
            <table>
                @if (Model.Project.Id != 0)
                {
                    <tr>
                        <td>@Translation.Get("Project Number", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td>
                            @Html.DisplayTextFor(x => x.Project.Id)
                        </td>
                    </tr>
                }
                <tr>
                    <td>@Translation.Get("Project Name", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Html.EditorFor(x => x.Project.Name)
                        @Html.ValidationMessageFor(x => x.Project.Name)
                    </td>
                </tr>
                <tr>
                    <td>@Translation.Get("Project Manager", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.Project.ProjectManagerId, Model.Users, string.Empty)
                    </td>
                </tr>
                <tr>
                    <td>@Translation.Get("Finishing Date", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        <div class="input-append date dateie" data-date="" id="dt">
                            @Html.EditorFor(x => x.Project.EndDate)<span class="add-on"><i class="icon-calendar"></i></span>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>@Translation.Get("Description", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Html.TextAreaFor(x => x.Project.Description)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Translation.Get("Project members", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Html.DropDownListFor(x => x.Project.ProjectCollaboratorIds, Model.Users, new { id = "collaborators_dropdown", multiple = "multiple", @class = "multiselect multiselect-search" })
                    </td>
                </tr>
                <tr>
                    <td>@Translation.Get("State", Enums.TranslationSource.TextTranslation)
                    </td>
                    <td>
                        @Translation.Get("Active", Enums.TranslationSource.TextTranslation)
                        @Html.RadioButtonFor(x => x.Project.IsActive, 1, new { @checked = Model.Project.IsActive == 1 })

                        @Translation.Get("Finished", Enums.TranslationSource.TextTranslation)
                        @Html.RadioButtonFor(x => x.Project.IsActive, 0, new { @checked = Model.Project.IsActive != 1 })
                    </td>
                </tr>
            </table>
            @Html.HiddenFor(x => x.Project.Id)
        </div>
    </div>
</div>
