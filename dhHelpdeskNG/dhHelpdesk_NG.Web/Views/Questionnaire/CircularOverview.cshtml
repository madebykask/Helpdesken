@using DH.Helpdesk.Common.Enums
@model List<DH.Helpdesk.Web.Models.Questionnaire.Output.CircularOverviewModel>

@{
    ViewBag.Title = "Circular";
}

@using (Html.BeginForm("EditQuestionnaire", "Questionnaire", FormMethod.Post, new { id = "circular_overview_form" }))
{    
    //@Html.HiddenFor(m => m)

    <div class="secnavs">
        <div class="pull-left">
            <ul class="secnav">               
                <li>
                    @Html.ActionLink(Translation.Get("Nytt utskick", Enums.TranslationSource.TextTranslation), "NewCircular", "Questionnaire",
                                     new { questionnaireId = ViewBag.qId},
                                     new { @class = "btn" })
                </li>
                <li>
                    @Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", "Questionnaire", new { @class = "btn" })
                </li>

            </ul>
        </div>
    </div>
    
    <div class="content">
        <div class="container">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#fragment-1">@Translation.Get("utskick", Enums.TranslationSource.TextTranslation)</a>
                </li>                
                <li class="">
                    <a href="#fragment-2">@Translation.Get("Rapporter", Enums.TranslationSource.TextTranslation)</a>
                </li>             
            </ul>                                                                             

            <div class="tab-content">
                <div id="fragment-1" class="tab-pane tab-pane-border active" >
                    <div class="container">                        
                        <div class="row">
                            <div class="span12">
                                <table class="tableform">
                                    <tr>
                                        <td class="span3">
                                            @Translation.Get("Status", Enums.TranslationSource.TextTranslation):
                                        </td>
                                        <td class="span12">
                                            @Html.RadioButton("1","",(ViewBag.curState == CircularStateId.ReadyToSend?true:false) , new{onclick="ResetView(" + ViewBag.qId + "," + CircularStateId.ReadyToSend + ");" }) 
                                            @Translation.Get("Klar att skicka", Enums.TranslationSource.TextTranslation)                                                                                        
                                            &nbsp; &nbsp; &nbsp;
                                            @Html.RadioButton("1","",(ViewBag.curState == CircularStateId.Sent?true:false) , new{onclick="ResetView(" + ViewBag.qId + "," + CircularStateId.Sent+");" }) 
                                            @Translation.Get("Skickad", Enums.TranslationSource.TextTranslation)                                                                                        
                                            &nbsp; &nbsp; &nbsp;
                                            @Html.RadioButton("1","",(ViewBag.curState == CircularStateId.All?true:false) ,new{onclick="ResetView(" + ViewBag.qId  + "," + CircularStateId.All+ ");"  }) 
                                            @Translation.Get("Alla", Enums.TranslationSource.TextTranslation)                                                                                                                                    
                                        </td>                                         
                                    </tr>                                  
                                </table>

                            </div>
                        </div>
                                              
                        <div class="container">                            
                                <table id="tblCircular" class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th sort-data="Name" onclick="submit();" style="cursor: pointer; cursor: hand; width: 15%">
                                                @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)                                               
                                            </th>
                                            <th sort-data="Date" onclick="submit();" style="cursor: pointer; cursor: hand;width:10%">
                                                @Translation.Get("Datum", Enums.TranslationSource.TextTranslation)                                                       
                                            </th>
                                            <th sort-data="State" onclick="submit();" style="cursor: pointer; cursor: hand; width: 10%">
                                                @Translation.Get("Status", Enums.TranslationSource.TextTranslation)                                                 
                                            </th>
                                            <th sort-data="Participant" onclick="submit();" style="cursor: pointer; cursor: hand; width: 10%">
                                                @Translation.Get("Deltagare", Enums.TranslationSource.TextTranslation)                                                        
                                            </th>                                            
                                            <th sort-data="Statistic" onclick="submit();" style="cursor: pointer; cursor: hand; width: 50%"  >
                                                @Translation.Get("Statistik", Enums.TranslationSource.TextTranslation)                                                
                                            </th>                                            
                                        </tr>
                                    </thead>
                                     @foreach (var item in Model)
                                     {
                                         <tr>
                                             <td>                                                 
                                                 <a href="@Url.Action("CircularOverview", "Questionnaire", new {questionnaireId = item.Id})">
                                                     <img src="@Url.Content("~/Content/img/Circular.png")" style="width: 20px; height: 20px" />
                                                     @Html.DisplayFor(modelItem => item.CircularName)
                                                 </a>                                                                                                                                                                                       
                                             </td>
                                             <td>
                                                 <a href="@Url.Action("CircularOverview", "Questionnaire", new {questionnaireId = item.Id})">
                                                     @Html.DisplayFor(modelItem => item.Date)
                                                 </a>
                                             </td>
                                             <td>
                                                 <a href="@Url.Action("CircularOverview", "Questionnaire", new {questionnaireId = item.Id})">
                                                     @Html.DisplayFor(modelItem => item.State)
                                                 </a>
                                             </td>
                                             <td>
                                                 0(0)
                                             </td>
                                             <td>
                                                 Icon
                                             </td>
                                         </tr>
                                     }
                                </table>                            
                        </div>
                    </div>
                </div>               
                        
                <div id="fragment-2" class="tab-pane tab-pane-border" >                               
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                @*<tr>
                                    <td class="span3">
                                        @Translation.Get("Språk", Enums.TranslationSource.TextTranslation):
                                    </td>
                                    <td class="span9">
                                        @Html.DropDownListFor(model => model.LanguageId, Model.Languages,new {id = "languageList"})                                            
                                    </td> 
                                </tr>
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Namn", Enums.TranslationSource.TextTranslation):
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.Name)
                                    </td> 
                                </tr>
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Beskrivning", Enums.TranslationSource.TextTranslation):
                                    </td>
                                    <td class="span9">
                                        @Html.TextAreaFor(model => model.Description, new { maxlength = "2000", style = "height:100px;" })
                                    </td> 
                                </tr>*@
                            </table>
                        </div>
                    </div>
                </div>                    
                
                    
            </div>                                                           
        </div>
    </div>        
}

<script type="text/javascript">
    
    function ResetView(qId,state) {

        window.location.href = '@Url.Action("CircularOverview","Questionnaire")?questionnaireId=' + qId + 
                "&state=" + state;        
    }
    
</script>


