@model List<DH.Helpdesk.Web.Models.Questionnaire.Input.CircularPartOverview>
<div class="container">
    <div class="row">
        <div class="span100">
            <table id="tblCircular" class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            @Translation.Get("Ärende")
                        </th>
                        <th>
                            @Translation.Get("Rubrik")
                        </th>
                        <th>
                            @Translation.Get("E-post")
                        </th>
                        <th>
                            @Translation.Get("Status")
                        </th>
                    </tr>
                </thead>
                @{
                    var cases = Model;
                    for (int i = 0; i < cases.Count; i++)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => cases[i].CaseNumber)
                                @Html.HiddenFor(m => cases[i].CaseId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cases[i].Caption)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cases[i].Email)
                            </td>
                            <td>
                                @cases[i].IsSent.GetDisplayValue()
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>
</div>
