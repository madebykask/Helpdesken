@model List<DH.Helpdesk.Web.Models.Questionnaire.Output.QuestionnaireOverviewModel>
@using DH.Helpdesk.Common.Enums;

@{
    ViewBag.Title = "Index";
}

<div class="secnavs">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + 
                                 Translation.Get("Enkät", Enums.TranslationSource.TextTranslation), "NewQuestionnaire", null, new { @class = "btn" })</li>
        </ul>
    </div>
</div>

<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Enkät", Enums.TranslationSource.TextTranslation)</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                @using (Html.BeginForm("index", "Questionnaire", FormMethod.Post, new { id = "search_form" }))
                {
                    <div class="container">
                        <table>
                            <tr>
                                <td>
                                    @*@Html.TextBoxFor(model => model.SearchBbs, new { maxlength = "50" })*@
                                </td>
                                <td>
                                    @*<input type="button" id="searchQueryBtn" value="@Translation.Get("Sök", Enums.TranslationSource.TextTranslation)" class="btn" onclick="submit();" />*@
                                </td>                                
                            </tr>
                        </table>
                    </div>
                    
                    <div class="container">
                        <table id="tblQuestionnaire" class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th style="cursor: pointer; cursor: hand;width: 15%" >
                                        @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)
                                    </th>
                                    <th style="cursor: pointer; cursor: hand;width: 60%">
                                        @Translation.Get("Text", Enums.TranslationSource.TextTranslation)
                                    </th>
                                    <th style="cursor: pointer; cursor: hand;width: 25%">
                                        @Translation.Get("Circular", Enums.TranslationSource.TextTranslation)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {                               
                                    <tr>
                                        <td>
                                            <a href="@Url.Action("EditQuestionnaire", "Questionnaire", new { questionnaireId = item.Id, languageId = LanguageId.Swedish })">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </a>                                                                                                                                                                                       
                                        </td>
                                        <td>
                                            <a href="@Url.Action("EditQuestionnaire", "Questionnaire", new { questionnaireId = item.Id, languageId = LanguageId.Swedish})">
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("CircularOverview", "Questionnaire", new { questionnaireId = item.Id, state = CircularStateId.All})">
                                                <img src="@Url.Content("~/Content/img/Circular.png")" style="width: 23px; height: 23px" />                                            
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div> <!-- Container-->
                } <!-- Begin Form -->
            </div>
        </div>
    </div>
</div>
