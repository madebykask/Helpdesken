@using System.Globalization

@model DH.Helpdesk.Web.Models.Questionnaire.Input.EditQuestionnaireQuestionModel

<div class="tab-content">
    <div class="tab-pane tab-pane-border active" id="fragment-1">
        <div class="container">
            <h4>@Translation.Get("Options", Enums.TranslationSource.TextTranslation)</h4>
            <div class="row">
                <div class="span12">
                    <table id="tblQuestions" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th style="cursor: pointer; cursor: hand;width: 10%" >
                                    @Translation.Get("Position", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th style="cursor: pointer; cursor: hand;width: 70%">
                                    @Translation.Get("Alternativ", Enums.TranslationSource.TextTranslation)
                                </th>                               
                                <th style="cursor: pointer; cursor: hand;width: 15%">
                                    @Translation.Get("Värde", Enums.TranslationSource.TextTranslation)
                                </th>                               
                                 <th style="cursor: pointer; cursor: hand;width: 10%">
                                    @Translation.Get("Åtgärd", Enums.TranslationSource.TextTranslation)
                                </th>                               
                            </tr>
                        </thead>
                        <tbody>                            
                            @foreach (var item in Model.Options)
                            {                               
                                <tr>
                                    <td>
                                         @Html.TextBoxFor(itemmodel => item.OptionPos, new {style = "width: 85%;" })  
                                    </td>
                                    <td>
                                         @Html.TextBoxFor(itemmodel => item.Option, new {style = "width: 95%;" })
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(itemmodel => item.OptionValue, new {style = "width: 85%;" })
                                    </td>                                    
                                    <td>
                                        @Html.ActionLink("Action","EditQuestionnaireQuestion") 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

 <script type="text/javascript">
    $(function() {
        $("#languageList").change(function() {
            var selectedItem = $(this).val();
            window.location.href = '@Url.Action("EditQuestionnaireQuestion","Questionnaire")' +
                                         '?questionnaireId=' + @Model.QuestionnaireId.ToString(CultureInfo.InvariantCulture) +
                                         '&questionnaireQuestionId=' + @Model.Id.ToString(CultureInfo.InvariantCulture) +
                                         "&languageId=" + selectedItem; 
        });
    });
</script>