@model DH.Helpdesk.Web.Models.Case.CaseSettingModel
<form id="frmCaseSetting" name="frmCaseSetting">
    <div class="tab-content">
        <div class="tab-pane tab-pane-border active" id="fragment-1">
            <div class="container">
                <h4>@Translation.Get("Filter", Enums.TranslationSource.TextTranslation)  @Translation.Get("Ärendeöversikt", Enums.TranslationSource.TextTranslation) </h4>    

                @Html.HiddenFor(m=> Model.CustomerId)                
                @Html.HiddenFor(m=> Model.UserId)

                <div class="row">
                    <div class="span100">
                        <table id="tblCaseSetting" class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Translation.Get("Fält", Enums.TranslationSource.TextTranslation)
                                    </th>
                                    <th >
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)
                                    </th>                                                        
                                    <th >
                                        @Translation.Get("Filter", Enums.TranslationSource.TextTranslation)
                                    </th>                                     
                                </tr>
                            </thead>

                            <tr>
                                <td class="span3">
                                    @Translation.Get("Område", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.RegionCheck)                                    
                                </td>                            
                                <td colspan="2">
                                    <select id="lstRegions" name="lstRegions" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.Regions)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedRegion)>@e.Name</option>                                       
                                        }
                                    </select>
                                </td>                                                        
                            </tr>                                  
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Registrerad av", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.RegisteredByCheck)
                                </td>                            
                                <td colspan="2">
                                    <select id="lstRegisterBys" name="lstRegisterBy" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.RegisteredBy)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedRegisteredBy)>@e.SurName @e.FirstName</option>                                       
                                        }
                                    </select>
                                </td>                                                        
                            </tr>                                  
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Ärendetyp", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.CaseTypeCheck)
                                </td>                        
                                <td>
                                
                                </td>
                            </tr>                           
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Produktområde", Enums.TranslationSource.TextTranslation): 
                                </td>
                                <td>
                                    @Html.CheckBoxFor(m => Model.ProductAreaCheck)
                                </td>                                                        
                                <td colspan="2">
                                    <div id="divProductAreaSetting" class="btn-group">
                                        <div class="btn" id="divBreadcrumbs_ProductAreaSetting">@Model.ProductAreaPath</div>
                                        <button class="btn dropdown-toggle" data-toggle="dropdown">
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="#">@Translation.Get("--", Enums.TranslationSource.TextTranslation)</a></li>
                                            @Html.ProductAreaDropdownButtonString(Model.ProductAreas)
                                        </ul>
                                        @Html.HiddenFor(model => model.ProductAreaId)
                                    </div>
                                </td>                            
                            </tr>                                             
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Driftgrupp", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.WorkingGroupCheck)
                                </td>                        
                                <td colspan="2">
                                    <select id="lstWorkingGroups" name="lstWorkingGroup" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.WorkingGroups)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedWorkingGroup)>@e.WorkingGroupName</option>                                       
                                        }
                                    </select>
                                </td>                                                        
                            </tr>          
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Ansvarig", Enums.TranslationSource.TextTranslation): 
                                </td>
                                <td>
                                    @Html.CheckBoxFor(m => Model.ResponsibleCheck)
                                </td>                            
                                <td>
                                
                                </td>                            
                            </tr>            
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Handläggare", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.AdministratorCheck, new { disabled = "1" })
                                </td>
                                <td colspan="2">
                                    <select id="lstAdministrators" name="lstAdministrator" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.Administrators)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedAdministrator)>@e.SurName @e.FirstName</option>                                       
                                        }
                                    </select>
                                </td>                                                        
                            </tr>                                                           
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Prioritet", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.PriorityCheck)
                                </td>                            
                                <td colspan="2">
                                    <select id="lstPriorities" name="lstPriority" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.Priorities)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedPriority)>@e.Code. @e.Name </option>                                       
                                        }
                                    </select>
                                </td>                                                                                                                
                            </tr>
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Status", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.StateCheck)
                                </td>                        
                                <td>
                                
                                </td>
                            </tr>
                            <tr>
                                <td class="span3">
                                    @Translation.Get("Understatus", Enums.TranslationSource.TextTranslation):
                                </td>                            
                                <td>
                                    @Html.CheckBoxFor(m => Model.SubStateCheck)
                                </td>                            
                                <td colspan="2">
                                    <select id="lstSubStates" name="lstSubState" class="multiselect multiselect-search" multiple="multiple">
                                        @foreach (var e in Model.SubStates)
                                        {                                                                                                      
                                            <option value="@e.Id" @e.Id.IdIsSelected(Model.SelectedSubState)>@e.Name </option>                                       
                                        }
                                    </select>
                                </td>                                                                                                                
                            </tr>          
                        </table>
                    </div>
                </div>
            </div>
            <!-- ************************* Columns ********************************* -->      
            
            <h4>@Translation.Get("Filter", Enums.TranslationSource.TextTranslation)  @Translation.Get("Ärendeöversikt", Enums.TranslationSource.TextTranslation) </h4>    
            <div class="row">                
                <div class="span12">
                    
                    <table class="table table-striped table-bordered table-hover" id="customerCaseSum">
                        <thead>
                            <tr>
                                <th>
                                    @Translation.Get("Kolumn", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th>
                                    @Translation.Get("Rad", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th>
                                    @Translation.Get("Min längd", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th>
                                    @Translation.Get("Ordning", Enums.TranslationSource.TextTranslation)
                                </th>
                                <th>&nbsp;
                                </th>
                            </tr>
                        </thead>
                        <tbody id="dataTable">
                            @if (Model.ColumnSetting != null)
                            {
                                <tr class="rowAdding">                                   
                                    <td>
                                        <select style="width: 190px;" id="labellist">
                                            <option></option>
                                             @foreach (var cfs in Model.ColumnSetting.CaseFieldSettingLanguages)
                                                {
                                                    if (cfs.Name != "Filename" && cfs.Name != "text_internal" && cfs.Name != "tblLog.Text_External" && cfs.Name != "tblLog.Text_Internal" && cfs.Name != "tblLog.Charge" && cfs.Name != "tblLog.Filename")
                                                    {
                                                        <option id="label" value="@cfs.Name">@cfs.Label</option>  
                                                    }
                                                }
                                            <option value="">--------------------------</option>
                                            <option value="_temporary_.LeadTime">@Translation.Get("Tid kvar", Enums.TranslationSource.TextTranslation)</option>
                                            <option value="">--------------------------</option>
                                            <option value="tblProblem.ResponsibleUser_Id">@Translation.Get("Problem", Enums.TranslationSource.TextTranslation)</option>
                                        </select>
                                    </td>          
                                    <td>
                                        <select style="width: auto;" id="linelist">
                                            <option></option>
                                            @foreach (var line in Model.ColumnSetting.LineList)
                                            {
                                                <option id="line" value="@line.Value">@line.Text</option>
                                            }
                                        </select>
                                    </td> 
                   
                                    <td id="minWidth">
                                        <input type="text" style="width: 80px;" name="minWidthValue" id="minWidthValue" value="" />
                                    </td>
                                    <td id="colOrder">
                                        <input type="text" style="width: 80px;" name="colOrderValue" id="colOrderValue" value="" />
                                    </td>
                                    <td>
                                        <input class="btn btn-success" type="button" value="@Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation)" id="AddRow" 
                                               onclick="addCaseSettingRow()" onmouseover="javascript:this.style.cursor='hand'; javascript:this.style.cursor='pointer';"/>
                                        <input type="hidden" id="caseSettingId" value="" />
                                    </td> 
                                              
                                </tr>                 
                                for (var i = 0; i < Model.ColumnSetting.UserColumns.Count; i++)
                                {          
                                    <tr>
                                        @if (Model.ColumnSetting.UserColumns != null)
                                        {
                                            <td>
                                                <select style="width: 190px;" id="dellabellist" disabled="disabled">
                                                    <option></option>
                                                    @foreach (var cfs in Model.ColumnSetting.CaseFieldSettingLanguages)
                                                    {   
                                                        <option id="labels" value="@cfs.Id" @(cfs.Name.ToUpper() == Model.ColumnSetting.UserColumns[i].Name.ToUpper() ? "selected=selected" : "")>@cfs.Label</option>                              
                                                    }
                                                </select>
                                            </td> 
                                        }
                                        <td>
                                            <select style="width: auto;" id="dellinelist">
                                                <option></option>
                                                @foreach (var line in Model.ColumnSetting.LineList)
                                                {
                                                    <option id="lines" value="@line.Value" @(line.Value == Model.ColumnSetting.UserColumns[i].Line.ToString() ? "selected=selected" : "")>@line.Text</option>
                                                }
                                            </select>
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.ColumnSetting.UserColumns[i].MinWidth, new { style = "width: 80px;" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(model => model.ColumnSetting.UserColumns[i].ColOrder, new { style = "width: 80px;" })
                                        </td>
                                        <td>
                                            <input class="btn btn-danger" type="button" value="@Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation)"
                                                   onclick="deleteCaseSettingRow(@Model.ColumnSetting.UserColumns[i].Id)" onmouseover="javascript:this.style.cursor='hand'; javascript:this.style.cursor='pointer';"/>
                                            <input type="hidden" id="deleteCaseSettingsId" value="@Model.ColumnSetting.UserColumns[i].Id" />
                                        </td>
                                    </tr>                                           
                                }
                            }
                        </tbody>
                    </table>                    
                </div>
            </div>
            
        </div>                
    </div>
</form>

<script type="text/javascript">
    
    $('#divProductAreaSetting ul.dropdown-menu li a').click(function (e) {
        e.preventDefault();
        var val = $(this).attr('value');
        $("#divBreadcrumbs_ProductAreaSetting").text(getBreadcrumbs(this));        
        $("#ProductAreaId").val(val);
    });

    function addCaseSettingRow() {                       
        $.post('/cases/AddCaseSettingColumn/' + '?customerId=' + @Model.CustomerId.ToString() + '&userId=' + @Model.UserId.ToString() + 
            '&labellist=' + $("#labellist").val() + '&linelist=' + $("#linelist").val() +
            '&minWidthValue=' + $("#minWidthValue").val() + '&colOrderValue=' + $("#colOrderValue").val(), function (result) {
               list.html(result);
           });
    }

    function deleteCaseSettingRow(id) {                
        $.post('/cases/DeleteRowFromCaseSettings/' + id + '?userId=' + @Model.UserId.ToString() + '&customerId=' + @Model.CustomerId.ToString() , function(result) {
            list.html(result);
        });
    }

</script>
