@model dhHelpdesk_NG.DTO.DTOs.Case.FilesModel     

@if (Model != null)
{    
    <table id="log_files_table" class="tableform">
        <tbody>
            @if (Model.Files != null)    
            {
                var i = 0;
                foreach (var filename in Model.Files) 
                {
                    <tr>
                        <td>
                            <a href="@this.Url.Action("DownloadLogFile", new RouteValueDictionary { { "id", Model.Id }, { "fileName", filename } })">@filename</a>
                        </td>
                        <td>
                            <a id="@string.Format("delete_logfile_button_{0}", i)" class="btn">@Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation)</a>
                        </td>
                    </tr>
                    i++;
                }
            }    
        </tbody>
    </table>     
}    
