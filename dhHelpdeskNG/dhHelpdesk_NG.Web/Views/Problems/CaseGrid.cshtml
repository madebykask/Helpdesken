@model IList<dhHelpdesk_NG.Web.Models.Problem.Output.CaseOutputModel>
<table id="tblCases" class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Translation.Get("CaseNumber", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("RegistrationDate", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("Department", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("Caption", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("Priority", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("SubState", Enums.TranslationSource.TextTranslation)
            </th>
            <th>@Translation.Get("WorkingGroup", Enums.TranslationSource.TextTranslation)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href = '@this.Url.Action("Problem", new RouteValueDictionary { { "id", item.Id } })'">
                <td>@Html.DisplayFor(x => item.CaseNumber)
                </td>
                <td>@Html.DisplayFor(x => item.RegistrationDate)
                </td>
                <td>@Html.DisplayFor(x => item.Department)
                </td>
                <td>@Html.DisplayFor(x => item.Caption)
                </td>
                <td>@Html.DisplayFor(x => item.Priority)
                </td>
                <td>@Html.DisplayFor(x => item.SubState)
                </td>
                <td>@Html.DisplayFor(x => item.WorkingGroup)
                </td>
            </tr>
        }
    </tbody>
</table>
