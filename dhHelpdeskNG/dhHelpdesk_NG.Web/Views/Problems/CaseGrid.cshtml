@model IList<DH.Helpdesk.Web.Models.Problem.CaseOutputModel>
<table id="tblCases" class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
        <th style="width: 18px"></th>
        <th>@Translation.GetCoreTextTranslation("Ärende")
        </th>
        <th>@Translation.GetCoreTextTranslation("Registreringsdatum")
        </th>
        <th>@Translation.GetCoreTextTranslation("Ärendetyp")
        </th>
        <th>@Translation.GetCoreTextTranslation("Understatus")
        </th>
        <th>@Translation.GetCoreTextTranslation("Rubrik")
        </th>
        <th>@Translation.GetCoreTextTranslation("Bevakningsdatum")
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var watchDate = String.Empty;
            if (item.WatchDate != null)
            {
                watchDate = item.WatchDate.Value.ToShortDateString();
            }
            <tr style="cursor: pointer" onclick=" window.location.href = '@Url.Action("Edit", "Cases", new RouteValueDictionary {{"id", item.Id}})'">
                <td>
                    <img class="img-case-parent" title="@item.CaseIcon.CaseIconTitle()" alt="@item.CaseIcon.CaseIconTitle()" src="/Content/icons/@item.CaseIcon.CaseIconSrc()">
                </td>
                <td>@Html.DisplayFor(x => item.CaseNumber)
                </td>
                <td>@Html.DisplayFor(x => item.RegistrationDate)
                </td>
                <td>@Html.DisplayFor(x => item.CaseType)
                </td>
                <td>@Html.DisplayFor(x => item.SubState)
                </td>
                <td>@Html.DisplayFor(x => item.Caption)
                </td>
                <td>@watchDate
                </td>
            </tr>
        }
    </tbody>
</table>
