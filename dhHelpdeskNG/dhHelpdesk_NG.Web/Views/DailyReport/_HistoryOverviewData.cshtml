@model IList<DH.Helpdesk.BusinessData.Models.DailyReport.Output.DailyReportOverview>

<table class="table table-striped table-bordered table-hover" id="tbldailyReportHistory">
    
     @foreach (var group in Model.GroupBy(x => new DateTime(x.CreatedDate.Year, x.CreatedDate.Month, x.CreatedDate.Day)))
        {
                                                                             
            <thead> 
               <tr>
                      @*<td colspan="5">@group.Key.ToShortDateString()</td>*@
                </tr>                       
                <tr>
                    <th>@group.Key.ToShortDateString()</th>
                    <th>@Translation.Get("Upplagd av", Enums.TranslationSource.TextTranslation)</th>
                    <th>@Translation.Get("Ämne", Enums.TranslationSource.TextTranslation)</th>
                    <th>@Translation.Get("Text", Enums.TranslationSource.TextTranslation)</th>
                    <th>@Translation.Get("Skickad", Enums.TranslationSource.TextTranslation)</th>
                </tr>
                
            </thead>     
            
         foreach(var item in group)          
                     {    
                        <tbody>                      
                                <tr>
                                    <td style="width: 10%"> 
                                      
                                    </td>
                                    <td style="width: 20%"> 
                                        @item.LastName&nbsp;@item.FirstName
                                    </td>
                                    <td style="width: 13%">
                                        @item.DailyReportSubject.Subject
                                    </td>
                                    <td style="width: 52%">
                                        @item.DailyReportText
                                    </td>
                                    <td style="width: 5%">
                                        @item.Sent.IntToYES_NO()
                                    </td>
                                </tr>                                                                                        
                        </tbody>
                     }
                
        }
</table>
