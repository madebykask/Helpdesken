@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Domain.DocumentCategory

<div class="content">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-error">
            @Translation.Get("Dokument", Enums.TranslationSource.TextTranslation)
            @Translation.Get("kategori", Enums.TranslationSource.TextTranslation)
            @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
        </div>    
    }
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active">
                <a href="#fragment-1">
                   @Translation.Get("Dokument", Enums.TranslationSource.TextTranslation)
                   @Translation.Get("kategori", Enums.TranslationSource.TextTranslation)
                </a>
            </li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span8">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Dokument", Enums.TranslationSource.TextTranslation)
                                        @Translation.Get("kategori", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.Name, new { maxlength = "50" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.Customer_Id)
                            @Html.HiddenFor(model => model.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "Name": {
                    required: true
                }
            },
            messages: {
                "Name": {
                    required: "@Translation.Get("Du måste ange en dokumentkategori", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

</script>
