@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Models.DocumentInputViewModel

@{var CurIcon = "";}

 <table id="tbldocument" class="table table-striped table-bordered table-hover" >
    <thead>
        <tr>            
            <th onclick="SortCol('Name');" style="cursor: pointer; cursor: hand ; width:30%" >
                @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)
                @{CurIcon = "Name";}
                @*<i class="@CurIcon.SetDocumentSortIcon()"></i>*@
            </th>
            <th onclick="SortCol('Size');" style="cursor: pointer; cursor: hand ; width:10%">
                @Translation.Get("Storlek", Enums.TranslationSource.TextTranslation)
                @{CurIcon = "Size";}
                @*<i class="@CurIcon.SetDocumentSortIcon()"></i>*@  
            </th>
            <th onclick="SortCol('ChangedDate');" style="cursor: pointer; cursor: hand ; width:25%">
                @Translation.Get("Ändringsdatum", Enums.TranslationSource.TextTranslation)
                @{CurIcon = "ChangedDate";}
                @*<i class="@CurIcon.SetDocumentSortIcon()"></i>  *@
            </th>
            <th onclick="SortCol('UserName');" style="cursor: pointer; cursor: hand ; width:30%">
                @Translation.Get("Av", Enums.TranslationSource.TextTranslation)
                @{CurIcon = "UserName";}
                @*<i class="@CurIcon.SetDocumentSortIcon()"></i>*@  
            </th>
        </tr>
    </thead>
    <tbody>       
        @foreach (var item in Model.Documents)
        {
            <tr>                
                <td>
                    <a href="@Url.Action("edit", "document", new { Id = item.Id })">@Html.DisplayFor(modelItem => item.DocName)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "document", new { Id = item.Id })">@Html.DisplayFor(modelItem => item.Size)  kb </a>                                                    
                </td>
                <td>
                    <a href="@Url.Action("edit", "document", new { Id = item.Id })">@Html.DisplayFor(modelItem => item.ChangedDate)</a>
                </td>
                <td>
                    <a href="@Url.Action("edit", "document", new { Id = item.Id })">@Html.DisplayFor(modelItem => item.UserName)</a>
                    <input type="hidden" id="SelectedCategory" value = "@ViewBag.SelectedCategory" />
                    <input type="hidden" id="SelectedListType" value = "@ViewBag.SelectedListType" />                                                                            
                    <input type="hidden" id="SortColName"  value = "Name" />                                                                            
                </td>
            </tr>
        }                    
    </tbody>
</table>