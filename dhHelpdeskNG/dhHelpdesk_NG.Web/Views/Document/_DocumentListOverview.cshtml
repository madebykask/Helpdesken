@model DH.Helpdesk.Web.Models.DocumentInputViewModel

 <table id="tbldocument" class="table table-striped table-bordered table-hover" >
    <thead>
        <tr>
            <th style="width:3%">

            </th>
            <th style="width:30%">
                @Translation.Get("DokumentNamn", Enums.TranslationSource.TextTranslation)
            </th>
            <th style="width:10%">
                @Translation.Get("Storlek", Enums.TranslationSource.TextTranslation)
            </th>
            <th style="width:25%">
                @Translation.Get("Ändringsdatum", Enums.TranslationSource.TextTranslation)
            </th>
            <th style="width:30%">
                @Translation.Get("Av", Enums.TranslationSource.TextTranslation)
            </th>
        </tr>
    </thead>
    <tbody>       
        @foreach (var item in Model.Documents)
        {
            <tr>
                <td>
                    <i class="icon-folder-close icon-yellow"/>
                </td>
                <td>
                    <a href="@Url.Action("index", "document", new { listType = 1, Id = item.Id })">@Html.DisplayFor(modelItem => item.DocName)</a>
                </td>
                <td>
                    <a href="@Url.Action("index", "document", new { listType = 1, Id = item.Id })">@Html.DisplayFor(modelItem => item.Size)</a>                                                    
                </td>
                <td>
                    <a href="@Url.Action("index", "document", new { listType = 1, Id = item.Id })">@Html.DisplayFor(modelItem => item.ChangedDate)</a>
                </td>
                <td>
                    <a href="@Url.Action("index", "document", new { listType = 1, Id = item.Id })">@Html.DisplayFor(modelItem => item.UserName)</a>
                </td>
            </tr>
        }                                                                               
    </tbody>
</table>