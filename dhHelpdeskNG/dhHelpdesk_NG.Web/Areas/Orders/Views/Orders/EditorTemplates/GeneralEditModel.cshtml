@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Infrastructure.Extensions.HtmlHelperExtensions
@model DH.Helpdesk.Web.Areas.Orders.Models.Order.OrderEdit.GeneralEditModel

<h4>@Translation.Get("Allmänt")</h4>
<table class="tableform">
    <tbody>
        @if (Model.OrderNumber.Value > 0)
        {
            @Html.DisplayFor(m => m.OrderNumber, "Fields/IntLabel")            
        }
        <tr>
            <td class="span3">
                @Translation.Get("Typ")
            </td>
            <td class="span6">
                @Html.DisplayFor(m => m.OrderTypeName)
            </td>
            <td class="span3">
                
            </td>
        </tr>
        @if (Model.Status.Show)
        {
            <tr>
                <td class="span3">
                    @Html.FieldCaption(Model.Status)
                </td>
                <td class="span6">
                    @Html.DropDownListFor(m => m.StatusId, Model.Status.Value, new { @id = "general_status"})
                    @Html.ValidationMessageFor(m => m.StatusId)
                </td>
                <td class="span3">
                    @Model.Status.Help
                </td>
            </tr>             
        }          
        @if (Model.Administrator.Show)
        {
            <tr>
                <td class="span3">
                    @Html.FieldCaption(Model.Administrator)
                </td>
                <td class="span6">
                    @Html.DropDownListFor(m => m.AdministratorId, Model.Administrator.Value)
                    @Html.ValidationMessageFor(m => m.AdministratorId)
                </td>
                <td class="span3">
                    @Model.Administrator.Help
                </td>
            </tr>             
        }
        @if (Model.Domain.Show)
        {
            <tr>
                <td class="span3">
                    @Html.FieldCaption(Model.Domain)
                </td>
                <td class="span6">
                    @Html.DropDownListFor(m => m.DomainId, Model.Domain.Value)
                    @Html.ValidationMessageFor(m => m.DomainId)
                </td>
                <td class="span3">
                    @Model.Domain.Help
                </td>
            </tr>             
        }
        @Html.EditorFor(m => m.OrderDate, "Fields/Date", new { id = "orderdate_datepicker" })                                
    </tbody>
</table>
