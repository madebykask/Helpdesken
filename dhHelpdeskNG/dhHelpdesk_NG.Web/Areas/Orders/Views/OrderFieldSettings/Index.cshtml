@using DH.Helpdesk.Web.Areas.Orders.Models.OrderFieldSettings
@using DH.Helpdesk.Web.Infrastructure
@model OrderFieldSettingsIndexModel

@section Actions {
    <ul class="secnav">               
        <li>
            @Html.ActionLink(Translation.Get("Spara"), "Save", "OrderFieldSettings", new { @class = "btn" })
        </li>
    </ul>
}
@using (Ajax.BeginForm("OrderFieldSettings", "OrderFieldSettings", null,
    new AjaxOptions { UpdateTargetId = "OrderFieldSettingsTableContainer" },
    new { id ="OrdersSearchForm" } ))
{
    <table class="tableform">
        <tr>
            <td class="span3">@Translation.Get("Typ")</td>
            <td>@Html.DropDownListFor(m => m.OrderTypeId, Model.OrderTypes, new { id = "ordertypes_dropdown", data_placeholder = Translation.Get("Välj en eller flera") })</td>
        </tr>                
    </table>
}

<div id="OrderFieldSettingsTableContainer">
    @Html.Action("OrderFieldSettings", "OrderFieldSettings", new { model = (OrderFieldSettingsIndexModel)null })
</div>