@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Areas.Orders.Models.OrderFieldSettings.FieldSettings
@model OrderFieldTypeValueSettingsModel

<div id="order_field_type_modal" class="modal hide fade">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h5>@Translation.GetCoreTextTranslation("Värden")</h5>
    </div>

    <div class="modal-body">
        <form class="form-horizontal" id="addFrm">
            <table class="table table-striped table-bordered table-hover table-add-order-field-type">
                <thead>
                    <tr>
                        <td>
                            @Html.TextBoxFor(m => m.Value, new { @id = "addValue", @class = "" })
                            @Html.ValidationMessageFor(m => m.Value)
                        </td>
                        <td>
                            <a id="addBtn" class="btn">@Translation.GetCoreTextTranslation("Lägg till")</a>
                        </td>
                    </tr>
                </thead>
            </table>
        </form>
        <form class="form-horizontal" id="dataFrm">
            <table class="table table-striped table-bordered table-hover table-add-order-field-type">
                <tbody>

                </tbody>
            </table>
        </form>
    </div>

    <div class="modal-footer">
        <button id="btnSave" class="btn btn-ok">@Translation.GetCoreTextTranslation("Spara")</button>
        <button id="btnCancel" class="btn btn-cancel" data-dismiss="modal" aria-hidden="true">@Translation.GetCoreTextTranslation("Avbryt")</button>
    </div>

    <script type="html/template" id="rowTemplate" >
        <tr>
            <td>
                @*@Html.TextBox("other", Model.Value, new { @id = "template_value" })*@
                @Html.TextBoxFor(m => m.Value, new { @id = "template_value", name = "other" })
                @Html.ValidationMessageFor(m => m.Value)
                @Html.HiddenFor(m => m.Id, new { @id = "template_id" })
            </td>
            <td>
                <a class="btn" id="deleteBtn">@Translation.GetCoreTextTranslation("Ta bort")</a>
            </td>
        </tr>
    </script>
</div>