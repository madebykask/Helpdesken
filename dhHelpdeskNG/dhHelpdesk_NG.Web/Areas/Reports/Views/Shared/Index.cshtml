@using System.Web.Optimization
@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Reports.Models.Options.ReportsOptions
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>
                <a id="showReport" class="btn" style="display:none">@Translation.Get("Visa")</a>  
                <img id="showReportLoader" src="@Url.Content("~/Content/icons/ajax-loader.gif")" style="display: none;" />              
            </li>
            <li>
                <a id="printReport" class="btn" style="display:none">@Translation.Get("Skriv ut")</a>                
            </li>
            <li>
                <a id="excelReport" class="btn" style="display:none" data-excel="true">@Translation.Get("Export to Excel")</a>                
            </li>
            <li>
                <a id="btnShowReport" class="btn" >@Translation.Get("Visa")</a>                             
            </li>
        </ul>
    </div>
</div>
<div class="content report-page">
    <div class="container">
        <ul class="nav nav-tabs">
            <li class="active">
                <a id="tab_reportViewer" href="#fragment-2">@Translation.Get("Rapporter")</a>
            </li>
        </ul>        
        <div class="tab-content overflow-visible" >
            <div id="fragment-2" class="tab-pane tab-pane-border active">
                @Html.Partial("ReportViewer/_Overview", Model.ReportServiceOverview)                  
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/report")

<script type="text/javascript">
    var scope;

    $(function() {
        scope = dhHelpdesk.reports.scope({
            workingGroupUsersRoute: '@Url.Action("GetWorkingGroupUsers", "Services", new { area = "reports" })',
            
        });
    });

    function onLoadOptions() {
        scope.onLoadOptions();
    }
</script>

