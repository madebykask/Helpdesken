@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Reports.Models.Options.RegistratedCasesDayOptionsModel

<form id="reportForm">
    <table class="tableform">    
        <tr>
            <td class="span3">@Translation.Get("Avdelning påverkad")</td>
            <td>@Html.DropDownListFor(m => m.DepartmentId, Model.Departments)
            </td>
        </tr>        
        <tr>
            <td class="span3">@Translation.Get("Ärendetyp")</td>
            <td>@Html.DropDownListFor(m => m.CaseTypeIds, Model.CaseTypes,
                    new { id = "CaseTypeIds", multiple = "multiple", @class = "multiselect multiselect-search" })
            </td>
        </tr>        
        <tr>
            <td class="span3">@Translation.Get("Driftgrupp")</td>
            <td>
                @Html.DropDownListFor(m => m.WorkingGroupId, Model.WorkingGroups)
            </td>
        </tr>        
        <tr>
            <td class="span3">@Translation.Get("Handläggare")</td>
            <td>
                @Html.DropDownListFor(m => m.AdministratorId, Model.Administrators)
            </td>
        </tr>        
        <tr>
            <td class="span3">@Translation.Get("Period")</td>
            <td>
                @Html.EditorFor(m => m.Period, "YearMonthPicker", new { id = "periodUntil" })
            </td>
        </tr>        
    </table>                
</form>
<div id="reportContainer">    
</div>

<script type="text/javascript">
    $(function() {
        $("#CaseTypeIds").multiselect();
    })
</script>
