@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.OrderAccounts.Models.Order.Edit.Orderer
@if (Model.Id.Show
        || Model.FirstName.Show
        || Model.LastName.Show
        || Model.Phone.Show
        || Model.Email.Show)
{
    <h4>@Translation.Get("Operativsystem")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.DisplayFor(m => m.Id, "Fields/Label")
                @Html.DisplayFor(m => m.FirstName, "Fields/Label")
                @Html.DisplayFor(m => m.LastName, "Fields/Label")
                @Html.DisplayFor(m => m.Phone, "Fields/Label")
                @Html.DisplayFor(m => m.Email, "Fields/Label")
            </table>
        </div>
    </div>
}