@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.OrderAccounts.Models.Order.Edit.Contact
@if (Model.Ids.Show
        || Model.Name.Show
        || Model.Phone.Show
        || Model.Email.Show)
{
    <h4>@Translation.Get("Operativsystem")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Ids, "Fields/Text")
                @Html.EditorFor(m => m.Name, "Fields/Text")
                @Html.EditorFor(m => m.Phone, "Fields/Text")
                @Html.EditorFor(m => m.Email, "Fields/Text")
            </table>
        </div>
    </div>
}