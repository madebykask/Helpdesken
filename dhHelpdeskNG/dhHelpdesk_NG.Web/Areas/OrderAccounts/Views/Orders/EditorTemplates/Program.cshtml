@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.OrderAccounts.Models.Order.Edit.Program
@if (Model.Programs.Show || Model.InfoProduct.Show)
{
    <h4>@Translation.Get("Operativsystem")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Programs, "Fields/MultiSelectList", new { Source = new MultiSelectList(Model.AllPrograms, "Value", "Name", Model.Programs.Value) })
                @Html.EditorFor(m => m.InfoProduct, "Fields/WideText")
            </table>
        </div>
    </div>
}