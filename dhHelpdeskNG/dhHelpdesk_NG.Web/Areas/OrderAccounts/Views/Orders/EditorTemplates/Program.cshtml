@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.OrderAccounts.Models.Order.Edit.Program
@{
    var header = ViewData["Header"] as string;
}
@if (Model.Programs.Show || Model.InfoProduct.Show)
{
    <h4>@Translation.Get(header)</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Programs, "Fields/MultiSelectList", new { Source = Model.AllPrograms })
                @Html.EditorFor(m => m.InfoProduct, "Fields/WideText")
            </table>
        </div>
    </div>
}