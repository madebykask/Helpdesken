@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.OrderAccounts.Models.Order.Edit.AccountModel
@{
    Layout = "~/Areas/Inventory/Views/Shared/_EditLayout.cshtml";
}

@section Actions
{
    <ul class="secnav">
        <li id="menu1">
            <input type="submit" value="@Translation.Get("Spara")" class="btn" onclick=" $('#edit_form').submit(); "/>
        </li>
        <li id="menu2">
            <input type="submit" value="@Translation.Get("Spara och stäng")" class="btn" onclick=" $('#edit_form').submit(); "/>
        </li>
        <li id="menu3">@Html.ActionLink(Translation.Get("Avbryt"), "Index", null, new { @class = "btn" })</li>
        <li id="menu4">@Html.ActionLink(Translation.Get("Ta bort"), "Delete", new { id = Model.Id }, new { @class = "btn" })</li>
    </ul>
}

@section Title
{
    @Translation.Get("Beställning")
}

@section Content
{
    @using (Html.BeginForm("Edit", "Orders", FormMethod.Post, new { id = "edit_form" }))
    {
        @Html.CheckBoxFor(m => m.IsCreateCase)
        @Translation.Get("Skapa ärende")

        @Html.HiddenFor(m => m.Id)
        @Html.HiddenFor(m => m.ActivityTypeId)
        @Html.EditorFor(m => m.Orderer)
        @Html.EditorFor(m => m.User)
        @Html.EditorFor(m => m.AccountInformation)
        @Html.EditorFor(m => m.Contact)
        @Html.EditorFor(m => m.DeliveryInformation)
        @Html.EditorFor(m => m.Program)
        @Html.EditorFor(m => m.Other)

        <h4>@Translation.Get("Status")</h4>
        <div class="row">
            <div class="span12">
                <table class="tableform">
                    <tr>
                        <td class="span3">
                            <label>@Translation.Get("Skapad datum")</label>
                        </td>
                        <td class="span9">
                            @Html.DisplayFor(m => m.CreatedDate, "Date")
                        </td>
                    </tr>
                    <tr>
                        <td class="span3">
                            <label>@Translation.Get("Senast ändrad datum")</label>
                        </td>
                        <td class="span9">
                            @Html.DisplayFor(m => m.ChangedDate, "Date") @Translation.Get("av") @Html.DisplayFor(m => m.ChangedByUserName.FirstName) @Html.DisplayFor(m => m.ChangedByUserName.LastName)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
}