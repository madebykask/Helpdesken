@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Computer.ContactFieldsModel
@if (Model.Name.Show
        || Model.Phone.Show
        || Model.Email.Show)
{
    <h4>@Translation.Get("Placering")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Name, "Fields/Text")
                @Html.EditorFor(m => m.Phone, "Fields/Text")
                @Html.EditorFor(m => m.Email, "Fields/Text")
            </table>
        </div>
    </div>
}
