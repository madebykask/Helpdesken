@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Computer.SoundFieldsModel
@if (Model.SoundCard.Show)
{
    <h4>@Translation.Get("Ljud")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.SoundCard, "Fields/Text")
            </table>
        </div>
    </div>
}
else
{
    @Html.HiddenFor(m => m.SoundCard.Value)
}
