@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Computer.ChassisFieldsModel
@if (Model.Chassis.Show)
{
    <h4>@Translation.GetCoreTextTranslation("Chassis")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Chassis, "Fields/Text")
            </table>
        </div>
    </div>
}
else
{
    @Html.HiddenFor(m => m.Chassis.Value)
}
