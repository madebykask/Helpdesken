@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Printer.GeneralFieldsModel
@if (Model.Name.Show
        || Model.Manufacturer.Show
        || Model.Model.Show
        || Model.SerialNumber.Show)
{
    <h4>@Translation.GetCoreTextTranslation("Allmänt")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.Name, "Fields/Text")
                @Html.EditorFor(m => m.Manufacturer, "Fields/Text")
                @Html.EditorFor(m => m.Model, "Fields/Text")
                @Html.EditorFor(m => m.SerialNumber, "Fields/Text")
            </table>
        </div>
    </div>
}

