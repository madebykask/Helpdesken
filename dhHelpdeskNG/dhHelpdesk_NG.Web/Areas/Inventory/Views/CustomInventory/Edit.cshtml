@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Inventory.InventoryEditViewModel
@{
    Layout = "~/Areas/Inventory/Views/Shared/_EditLayout.cshtml";
}

@section Actions
{
    <ul class="secnav">
        <li id="menu1">
            <input type="submit" value="@Translation.Get("Spara")" class="btn" onclick=" $('#inventory_edit_form').submit(); "/>
        </li>
        <li id="menu2">@Html.ActionLink(Translation.Get("Avbryt"), "Index", new { inventoryTypeId = Model.InventoryViewModel.InventoryTypeId }, new { @class = "btn" })</li>
        <li id="menu3">@Html.ActionLink(Translation.Get("Ta bort"), "Delete", new { inventoryTypeId = Model.InventoryViewModel.InventoryTypeId, id = Model.InventoryViewModel.Id }, new { @class = "btn" })</li>
    </ul>
}

@section Title
{
    @Translation.Get(Model.InventoryViewModel.Name)
}

@section Content
{
    @using (Html.BeginForm("Edit", "CustomInventory", FormMethod.Post, new { id = "inventory_edit_form" }))
    {
        @Html.EditorFor(m => m)
        if (Model.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Show)
        {
        <h4>@Translation.Get("Tillbehör till")</h4>

        <div class="row">
            <div class="span12">
                <table class="tableform">
                    <tr>
                        <td class="span3">
                            <label>@Translation.Get(Model.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Caption)</label>
                        </td>
                        <td class="span9">
                            @Html.DisplayFor(m => m.InventoryViewModel.DefaultFieldsViewModel.DefaultFieldsModel.ComputerName.Value)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        }
        <h4>@Translation.Get("Status")</h4>

        <div class="row">
            <div class="span12">
                <table class="tableform">
                    <tr>
                        <td class="span3">
                            <label>@Translation.Get("Skapad datum")</label>
                        </td>
                        <td class="span9">
                            @Html.DisplayFor(m => m.InventoryViewModel.ChangeDate, "Date")
                        </td>
                    </tr>
                    <tr>
                        <td class="span3">
                            <label>@Translation.Get("Senast ändrad datum")</label>
                        </td>
                        <td class="span9">
                            @Html.DisplayFor(m => m.InventoryViewModel.CreatedDate, "Date")
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        @Html.HiddenFor(m => m.InventoryViewModel.Id)
        @Html.HiddenFor(m => m.InventoryViewModel.InventoryTypeId)
    }
}