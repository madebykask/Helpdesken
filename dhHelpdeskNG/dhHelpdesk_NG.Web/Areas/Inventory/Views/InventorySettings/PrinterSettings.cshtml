@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Settings.Printer.PrinterFieldsSettingsViewModel
<script type="text/javascript">
    $(function () {
        var parameters = {
            saveSettingsUrl: '@Url.Action("PrinterSettings")',
            settingsSavedSuccessfullyMessage: '@Translation.GetForJS("Settings saved successfully.")'
        };

        applySettingsBehavior(parameters);
    });
</script>
@using (Ajax.BeginForm("PrinterSettings", "InventorySettings", new AjaxOptions { OnSuccess = "onSettingsSavedSuccessfully", HttpMethod = "POST" }, new { id = "settings_form" }))
{
    @Html.EditorFor(m => m, "Settings/PrinterFieldsSettingsViewModel")
}