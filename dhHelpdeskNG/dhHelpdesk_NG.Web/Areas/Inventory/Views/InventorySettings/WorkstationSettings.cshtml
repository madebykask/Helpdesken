@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Settings.Computer.ComputerFieldsSettingsViewModel
<script type="text/javascript">
    $(function () {
        var parameters = {
            saveSettingsUrl: '@Url.Action("WorkstationSettings")',
            settingsSavedSuccessfullyMessage: '@Translation.GetForJS("Inställningarna sparades")',
            showRoomId: '@Html.IdFor(m => m.PlaceFieldsSettingsModel.RoomFieldSettingModel.ShowInDetails)',
            showFloorId: '@Html.IdFor(m => m.PlaceFieldsSettingsModel.FloorFieldSettingModel.ShowInDetails)',
            showBuildingId: '@Html.IdFor(m => m.PlaceFieldsSettingsModel.BuildingFieldSettingModel.ShowInDetails)'
        };

        applySettingsBehavior(parameters);
    });
</script>
@using (Ajax.BeginForm("WorkstationSettings", new { controller = "InventorySettings" }, new AjaxOptions { OnSuccess = "onSettingsSavedSuccessfully", HttpMethod = "POST" }, new { id = "settings_form" }))
{
    @Html.EditorFor(m => m, "Settings/ComputerFieldsSettingsViewModel")
    @*<br/>
    @Html.EditorFor(m => m, "Settings/ComputerTabFieldsSettingsViewModel")*@
}