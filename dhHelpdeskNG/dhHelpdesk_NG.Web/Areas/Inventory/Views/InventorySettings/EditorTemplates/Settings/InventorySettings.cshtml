@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Settings.Inventory.InventoryFieldSettingsViewModel
<script>
    $(function () {

        // YES and NO SWITCH FOR CHECKBOXES
        $('.switchcheckbox').bootstrapSwitch('onText', trans_yes);
        $('.switchcheckbox').bootstrapSwitch('offText', trans_no);
        $('.switchcheckbox').bootstrapSwitch('size', 'small');
        $('.switchcheckbox').bootstrapSwitch('onColor', 'success');
    });
</script>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>@Translation.Get("Grupp")</th>
            <th>@Translation.Get("Egenskap")</th>
            <th>@Translation.Get("Pos")</th>
            <th>@Translation.Get("Typ")</th>
            <th>@Translation.Get("Storlek")</th>
            <th>@Translation.Get("Visa")</th>
            <th>@Translation.Get("Lista")</th>
            <th>@Translation.Get("Ta bort")</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Ny")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.NewDynamicFieldViewModel, "Settings/NewInventoryFieldSettingModel")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Allmänt")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.DepartmentFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.NameFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.ModelFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.ManufacturerFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.SerialNumberFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.TheftMarkFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Inventering")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.BarCodeFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.PurchaseDateFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Placering")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.PlaceFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Övrigt")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.InfoFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Tillbehör")</td>
        </tr>
        <tr>
            @Html.EditorFor(m => m.DefaultSettings.WorkstationFieldSettingModel, "Settings/InventoryFieldSettingModelDefault")
        </tr>
        <tr>
            <td colspan="8" class="header">@Translation.Get("Tillägg")</td>
        </tr>
        @{
            var inventoryDynamicFieldViewModelSettings = Model.InventoryDynamicFieldViewModelSettings.OrderBy(x => x.InventoryDynamicFieldSettingModel.Position).ThenBy(x => x.InventoryDynamicFieldSettingModel.Caption).ToList();

            for (int i = 0; i < inventoryDynamicFieldViewModelSettings.Count(); i++)
            {
            <tr>
                @Html.EditorFor(m => inventoryDynamicFieldViewModelSettings[i], "Settings/InventoryFieldSettingModel")
            </tr>
            }
        }
    </tbody>
</table>
