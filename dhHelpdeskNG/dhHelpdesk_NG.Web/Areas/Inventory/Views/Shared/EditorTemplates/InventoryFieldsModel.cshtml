@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Inventory.Models.EditModel.Shared.InventoryFieldsModel
@if (Model.BarCode.Show || Model.PurchaseDate.Show)
{
    <h4>@Translation.GetCoreTextTranslation("Inventering")</h4>
    <div class="row">
        <div class="span12">
            <table class="tableform">
                @Html.EditorFor(m => m.BarCode, "Fields/Text")
                @Html.EditorFor(m => m.PurchaseDate, "Fields/Date", new { id = "purchasedate_datepicker" })
            </table>
        </div>
    </div>
}
