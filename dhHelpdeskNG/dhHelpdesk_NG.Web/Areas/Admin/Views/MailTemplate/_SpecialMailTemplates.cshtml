@model dhHelpdesk_NG.Web.Areas.Admin.Models.MailTemplateIndexViewModel
<table class="table table-striped table-bordered table-hover">
    @foreach (var item in Model.MailTemplates)
    {
        <tr><td>@Translation.Get("E-post mall: ", Enums.TranslationSource.TextTranslation)<a href="@Url.Action("edit", "mailtemplate", new { area = "admin", id = item.MailID, customerId = Model.Customer.Id })">
            @Html.DisplayFor(modelItem => item.Name)</a> </td></tr>
    }
</table>
