@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.MailTemplateIndexViewModel
<table class="table table-striped table-bordered table-hover">
    @foreach (var item in Model.CaseSMSs)
    {
        <tr><td><a href="@Url.Action("edit", "mailtemplate", new { area = "admin", id = item.Value, customerId = Model.Customer.Id, languageId = 2 })"><strong>@Translation.Get("SMS: ", Enums.TranslationSource.TextTranslation)</strong>@Html.DisplayFor(modelItem => item.Text)</a>
        </td></tr>
    }
</table>
