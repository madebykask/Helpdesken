@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.MailTemplateInputViewModel
@{              
    ViewBag.Title = "Edit";
    string accountactivityid = Request.QueryString["accountactivityId"];
    string ordertypeid = Request.QueryString["ordertypeId"];
}
@using (Html.BeginForm("edit", "mailTemplate", new { customerId = Model.Customer.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "edit", new { }, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation), "delete",
         new { id = Model.MailTemplateLanguage.MailTemplate_Id, languageid = Model.MailTemplateLanguage.Language_Id }, new { @class = "btn deleteDialog", deleteDialogText = Translation.Get("Är du säker på att du vill ta bort aktuell post?", Enums.TranslationSource.TextTranslation) })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    <input type="hidden" id="customerId" name="customerId" value="@Model.Customer.Id" />
    <input type="hidden" id="mailTemplateLanguageId" name="mailTemplateLanguageId" value="@Model.MailTemplateLanguage.MailTemplate_Id" />
    <input type="hidden" id="languageId" name="languageId" value="@Model.MailTemplateLanguage.Language_Id" />
    <input type="hidden" id="mailTemplateId" name="mailTemplateId" value="@Model.MailTemplateLanguage.MailTemplate_Id" />
    <input type="hidden" id="accountactivityId" name="accountactivityId" value="@accountactivityid" />
    <input type="hidden" id="ordertypeId" name="ordertypeId" value="@ordertypeid" />
    <input type="hidden" id="mailId" name="mailId" value="@Model.MailTemplateLanguage.MailTemplate.MailID" />
    <div id="mailtemplate_container">
            <span id="languageList">
                @Html.Partial("_Input", Model)
            </span>
    </div>
}
@section Scripts {
    <script type="text/javascript">

        function changeLanguageList(id) {
            var list = $("#languageList");
            list.html("");
            if (id != "") {
                $.get('/MailTemplate/UpdateLanguageList/' + id + '?customerId=' + $("#customerId").val() + '&mailTemplateLanguageId=' + $("#mailTemplateLanguageId").val() + '&mailTemplateId=' + $("#mailTemplateId").val() + '&accountactivityId=' + $("#accountactivityId").val() + '&ordertypeId=' + $("#ordertypeId").val() + '&mailId=' + $("#mailId").val(), function (result) {
                    list.html(result);
                });
            }
        }
    </script>
}

