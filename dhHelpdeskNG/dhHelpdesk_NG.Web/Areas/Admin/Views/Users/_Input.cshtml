@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.UserInputViewModel

<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Användare", Enums.TranslationSource.TextTranslation) - @Model.User.FirstName @Model.User.SurName</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">

                <div class="container">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-error">@Translation.Get("Användare", Enums.TranslationSource.TextTranslation)
                            @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
                        </div>   
                    }
                    else
                    if (TempData["PreventError"] != null)
                    {
                        var msg = (string)TempData["PreventError"];
                        <div class="alert alert-error">
                            @msg
                        </div>   
                    }
                   
                    @Html.ValidationSummary()
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Id", Enums.TranslationSource.TextTranslation) <span class="mandatorystar">*</span>
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.User.UserID, new { maxlength = "20" })
                                    </td>
                                </tr>
                                @if (Model.User.Id != 0)
                                {
                                    <tr>
                                        <td>
                                            @Translation.Get("Domän", Enums.TranslationSource.TextTranslation)
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(model => model.User.Domain_Id, Model.Domains, "", new { })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
                <div class="container" id="subTabContainer">
                    <ul class="nav nav-tabs" id="myTabSub">
                       
                        <li class="active"><a href="#subfragment-1">@Translation.Get("Allmänt", Enums.TranslationSource.TextTranslation)</a></li>               
                        <li><a href="#subfragment-2">@Translation.Get("Säkerhet", Enums.TranslationSource.TextTranslation)</a></li>
                        <li><a href="#subfragment-3">@Translation.Get("Meddelande", Enums.TranslationSource.TextTranslation)</a></li>
                        @*<li><a href="#subfragment-4">@Translation.Get("Utseende")</a></li>*@
                        <li><a href="#subfragment-5">@Translation.Get("Övrigt", Enums.TranslationSource.TextTranslation)</a></li>
                        <li><a href="#subfragment-6">@Translation.Get("Kund", Enums.TranslationSource.TextTranslation)</a></li>
                        <li><a href="#subfragment-7">@Translation.Get("Avdelning", Enums.TranslationSource.TextTranslation)</a></li>
                        <li><a href="#subfragment-8">@Translation.Get("Driftgrupper", Enums.TranslationSource.TextTranslation)</a></li>
                      
                    </ul>
                    <div class="tab-content">
                    <div class="tab-pane tab-pane-border active" id="subfragment-1">
                        @Html.Partial("_General", Model)
                    </div>
                    <div class="tab-pane tab-pane-border" id="subfragment-2">
                        @Html.Partial("_Security", Model)
                    </div>
                    <div class="tab-pane tab-pane-border" id="subfragment-3">
                        @Html.Partial("_Message", Model)
                    </div>
                    @*<div class="tab-pane tab-pane-border" id="subfragment-4">
                        @Html.Partial("Layout", Model)
                    </div>*@
                    <div class="tab-pane tab-pane-border" id="subfragment-5">
                        @Html.Partial("_Other", Model)
                    </div>
                    <div class="tab-pane tab-pane-border" id="subfragment-6">
                        @if (Model.User.Id != 0)
                        {
                            @Html.Partial("_Customer", Model)
                        }
                    </div>
                    <div class="tab-pane tab-pane-border" id="subfragment-7">
                        @if (Model.User.Id != 0)
                        {
                            @Html.Partial("_Department", Model)                
                        }
                    </div>
                    <div class="tab-pane tab-pane-border" id="subfragment-8">
                        @if (Model.User.Id != 0)
                        {
                            @Html.Partial("_WorkingGroups", Model)
                        }
                    </div>
                </div>
                </div>
                <div>
                    @Html.HiddenFor(model => model.User.Customer_Id)
                    @Html.HiddenFor(model => model.User.Id)
                    @Html.HiddenFor(model => model.CopyUserid)
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    
    function submitForm() {
        //$("#CsSelected option").attr("selected", "selected");
        for (var i = 0; i < document.getElementById("CsSelected").length; i++) {
            document.getElementById("CsSelected")[i].selected = true;
        }

        $("#AAsSelected option").attr("selected", "selected");
        $("#OTsSelected option").attr("selected", "selected");
        
    }
   

    $("#addCs").click(function () {
        if (document.getElementById("CsAvailable").length != 0 && document.getElementById("CsAvailable").selectedIndex != -1) {
            // Add to selected
            $("#CsAvailable option:selected").remove().appendTo("#CsSelected");            
            $("#CsAvailable").get(0).selectedIndex = -1;
            $("#CsSelected").get(0).selectedIndex = -1;

            var doAdd = true;
            var customerid = 0;
            for (var i = 0; i < document.getElementById("CsSelected").length; i++) {
                doAdd = true;
                for (var j = 0; j < document.getElementById("User_Customer_Id").length; j++) {
                    customerid = document.getElementById("User_Customer_Id")[j].value;
                    if (document.getElementById("CsSelected").options[i].value == customerid) {
                        doAdd = false;
                        break;
                    }                    
                }
                if (doAdd)
                    document.getElementById("User_Customer_Id").options[document.getElementById("User_Customer_Id").length] =
                        new Option(document.getElementById("CsSelected")[i].text,
                                   document.getElementById("CsSelected")[i].value, false, false);                    
            }            
        }
        return false;
    });

    $("#removeCs").click(function () {

        if (document.getElementById("CsSelected").length != 0 && document.getElementById("CsSelected").selectedIndex != -1) {            
            
            $("#CsSelected option:selected").remove().appendTo("#CsAvailable");
            $("#CsAvailable").get(0).selectedIndex = -1;
            $("#CsSelected").get(0).selectedIndex = -1;
            
            var doRemove = true;
            var customerid = 0;
            for (var i = 0; i < document.getElementById("User_Customer_Id").length; i++) {
                doRemove = true;
                for (var j = 0; j < document.getElementById("CsSelected").length; j++) {
                    customerid = document.getElementById("CsSelected")[j].value;
                    if (document.getElementById("User_Customer_Id").options[i].value == customerid) {
                        doRemove = false;
                        break;
                    }
                    //
                }
                if (doRemove)
                  document.getElementById("User_Customer_Id").options[i] = null;
            }
        }

        return false;
    });

    $("#addAAs").click(function () {
        $("#AAsAvailable option:selected").remove().appendTo("#AAsSelected");
        $("#AAsAvailable").get(0).selectedIndex = -1;
        $("#AAsSelected").get(0).selectedIndex = -1;
        return false;
    });

    $("#removeAAs").click(function () {
        $("#AAsSelected option:selected").remove().appendTo("#AAsAvailable");
        $("#AAsAvailable").get(0).selectedIndex = -1;
        $("#AAsAvailable").get(0).selectedIndex = -1;
        return false;
    });

    $("#addOTs").click(function () {
        $("#OTsAvailable option:selected").remove().appendTo("#OTsSelected");
        $("#OTsAvailable").get(0).selectedIndex = -1;
        $("#OTsSelected").get(0).selectedIndex = -1;
        return false;
    });

    $("#removeOTs").click(function () {
        $("#OTsSelected option:selected").remove().appendTo("#OTsAvailable");
        $("#OTsAvailable").get(0).selectedIndex = -1;
        $("#OTsAvailable").get(0).selectedIndex = -1;
        return false;
    });

</script>
