@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.OperationObjectInputViewModel
@{
    ViewBag.Title = "New";
}
@using (Html.BeginForm("new", "operationobject", new { id = Model.OperationObject.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "new", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "index", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/javascript">

        $(function () {
            var validator = $("#target").validate({
                rules: {
                    "OperationObject.Name": {
                        required: true
                    },
                    "OperationObject.Description": {
                        required: true
                    }
                },
                messages: {
                    "OperationObject.Name": {
                        required: "@Translation.Get("Du måste ange ett driftobjekt", Enums.TranslationSource.TextTranslation)"
                    },
                    "OperationObject.Description": {
                        required: "@Translation.Get("Du måste ange en beskrivning", Enums.TranslationSource.TextTranslation)"
                }
                },
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });

</script>
}