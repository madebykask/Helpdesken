@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Infrastructure.Extensions
@using System.Web.Optimization
@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Areas.Admin.Models.CaseTypeIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.GetCoreTextTranslation("Lägg till") + " " + Translation.GetCoreTextTranslation("Ärendetyp"), "new", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
@Scripts.Render("~/bundles/admin/CaseType/index")
<div class="content case-type admin">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.GetCoreTextTranslation("Ärendetyp") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <span>@Translation.GetCoreTextTranslation("Visa endast aktiva")</span>
                <input type="checkbox" class="switchcheckbox showonly-active" @(Model.IsShowOnlyActive ? "checked" : string.Empty)>
                <table class="table table-striped table-bordered table-hover" id="tblcasetype">
                    <thead>
                        <tr>
                            <th>
                                @Translation.GetCoreTextTranslation("Ärendetyp")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Standard")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Kräver godkännande")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Driftgrupp")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Handläggare")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Aktiv")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.CaseTypeTreeString(Model.CaseTypes)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

