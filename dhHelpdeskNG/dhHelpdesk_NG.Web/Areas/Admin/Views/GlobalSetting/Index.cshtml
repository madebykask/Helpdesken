@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.GlobalSettingIndexViewModel
@{
    ViewBag.Title = "Global Settings";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li id="menu1" style="display: block">
                @Html.ActionLink(Translation.Get("Ändra", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("inställningar", Enums.TranslationSource.TextTranslation), "change", null, new { @class = "btn" })
            </li>
            <li id="menu2" style="display: none">
                @Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("helgdag i kalender", Enums.TranslationSource.TextTranslation), "newholiday", null, new { @class = "btn" })
            </li>
            <li id="menu3" style="display: none">
                @Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("bevakningsdatum i kalender", Enums.TranslationSource.TextTranslation), "newwatchdate", null, new { @class = "btn" })
            </li>
            <li id="menu4" style="display: none">
                @Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("översättning", Enums.TranslationSource.TextTranslation), "newtranslation", null, new { @class = "btn" })
            </li>
        </ul>
    </div>
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active" id="tab1" onclick="$('#menu1').show(); $('#menu2').hide(); $('#menu3').hide(); $('#menu4').hide();"><a href="#fragment-1">@Translation.Get("Allmänna inställningar", Enums.TranslationSource.TextTranslation)</a></li>
            <li id="tab2" onclick="$('#menu2').show(); $('#menu1').hide(); $('#menu3').hide(); $('#menu4').hide();"><a href="#fragment-2">@Translation.Get("Kalender, helgdagar", Enums.TranslationSource.TextTranslation)</a></li>
            <li id="tab3" onclick="$('#menu3').show(); $('#menu1').hide(); $('#menu2').hide(); $('#menu4').hide();"><a href="#fragment-3">@Translation.Get("Kalender, bevakningsdatum", Enums.TranslationSource.TextTranslation)</a></li>
            <li id="tab4" onclick="$('#menu4').show(); $('#menu1').hide(); $('#menu2').hide(); $('#menu3').hide();"><a href="#fragment-4">@Translation.Get("Översättningar", Enums.TranslationSource.TextTranslation)</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover" id="tblChange">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Applikationsnamn", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Standardspråk", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Version", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Tid", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GlobalSettings)
                        { 
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ApplicationName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DefaultLanguage.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DBVersion)
                                </td>
                                <td>
                                    @DateTime.Now.ToLongTimeString()
                                </td>
                            </tr> 
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane tab-pane-border" id="fragment-2">
                <table class="table table-striped table-bordered table-hover" id="tblHoliday">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Typ av helgdag", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Datum för helgdag", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Arbetstid", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Holidays)
                        { 
                            <tr>
                                <td>
                                    <a href="@Url.Action("editholiday", "globalsetting", new { id = item.Id })">@Html.DisplayFor(modelItem => item.HolidayHeader.Name)</a>
                                </td>
                                <td>
                                    @item.HolidayDate.ToShortDateString()
                                </td>
                                <td>
                                    @if (item.TimeFrom != 0 && item.TimeUntil != 0)
                                    {
                                        @Html.DisplayFor(modelItem => item.TimeFrom) @Translation.Get("-", Enums.TranslationSource.TextTranslation) @Html.DisplayFor(modelItem => item.TimeUntil)
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane tab-pane-border" id="fragment-3">
                <table class="table table-striped table-bordered table-hover" id="tblWatchDateCalendarValue">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Datum för bevakning", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.WatchDateCalendarValues)
                        { 
                            <tr>
                                <td>
                                    <a href="@Url.Action("editwatchdate", "globalsetting", new { id = item.Id })">@item.WatchDate.ToShortDateString()</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="tab-pane tab-pane-border" id="fragment-4">
                <div class="container">
                    <div class="row">
                        <div class="span8">
                            <table class="tableform" id="tblText">
                                <tr>
                                    <td>
                                        @Translation.Get("Typ", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                         @Html.DropDownListFor(model => model.TextType.Id, Model.TextTypes, new { style = "width: auto;", id = "TextTypeId", onchange = "changeTextType(this.options[this.selectedIndex].value);" })
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover" id="tblTextTranslation">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Text", Enums.TranslationSource.TextTranslation)
                            </th>
                            @*<th>
                                @Html.DropDownListFor(model => model.Language.Id, Model.Languages, new { style = "width: auto;", id = "LanguageId", onchange = "changeLabelList(this.options[this.selectedIndex].value);" })
                            </th>*@
                           @* @foreach (var item in Model.LanguagesToTranslateInto)
                            {
                                <th>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </th>
                            }*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Texts)
                        {                    
                            <tr>
                                <td>
                                    <a href="@Url.Action("edittranslation", "globalsetting", new { id = item.Id, languageId = SessionFacade.CurrentCustomer.Language_Id })">@Html.DisplayFor(modelItem => item.TextToTranslate)</a>
                                </td>
                                @*@foreach (var lang in Model.ListForIndex.Where(a => a.Text_Id == item.Id))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => lang.TranslationName)
                                    </td>  
                                }*@
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <input type="hidden" name="activeTab" id="activeTab" value="@SessionFacade.ActiveTab" />
        </div>
    </div>
</div>
