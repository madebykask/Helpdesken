@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.RegionInputViewModel


<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Område", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <div class="container">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-error">
                            @Translation.Get("Område", Enums.TranslationSource.TextTranslation)
                        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
                    </div>
                    }
                    <h4>@Translation.Get("Allmänt", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Område", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.Region.Name, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Kod", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => Model.Region.Code, new { maxlength = "20" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Språk för E-mail", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.Region.LanguageId, Model.Languages, "")
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        @Translation.Get("Standard", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        <input type="checkbox" name="Region.IsDefault" @(Model.Region.IsDefault == 1 ? "checked=checked" : "") value="1" />
                                        <input type="hidden" name="Region.IsDefault" value="0" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Aktiv", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        <input type="checkbox" name="Region.IsActive" @(Model.Region.IsActive == 1 ? "checked=checked" : "") value="1" />
                                        <input type="hidden" name="Region.IsActive" value="0" />
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.Region.Customer_Id)
                            @Html.HiddenFor(model => model.Region.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
