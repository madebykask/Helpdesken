@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.QuickLinkGroupInputViewModel
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Grupp", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    @if(TempData["Error"] != null)
                    {
                        <div class="alert alert-error">@Translation.Get("Grupp", Enums.TranslationSource.TextTranslation)
                            @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
                        </div>    
                    }
                    <h4>@Translation.Get("Allmänt", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">@Translation.Get("Namn", Enums.TranslationSource.TextTranslation)<span class="mandatorystar">*</span>
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.LinkGroup.LinkGroupName, new { maxlength = "50" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.LinkGroup.Id)
                            @Html.HiddenFor(model => model.LinkGroup.Customer_Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>