@model dhHelpdesk_NG.Web.Areas.Admin.Models.StandardTextInputViewModel
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("Standardtext", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Standardtext", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Standardtext", Enums.TranslationSource.TextTranslation)<span class="mandatorystar">*</span>
                                    </td>
                                    <td class="span9">
                                        @Html.TextAreaFor(model => model.StandardText.Name, new { style = "width:600px; height:250px;", maxlength = "1000" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Aktivera", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="standardtext.IsActive" @(Model.StandardText.IsActive == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="standardtext.IsActive" value="0" />
                                        </label>
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.StandardText.Id)
                            @Html.HiddenFor(model => model.StandardText.Customer_Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script type="text/javascript">

        $(function () {
            var validator = $("#target").validate({
                rules: {
                    "StandardText.Name": {
                        required: true
                    }
                },
                messages: {
                    "StandardText.Name": {
                        required: "@Translation.Get("Du måste ange en standardtext", Enums.TranslationSource.TextTranslation)"
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });

</script>
}