@model dhHelpdesk_NG.Web.Areas.Admin.Models.SystemInputViewModel
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("System", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("System", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <h4>@Translation.Get("Allmänt", Enums.TranslationSource.TextTranslation)</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("System", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.System.SystemName, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Brådskandegrad", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.Urgency_Id, Model.Urgencies, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Leverantör", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.Supplier_Id, Model.Suppliers, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Prioritet", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.Priority, new { style = "width:30px;", maxlength = "4" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Ägare", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.Owner, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Övrigt", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(model => model.System.Info, new { style = "width:600px; height:125px;", maxlength = "500" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Länk dokument", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.DocumentPath, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        &nbsp;
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Domän", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.Domain_Id, Model.Domains, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Ägare", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.Owner, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        &nbsp;
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Kontakt", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.RadioButton("optContact", 1) @Translation.Get("Handläggare", Enums.TranslationSource.TextTranslation)&nbsp;&nbsp; @Html.RadioButton("optContact", 2) @Translation.Get("Anmälare", Enums.TranslationSource.TextTranslation)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Systemägare", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.SystemOwnerUser_Id, Model.Administrators, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Systemansvarig", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.SystemResponsibleUser_Id, Model.Administrators, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Vice systemansvarig", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.DropDownListFor(model => model.System.ViceSystemResponsibleUser_Id, Model.Administrators, "")
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        &nbsp;
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Namn", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.ContactName, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Telefon", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.ContactPhone, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("E-post", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.System.ContactEMail, new { maxlength = "50" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.System.Customer_Id)
                            @Html.HiddenFor(model => model.System.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "System.SystemName": {
                    required: true
                },
                "System.Priority": {
                    required: true
                }
            },
            messages: {
                "System.SystemName": {
                    required: "@Translation.Get("Du måste ange ett systemnamn", Enums.TranslationSource.TextTranslation)"
                },
                "System.Priority": {
                    required: "@Translation.Get("Du måste ange en prioritet", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

</script>