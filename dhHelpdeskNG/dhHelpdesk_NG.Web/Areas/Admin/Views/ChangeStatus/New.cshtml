@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.ChangeStatusInputViewModel
@{
    ViewBag.Title = "";
}
@using (Html.BeginForm("new", "changestatus", new { id = Model.ChangeStatus.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "new", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(@Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", new { customerId = Model.Customer.Id}, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/jscript">

        $(function () {
            var validator = $("#target").validate({
                rules: {
                    "ChangeStatus.ChangeStatus": {
                        required: true
                    }
                },
                messages: {
                    "ChangeStatus.ChangeStatus": {
                        required: "@Translation.GetForJS("Du måste ange en status", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

</script>
}