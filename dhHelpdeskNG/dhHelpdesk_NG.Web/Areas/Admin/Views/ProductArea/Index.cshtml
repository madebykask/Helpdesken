@using System.Web.Optimization
@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Areas.Admin.Models.ProductAreaIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.GetCoreTextTranslation("Lägg till") + " " + Translation.GetCoreTextTranslation("Produktområde"), "new", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
@Scripts.Render("~/bundles/admin/ProductArea/index")
<div class="content product-area admin">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.GetCoreTextTranslation("Produktområde") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <span>@Translation.GetCoreTextTranslation("Visa endast aktiva")</span>
                <input type="checkbox" class="switchcheckbox showonly-active" @(Model.IsShowOnlyActive ? "checked" : string.Empty)>
                <table class="table table-striped table-bordered table-hover" id="tblproductarea">
                    <thead>
                        <tr>
                            <th>
                                @Translation.GetCoreTextTranslation("Produktområde")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Driftgrupp")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Prioritet")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Visa endast för") @Translation.GetCoreTextTranslation("Ärendetyp")
                            </th>
                            <th>
                                @Translation.GetCoreTextTranslation("Aktiv")
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @Html.ProductAreaTreeString(Model.ProductAreas)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
