@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.CustomerInputViewModel
@{
    ViewBag.Title = "";
}
@using (Html.BeginForm("edit", "customersettings", new { id = Model.Customer.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "edit", new { id = Model.Customer.Id }, new { onclick = "submitForm();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "edit", new { area = "admin", controller = "Customer", action = "Edit",id = Model.Customer.Id}, new { @class = "btn" })</li>

            </ul>
        </div>
         @Html.Partial("_MasterDataPanel", Model.Customer)
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/javascript">
        function submitForm() {
            $("#UsSelected option").attr("selected", "selected");
            $("#target").submit();
        }
</script>


}