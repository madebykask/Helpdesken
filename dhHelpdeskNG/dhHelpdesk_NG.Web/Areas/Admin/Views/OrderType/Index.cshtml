@using DH.Helpdesk.Web
@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Areas.Admin.Models.OrderTypeIndexViewModel
@{
    ViewBag.Title = "";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.GetCoreTextTranslation("Lägg till") + " " + Translation.GetCoreTextTranslation("Beställningstyp"), "new", new {customerId = Model.Customer.Id}, new {@class = "btn"})</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
@Scripts.Render(BundleConfig.ScriptNames.OrderTypes)
<div class="content order-type admin">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.GetCoreTextTranslation("Beställningstyp") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <span>@Translation.GetCoreTextTranslation("Visa endast aktiva")</span>
                <input type="checkbox" class="switchcheckbox showonly-active" @(Model.IsShowOnlyActive ? "checked" : string.Empty)>
                <table class="table table-striped table-bordered table-hover" id="tblordertype">
                    <thead>
                    <tr>
                        <th>
                            @Translation.GetCoreTextTranslation("Beställningstyp")
                        </th>
                        <th>
                            @Translation.GetCoreTextTranslation("Standard")
                        </th>
                        <th>
                            @Translation.GetCoreTextTranslation("Dokument")
                        </th>
                        <th>
                            @Translation.GetCoreTextTranslation("Aktiv")
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    @Html.OrderTypeTreeString(Model.OrderTypes)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
