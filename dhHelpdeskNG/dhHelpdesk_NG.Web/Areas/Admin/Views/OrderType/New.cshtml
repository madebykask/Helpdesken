@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.OrderTypeInputViewModel
@{
    ViewBag.Title = "New";
}
@using (Html.BeginForm("new", "ordertype", new { id = Model.OrderType.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "new", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", new { customerId = Model.Customer.Id}, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/javascript">

        $(function () {

            var validator = $("#target").validate({
                rules: {
                    "OrderType.Name": {
                        required: true
                    }
                },
                messages: {
                    "OrderType.Name": {
                        required: "@Translation.Get("Du måste ange en beställningstyp", Enums.TranslationSource.TextTranslation)"
                    }
                },
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });

</script>
}
