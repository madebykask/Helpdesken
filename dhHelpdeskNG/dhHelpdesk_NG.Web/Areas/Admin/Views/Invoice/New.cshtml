@using DH.Helpdesk.Web.Infrastructure

@Scripts.Render("~/bundles/admininvoice")

@model DH.Helpdesk.Web.Areas.Admin.Models.Invoice.InvoiceArticleProductAreaInputViewModel
@{
    ViewBag.Title = "";
}
<script type="text/javascript">
    window.Params = {
        Save: '@Url.Content("~/Invoice/Save")',
    };   
</script>

@using (Html.BeginForm("new", "invoice", new { area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li><input type="button" class="btn" value="@Translation.Get("Spara", Enums.TranslationSource.TextTranslation)" onclick = "SaveArticleProduct('')" /> </li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "ArticleProductAreaIndex", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_InputArticleProductArea", Model)
}
