@model DH.Helpdesk.BusinessData.Models.Invoice.CaseInvoiceSettings

@using (Html.BeginForm("SaveSettings", "Invoice", FormMethod.Post, new { id = "invoice_settings_form" }))
{
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.CustomerId)
    <div class="container">
        <div class="row">
            <div class="span12">
                <table class="tableform">
                    <tr>
                        <td class="span3">
                            @Translation.Get("Export sökväg", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.ExportPath, new { maxlength = "200" })
                        </td>                       
                    </tr>
                    <tr>
                        <td class="span3">
                            @Translation.Get("Valuta", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.Currency, new { maxlength = "50" })
                        </td>                       
                    </tr>
                    <tr>
                        <td class="span3">
                            @Translation.Get("Utfärdare", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.Issuer, new { maxlength = "50" })
                        </td>                       
                    </tr>
                    <tr>
                        <td class="span3">
                            @Translation.Get("Vår referens", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.OurReference, new { maxlength = "50" })
                        </td>                       
                    </tr>
                    <tr>
                        <td class="span3">
                            @Translation.Get("Ordernummer/prefix", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.OrderNoPrefix, new { maxlength = "50" })
                        </td>                       
                    </tr>
                    <tr>
                        <td class="span3">
                            @Translation.Get("Dokumentmall", Enums.TranslationSource.TextTranslation)
                        </td>
                        <td class="span9">
                            @Html.TextBoxFor(m => m.DocTemplate, new { maxlength = "50" })
                        </td>                       
                    </tr>
                </table>
            </div>
        </div>        
    </div>
}
<script type="text/javascript">
    $(function() {
        $("#save_invoice_settings").click(function() {
            $("#invoice_settings_form").submit();
            return true;
        });
    });
</script>