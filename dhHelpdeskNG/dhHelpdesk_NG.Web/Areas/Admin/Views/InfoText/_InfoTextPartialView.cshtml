@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.InfoTextShowViewModel
<div class="content">
    <div class="container">
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span8">
                            <table class="tableform">
                                <tr>
                                    <td>
                                        @Translation.Get("Text:", Enums.TranslationSource.TextTranslation)
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Html.TextAreaFor(model => model.InfoText.Name, new { style = "width:600px; height:125px;", maxlength = "500" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.InfoText.Customer_Id)
                            @Html.HiddenFor(model => model.InfoText.Id)
                            @Html.HiddenFor(model => model.InfoText.Language_Id)
                            @Html.HiddenFor(model => model.InfoText.Type)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

