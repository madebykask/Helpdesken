@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Common.Enums;
@model DH.Helpdesk.Web.Areas.Admin.Models.InfoTextIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="secnavs fixed">
    
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            @switch (Model.InfoTextType)
            {
                case InfoTextTypes.Helpdesk:
                    <li class="active"><a href="#fragment-1">@Translation.Get("Informationstext", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
                    break;
                    
                case InfoTextTypes.SelfService:
                    <li class="active"><a href="#fragment-1">@Translation.Get("Självservice meddelande", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>            
                    break;
            }
            
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover" id="tblinfotext">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Informationstext", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.InfoTextType == InfoTextTypes.SelfService)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 1, customerId = Model.Customer.Id, 
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Självservice välkommen meddelande", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }
                        @if (Model.InfoTextType == InfoTextTypes.Helpdesk)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 2, customerId = Model.Customer.Id, 
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Ny anmälare", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }

                        @if (Model.InfoTextType == InfoTextTypes.Helpdesk)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 4, customerId = Model.Customer.Id,
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Enkät", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }

                        @if (Model.InfoTextType == InfoTextTypes.SelfService)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 5, customerId = Model.Customer.Id,
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Bekräftelse självservice", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }

                        @if (Model.InfoTextType == InfoTextTypes.SelfService)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 6, customerId = Model.Customer.Id, 
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Information självservice", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }

                        @if (Model.InfoTextType == InfoTextTypes.Helpdesk)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "infotext", new { area = "admin", infoTypeId = 7, customerId = Model.Customer.Id,
                                                                                   languageId = Model.Customer.Language_Id, infoTextType = Model.InfoTextType })">
                                        @Translation.Get("Beställning", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        } 

                         @if (Model.InfoTextType == InfoTextTypes.SelfService)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("EditRegMessage", "SelfServiceSetting", new { customerId = Model.Customer.Id })">
                                        @Translation.Get("Självservice registrerings meddelande", Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        } 
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
