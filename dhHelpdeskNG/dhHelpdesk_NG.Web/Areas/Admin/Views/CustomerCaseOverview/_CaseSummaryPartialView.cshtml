@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.CustomerCaseSummaryViewModel 
<div class="row">
    <div class="span5">
        <table class="table table-striped table-bordered table-hover" id="customerCaseSum">
            <thead>
                <tr>
                    <th>
                        @Translation.Get("Kolumn", Enums.TranslationSource.TextTranslation)
                    </th>
                    @*<th>
                        @Translation.Get("Rad", Enums.TranslationSource.TextTranslation)
                    </th>
                    <th>
                        @Translation.Get("Min längd", Enums.TranslationSource.TextTranslation)
                    </th>
                    <th>
                        @Translation.Get("Ordning", Enums.TranslationSource.TextTranslation)
                    </th>*@
                    <th>&nbsp;
                    </th>
                </tr>
            </thead>
            <tbody id="dataTable">
                @if (Model.CaseSettings != null)
                {
                    <tr class="rowAdding">
                        @if (Model.ListSummaryForLabel != null)
                        {
                            <td>
                                <select id="labellist">
                                    @*<option></option>*@
                                    @foreach (var cfs in Model.CaseFieldSettingLanguages)
                                    {
                                        if (cfs.Name != "Filename" && cfs.Name != "text_internal" && cfs.Name != "tblLog.Text_External" && cfs.Name != "tblLog.Text_Internal" && cfs.Name != "tblLog.Charge" && cfs.Name != "tblLog.Filename")
                                        {
                                        <option id="label" value="@cfs.Name">@(string.IsNullOrEmpty(cfs.Label) ? Translation.Get(cfs.Name, Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id) : cfs.Label)</option>  
                                        }
                                    }
                                    <option value="">--------------------------</option>
                                    <option value="_temporary_.LeadTime">@Translation.Get("_temporary_.LeadTime", Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id)</option>
                                    <option value="">--------------------------</option>
                                    <option value="tblProblem.ResponsibleUser_Id">@Translation.Get("tblProblem.ResponsibleUser_Id", Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id)</option>
                                </select>

                                <input id="minWidthValue" type="hidden"  name="minWidthValue"  value="100" />
                                <input id="colOrderValue" type="hidden"  name="colOrderValue"  value="99" />                                
                            </td>      
                            <td>
                                <input class="btn btn-success" type="button" value="@Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation)" id="AddRow" 
                                onclick="addCaseSettingRow()" onmouseover="javascript:this.style.cursor='hand'; javascript:this.style.cursor='pointer';"/>
                                <input type="hidden" id="caseSettingId" value="" />
                            </td>     
                            @*<td style="width: 100px;">
                                <select style="width: 100px;" id="linelist">
                                    <option></option>
                                    @foreach (var line in Model.LineList)
                                    {
                                        <option id="line" value="@line.Value">@line.Text</option>
                                    }
                                </select>
                            </td>                    
                            <td id="minWidth">
                                <input type="text" style="width: 80px;" name="minWidthValue" id="minWidthValue" value="" />
                            </td>
                            <td id="colOrder">
                                <input type="text" style="width: 80px;" name="colOrderValue" id="colOrderValue" value="" />
                            </td>*@
                            
                       
                        }
                    </tr>                 
                    for (var i = 0; i < Model.CaseSettings.Count; i++)
                    {                            
                    <tr>
                        @if (Model.CaseSettings != null)
                        {
                            var findCaption = false;
                            <td>
                                @*<select style="width: 190px;" id="dellabellist" disabled="disabled">*@
                                @*<option></option>*@
                                @foreach (var cfs in Model.CaseFieldSettingLanguages)
                                {   
                                    @*<option id="labels" value="@cfs.Id" @(cfs.Name.ToUpper() == Model.CaseSettings[i].Name.ToUpper() ? "selected=selected" : "")>@(cfs.Label==null? Translation.Get(cfs.Name, Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id): cfs.Label)</option>*@
                                    if (cfs.Name.ToUpper() == Model.CaseSettings[i].Name.ToUpper())
                                    {
                                        <label id="labels">@(string.IsNullOrEmpty(cfs.Label) ? Translation.Get(cfs.Name, Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id) : cfs.Label)</label>                                         
                                        findCaption = true;
                                    }                                        
                                }
                                @if (!findCaption)
                                {
                                    <label for="labels"> @Translation.Get(Model.CaseSettings[i].Name, Enums.TranslationSource.CaseTranslation, SessionFacade.CurrentCustomer.Id) </label>
                                } 
                                @*</select>*@
                                @Html.HiddenFor(model => model.CaseSettings[i].MinWidth)
                                @Html.HiddenFor(model => model.CaseSettings[i].ColOrder)
                                @Html.HiddenFor(model => model.CaseSettings[i].Line)
                            </td> 
                        }
                        <td>
                            <input class="btn btn-danger" type="button" value="@Translation.Get("Ta bort", Enums.TranslationSource.TextTranslation)"
                            onclick="deleteCaseSettingRow(@Model.CaseSettings[i].Id)" onmouseover="javascript:this.style.cursor='hand'; javascript:this.style.cursor='pointer';"/>
                            <input type="hidden" id="deleteCaseSettingsId" value="@Model.CaseSettings[i].Id" />
                        </td>
                        @*<td>
                            <select style="width: 190px;" id="dellinelist">                                
                                @foreach (var line in Model.LineList)
                                {
                                    <option id="lines" value="@line.Value" @(line.Value == Model.CaseSettings[i].Line.ToString() ? "selected=selected" : "")>@line.Text</option>
                                }
                            </select>
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.CaseSettings[i].MinWidth, new { style = "width: 80px;" })

                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.CaseSettings[i].ColOrder, new { style = "width: 80px;" })
                        </td>*@
                        
                    </tr>                                           
                    }
                }
            </tbody>
        </table>
        <input type="hidden" name="usergroupId" id="usergroupId" value="@Model.UserGroupId" />
    </div>
</div>
<script type="text/javascript">

    function addCaseSettingRow() {
        var list = $("#userGroupList");
        $.post('/customercaseoverview/AddRowToCaseSettings/' + '?usergroupId=' + $("#usergroupId").val() + '&customerId=' + $("#customerId").val()
           + '&labellist=' + $("#labellist").val() + '&linelist=1' //+ $("#linelist").val()
           + '&minWidthValue=' + $("#minWidthValue").val() + '&colOrderValue=' + $("#colOrderValue").val(), function (result) {
               list.html(result);
           });
    }

    function deleteCaseSettingRow(id) {
        var list = $("#userGroupList");
        $.post('/customercaseoverview/DeleteRowFromCaseSettings/' + id + '?usergroupId=' + $("#usergroupId").val() + '&customerId=' + $("#customerId").val(), function(result) {
            list.html(result);
        });
    }

</script>
