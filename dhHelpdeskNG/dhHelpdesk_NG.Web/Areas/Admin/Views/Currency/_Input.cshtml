@model dhHelpdesk_NG.Domain.Currency
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("Valuta", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Valuta", Enums.TranslationSource.TextTranslation)</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span8">
                            <table class="tableform">
                                <tr>
                                    <td>
                                        @Translation.Get("Valuta", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td>
                                        @Html.TextBoxFor(model => model.Code, new { maxlength = "50", style = "width: 200px;" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

