@model DH.Helpdesk.Web.Areas.Admin.Models.CausingPart.CausingPartViewModel

<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Causing Part") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    @Html.HiddenFor(m => m.CausingPart.Id)
                    @Html.HiddenFor(m => m.CausingPart.ParentId)
                    @Html.HiddenFor(m => m.CausingPart.CustomerId)
                    @if (Model.Customer != null)
                    {
                        @Html.HiddenFor(m => m.Customer.Name)
                    }
                    @Html.ValidationSummary()
                    <h4>@Translation.Get("Allmänt")</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Rotorsak")
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.CausingPart.Name, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Beskrivning")
                                    </td>
                                    <td>
                                        @Html.TextAreaFor(model => model.CausingPart.Description, new { style = "width:600px; height:125px;", maxlength = "300" })
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <h4>@Translation.Get("Övrigt")</h4>
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Aktivera")
                                    </td>
                                    <td class="span9">
                                        @Html.CheckBoxFor(m => m.CausingPart.IsActive)
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    @if (Model.CausingPart.Children != null && Model.CausingPart.Children.Any())
                    {
                        <h4>@Translation.Get("Causing Part")</h4>
                        <div class="container">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Translation.Get("Causing Part")
                                        </th>
                                        <th>
                                            @Translation.Get("Aktiv")
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @Html.CausingPartsTree(Model.CausingPart.Children.ToList())
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
        </div>
    </div>
</div>
</div>
