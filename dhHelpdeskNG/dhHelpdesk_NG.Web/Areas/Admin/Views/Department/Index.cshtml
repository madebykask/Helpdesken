@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Areas.Admin.Models.DepartmentIndexViewModel
@{
    ViewBag.Title = "Index";
}
<div class="secnavs">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("Avdelning", Enums.TranslationSource.TextTranslation), "new", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Avdelning", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Avdelning", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Kortbeteckning", Enums.TranslationSource.TextTranslation) (@Translation.Get("Sökväg katalog", Enums.TranslationSource.TextTranslation))
                            </th>
                            <th>
                                @Translation.Get("Område", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Aktiv", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Departments)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "department", new { area = "admin", id = item.Id })">@Html.DisplayFor(modelItem => item.DepartmentName)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("edit", "department", new { area = "admin", id = item.Id })">@Html.DisplayFor(modelItem => item.DepartmentId)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("edit", "department", new { area = "admin", id = item.Id })">@Html.DisplayFor(modelItem => item.Region.Name)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("edit", "department", new { area = "admin", id = item.Id })">@Translation.Get(item.IsActive.TranslateBit(), Enums.TranslationSource.TextTranslation)</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
