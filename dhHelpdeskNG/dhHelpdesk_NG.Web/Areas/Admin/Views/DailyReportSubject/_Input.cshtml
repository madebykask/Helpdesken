@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.DailyReportSubjectInputViewModel
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">
        @Translation.Get("Delområde", Enums.TranslationSource.TextTranslation) @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Delområde dagrapport", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Delområde", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.DailyReportSubject.Subject, new { maxlength = "50" })
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="ShowYesNo" @(Model.ShowYesNo == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="ShowYesNo" value="0" />
                                        @Translation.Get("Visa på startsidan", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td></td>
                                    <td><label class="checkbox">
                                        @Translation.Get("Visa", Enums.TranslationSource.TextTranslation)&nbsp;
                                        @Html.DropDownListFor(m => m.StartPageShow, Model.NumberToShowOnStartPage, new { style = "width: 60px" })
                                        @Translation.Get("senaste posterna på startsidan", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        @Translation.Get("Status", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td><label class="checkbox">
                                        <input type="checkbox" name="dailyreportsubject.IsActive" @(Model.DailyReportSubject.IsActive == 1 ? "checked=checked" : "") value="1"/>
                                        <input type="hidden" name="dailyreportsubject.IsActive" value="0" />
                                        @Translation.Get("Aktiv", Enums.TranslationSource.TextTranslation)
                                        </label>
                                    </td>
                                    <td></td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.DailyReportSubject.Customer_Id)
                            @Html.HiddenFor(model => model.DailyReportSubject.Id)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
