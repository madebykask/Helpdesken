@using DH.Helpdesk.Domain
@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.UrgencyInputViewModel
@functions{
    public int GetPriority(IList<PriorityImpactUrgency> lst, int urgency, int impact)
    {
        var piu = lst.Where(x => x.Urgency_Id.GetValueOrDefault(0) == urgency && x.Impact_Id.GetValueOrDefault(0) == impact).FirstOrDefault();

        if (piu == null)
            return 0;

        return piu.Priority_Id;

    }
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-error">@Translation.Get("Brådskandegrad", Enums.TranslationSource.TextTranslation)
        @Translation.Get("som används går inte att ta bort", Enums.TranslationSource.TextTranslation)
    </div>    
}
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Brådskandegrad", Enums.TranslationSource.TextTranslation) - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment1">
                <div class="container">
                    <div class="row">
                        <div class="span12">
                            <table class="tableform">
                                <tr>
                                    <td class="span3">
                                        @Translation.Get("Brådskandegrad", Enums.TranslationSource.TextTranslation)
                                    </td>
                                    <td class="span9">
                                        @Html.TextBoxFor(model => model.Urgency.Name, new { maxlength = "50", style = "width: 200px;" })
                                    </td>
                                </tr>
                            </table>
                            @Html.HiddenFor(model => model.Urgency.Id)
                            @Html.HiddenFor(model => model.Urgency.Customer_Id)
                        </div>
                    </div>
                </div>
                @if (Model.Urgencies.Any() && Model.Impacts.Any())
                {
                    <div class="container">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>&nbsp;
                                    </th>
                                    <th style="width: 100px">&nbsp;
                                    </th>
                                    @foreach (var impact in Model.Impacts)
                                    {
                                        <th style="width: 100px">
                                            @impact.Name
                                        </th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>&nbsp;
                                    </td>
                                    <td>&nbsp;
                                    </td>
                                    @for (var i = 0; i < Model.Impacts.Count; i++)
                                    {
                                        <td>
                                            <select name="lstPriority_0_@(Model.Impacts[i].Id)" style="width: 100px">
                                                <option value=""></option>
                                                @foreach (var priority in Model.Priorities)
                                                {
                                                    <option value="@priority.Id" @if (GetPriority(priority.PriorityImpactUrgencies.ToList(), 0, Model.Impacts[i].Id) == priority.Id)
                                                                                 { 
                                                                         <text>selected="selected"</text>
                                                                                 }>@priority.Name</option>
                                                }
                                            </select>
                                        </td>
                                    }
                                </tr>
                                @for (var i = 0; i < Model.Urgencies.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.Urgencies[i].Name
                                        </td>
                                        <td>
                                            <select name="lstPriority_@(Model.Urgencies[i].Id)_0" style="width: 100px">
                                                <option value=""></option>
                                                @foreach (var priority in Model.Priorities)
                                                {
                                        
                                                    <option value="@priority.Id" @if (GetPriority(priority.PriorityImpactUrgencies.ToList(), Model.Urgencies[i].Id, 0) == priority.Id)
                                                                                 { 
                                                                         <text>selected="selected"</text>
                                                                                 }>@priority.Name</option>
                                                }
                                            </select>
                                        </td>
                                        @for (var j = 0; j < Model.Impacts.Count; j++)
                                        {
                                            <td>
                                                <select name="lstPriority_@(Model.Urgencies[i].Id)_@(Model.Impacts[j].Id)" style="width: 100px">
                                                    <option value=""></option>
                                                    @foreach (var priority in Model.Priorities)
                                                    {
                                            
                                                        <option value="@priority.Id" @if (GetPriority(priority.PriorityImpactUrgencies.ToList(), Model.Urgencies[i].Id, Model.Impacts[j].Id) == priority.Id)
                                                                                     { 
                                                                             <text>selected="selected"</text>
                                                                                     }>@priority.Name</option>
                                                    }
                                                </select>
                                            </td>
                                        }
                                    </tr>                               
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $(function () {
        var validator = $("#target").validate({
            rules: {
                "Urgency.Name": {
                    required: true
                }
            },
            messages: {
                "Urgency.Name": {
                    required: "@Translation.Get("Du måste ange en brådskandegrad", Enums.TranslationSource.TextTranslation)"
                }
            },
            submitHandler: function (form) {
                form.submit();
            }
        });
    });

</script>
