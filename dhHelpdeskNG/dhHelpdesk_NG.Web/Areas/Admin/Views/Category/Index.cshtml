@using DH.Helpdesk.Web.Infrastructure.Extensions
@model DH.Helpdesk.Web.Areas.Admin.Models.CategoryIndexViewModel
@{
    ViewBag.Title = "";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(@Translation.GetCoreTextTranslation("Lägg till") + " " + @Translation.GetCoreTextTranslation("Kategori"), "New", new { customerId = Model.Customer.Id }, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel", Model.Customer)
</div>
@Scripts.Render("~/bundles/admin/Category/index")
<div class="content category admin">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.GetCoreTextTranslation("Kategori") - @Model.Customer.Name</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <span>@Translation.GetCoreTextTranslation("Visa endast aktiva")</span>
                <input type="checkbox" class="switchcheckbox showonly-active" @(Model.IsShowOnlyActive ? "checked" : string.Empty)>
                <table class="table table-striped table-bordered table-hover" id="tblcategory">
                    <thead>
                    <tr>
                        <th>
                            @Translation.GetCoreTextTranslation("Kategori")
                        </th>
                        <th>
                            @Translation.GetCoreTextTranslation("Aktiv")
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                        @Html.CategoryTreeString(Model.Categories, Model.Customer.Id)
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
