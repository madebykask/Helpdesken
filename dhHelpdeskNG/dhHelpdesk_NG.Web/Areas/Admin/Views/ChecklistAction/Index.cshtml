@using DH.Helpdesk.Web.Infrastructure
@using DH.Helpdesk.Web.Infrastructure.Extensions
@model IList<DH.Helpdesk.Domain.ChecklistAction>
@{
    ViewBag.Title = "Index";
}
<div class="secnavs fixed">
    <div class="pull-left">
        <ul class="secnav">
            <li>@Html.ActionLink(Translation.Get("Lägg till", Enums.TranslationSource.TextTranslation) + " " + Translation.Get("åtgärd", Enums.TranslationSource.TextTranslation), "new", null, new { @class = "btn" })</li>
        </ul>
    </div>
    @Html.Partial("_MasterDataPanel")
</div>
<div class="content">
    <div class="container">
        <ul class="nav nav-tabs" id="myTab">
            <li class="active"><a href="#fragment-1">@Translation.Get("Åtgärd", Enums.TranslationSource.TextTranslation)</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane tab-pane-border active" id="fragment-1">
                <table class="table table-striped table-bordered table-hover" id="tblchecklistaction">
                    <thead>
                        <tr>
                            <th>
                                @Translation.Get("Område/Tjänst", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Åtgärd", Enums.TranslationSource.TextTranslation)
                            </th>
                            <th>
                                @Translation.Get("Aktiv", Enums.TranslationSource.TextTranslation)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Url.Action("edit", "checklistaction", new { area = "admin", id = item.Id })">@Html.DisplayFor(modelItem => item.ChecklistService.Name)</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("edit", "checklistaction", new { area = "admin", id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
                                </td>
                                <td>
                                    @Translation.Get(item.IsActive.TranslateBit(), Enums.TranslationSource.TextTranslation)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
