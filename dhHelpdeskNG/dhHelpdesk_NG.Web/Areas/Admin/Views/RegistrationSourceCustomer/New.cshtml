@using DH.Helpdesk.Web.Infrastructure
@model DH.Helpdesk.Web.Areas.Admin.Models.RegistrationSourceInputViewModel
@{
    ViewBag.Title = "";
}
@using (Html.BeginForm("new", "registrationsourcecustomer", new { id = Model.RegistrationSourceCustomer.Id, area = "admin" }, FormMethod.Post, new { id = "target" }))
{
    <div class="secnavs fixed">
        <div class="pull-left">
            <ul class="secnav">
                <li>@Html.ActionLink(Translation.Get("Spara", Enums.TranslationSource.TextTranslation), "new", null, new { onclick = "$('#target').submit();return false;", @class = "btn" })</li>
                <li>@Html.ActionLink(Translation.Get("Avbryt", Enums.TranslationSource.TextTranslation), "Index", new { customerId = Model.RegistrationSourceCustomer.Customer_Id}, new { @class = "btn" })</li>
            </ul>
        </div>
    </div>
    @Html.Partial("_Input", Model)
}
@section Scripts {
    <script type="text/javascript">

        $(function () {

            var validator = $("#target").validate({
                rules: {
                    "RegistrationSourceCustomer.SourceName": {
                        required: true
                    }
                },
                messages: {
                    "RegistrationSourceCustomer.SourceName": {
                        required: "@Translation.GetForJS("Du måste ange en källa", Enums.TranslationSource.TextTranslation)"
                    }
                },
               @* rules: {
                    "RegistrationSourceCustomer.SystemCode": {
                        required: true
                    }
                },
                messages: {
                    "RegistrationSourceCustomer.SystemCode": {
                        required: "@Translation.Get("Du måste ange en systemkod", Enums.TranslationSource.TextTranslation)"
                    }
                },*@
                submitHandler: function (form) {
                    form.submit();
                }
            });
        });
        $("input:text:visible:first").focus();
</script>

}
