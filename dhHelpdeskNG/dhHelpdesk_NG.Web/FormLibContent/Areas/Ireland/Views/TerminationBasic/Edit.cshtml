@model ECT.FormLib.Models.FormModel
@using ECT.FormLib;
@using ECT.FormLib.Models;

@{
    ViewBag.Title = Model.Translate("Ireland") + " - " + Model.Translate("Termination basic");
}

@section Validation {

    @Html.Partial("_Validate", Model)

}

@section Script {
   
    <script>

        validate.run($('#actionState').val());

        $(document).on('change', '#actionState', function (e) {
            var val = $(this).val();
            validate.run(val);
        });
    </script>
    <input type="hidden" id="formGuid" value="@Model.FormGuid" />
}

@Html.Partial("_Edit", Model)
@Html.Partial("_Scripts", Model)