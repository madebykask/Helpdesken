<script>
    

        
        

            
    $('#date_PaymentDate').not(".disabled").datepicker().on('changeDate', function (e) {
        paymentdatenotice();
    });

    $('#PaymentDate').change(function () {
        paymentdatenotice();
    });

    function paymentdatenotice()
    {
        if (noticePaymentDate.length > 0) {
            var noticePaymentDate = $('#notice_PaymentDate');
            var paymentDate = $('#PaymentDate').val();
            var startDate = new Date();
            startDate.setHours(0, 0, 0, 0);

            var format = APIGlobal.DateTime.parseFormat('dd.mm.yyyy');
            var dstartDate = APIGlobal.DateTime.parseDate(paymentDate, format);

            if (dstartDate < startDate.valueOf())
            {
                noticePaymentDate.show();
            }
            else
            {
                 noticePaymentDate.hide();
            }
        }
      };

</script>