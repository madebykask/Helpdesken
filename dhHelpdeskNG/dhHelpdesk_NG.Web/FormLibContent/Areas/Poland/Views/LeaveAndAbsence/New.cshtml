@model DH.Helpdesk.EForm.FormLib.Models.FormModel
@using DH.Helpdesk.EForm.FormLib;
@using DH.Helpdesk.EForm.FormLib.Models;

@{
    ViewBag.Title = Model.Translate("Poland") + " - " + Model.Translate("Leave and absence");
}

@section Script {
    <script type="text/javascript">

        $(function () {
            validate.run(10);
        });

    </script>

     @Html.Partial("_Validate", Model)
}

@using(Html.BeginForm("new", "leaveandabsence", FormMethod.Post, new { area = "poland", enctype = "multipart/form-data" }))
{
    @Html.Partial("_Navigation", Model)
    <div class="container containeralignright">
        @Html.Partial("_CurrentUser")
        @Html.Partial("_ErrorMessage", Model)
        <ul class="nav nav-tabs">
            <li class="active"><a href="#leaveandabsence">@Model.Translate("Leave and absence")</a></li>
        </ul>
        <div class="content">
            <div class="tab-content">
                @Html.Partial("_TabLeaveAndAbsence", Model)
            </div>
        </div>
    </div>
}
