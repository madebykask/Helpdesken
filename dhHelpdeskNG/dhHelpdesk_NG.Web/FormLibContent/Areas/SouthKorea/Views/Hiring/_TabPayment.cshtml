                </tr>
                <tr>
                    <td class="tdstrong">@Model.Label("Participantstatus")</td>
                    <td>@Model.Element("Participantstatus")</td>
                </tr>
                <tr>
                    <td class="tdstrong">@Model.Label("Calculationstartdate")</td>
                    <td>@Model.Element("Calculationstartdate")</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>